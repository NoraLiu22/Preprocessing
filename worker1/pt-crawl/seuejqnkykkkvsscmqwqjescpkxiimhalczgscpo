isible" props="{&quot;ajaxUrl&quot;:&quot;https://api.nextgen.guardianapps.co.uk&quot;,&quot;hasRelated&quot;:true,&quot;hasStoryPackage&quot;:false,&quot;isAdFreeUser&quot;:false,&quot;pageId&quot;:&quot;education/2002/nov/02/research.highereducation&quot;,&quot;isPaidContent&quot;:false,&quot;showRelatedContent&quot;:true,&quot;keywordIds&quot;:&quot;education/research,education/higher-education,education/education,education/science,society/health,lifeandstyle/health-and-wellbeing,society/society,lifeandstyle/lifeandstyle,society/tuberculosis,world/world&quot;,&quot;contentType&quot;:&quot;Article&quot;,&quot;tags&quot;:[{&quot;id&quot;:&quot;education/research&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Research&quot;},{&quot;id&quot;:&quot;education/higher-education&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Higher education&quot;},{&quot;id&quot;:&quot;education/education&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Education&quot;},{&quot;id&quot;:&quot;education/science&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Science&quot;},{&quot;id&quot;:&quot;society/health&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Health&quot;},{&quot;id&quot;:&quot;lifeandstyle/health-and-wellbeing&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Health &amp; wellbeing&quot;},{&quot;id&quot;:&quot;society/society&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Society&quot;},{&quot;id&quot;:&quot;lifeandstyle/lifeandstyle&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Life and style&quot;},{&quot;id&quot;:&quot;society/tuberculosis&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;Tuberculosis&quot;},{&quot;id&quot;:&quot;world/world&quot;,&quot;type&quot;:&quot;Keyword&quot;,&quot;title&quot;:&quot;World news&quot;},{&quot;id&quot;:&quot;type/article&quot;,&quot;type&quot;:&quot;Type&quot;,&quot