          <header role="banner" id="page-title" class="glazed-fluid page-title-container">
            
       <h1 class="page-title page-title_long"><span property="dc:title">The appointment of Judges</span>
</h1>
  



      </header>
    </div>
  

    <div role="main" class="main-container container js-quickedit-main-content clearfix">
        <div class="row">
                
                  <aside class="col-sm-3" role="complementary">
              <div class="region region-sidebar-first">
                                        <section class="views-element-container block block-views block-views-blockarticle-image-block-1 clearfix" id="block-views-block-article-image-block-1">
  
          

      <div class="form-group"><div class="view view-article-image view-id-article_image view-display-id-block_1 js-view-dom-id-c14ed6f758495e69c337cd9dcdeca88d9c1e26e34d04a5492a452569e79b9590">
  
    
      
      <div class="view-content">
      <div class="article-meta">
  
  <ul class="article-meta-item">

          <li></li>
    
  </ul>

</div>

