    <h1 class="headline entry-title">ITV and startup announce Stamford hub, plan hundreds of jobs</h1>
    <!-- e src/business/templates/hearst/article/headline.tpl --><!-- hearst/common/author_name.tpl -->
<p class="byline">By Paul Schott</p>
<!-- e hearst/common/author_name.tpl -->
