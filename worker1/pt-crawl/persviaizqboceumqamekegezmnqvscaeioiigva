    <h1 class="headline entry-title">Stamford train station gets $22.9M for improvements</h1>
    <!-- e src/business/templates/hearst/article/headline.tpl --><!-- hearst/common/author_name.tpl -->
<p class="byline">By Barry Lytton</p>
<!-- e hearst/common/author_name.tpl -->    <span class="timestamp">Updated
        <time itemprop="datePublished" datetime="2018-12-07T22:27:35Z">
            5:27&nbsp;pm EST, Friday, December 7, 2018
        </time>
    </span>
