<script>
(function(window, $) {
	var img_width=$(".flash").width();
	var len=$(".slides li").length;
	var num=0;
	var timer=0;
	$(".dian").css({"left":(img_width - 140) / 2 + "px"})
	$(".slides li").width(img_width);
	$(".slides li img").width(img_width);
	$(".slides").width(img_width*len);
	$(".dian li").mouseover(function(){
		num=$(this).index();
		$('.slides').animate({left: -num * img_width},300);
		$(this).addClass("hover").siblings().removeClass();
	});
	$(".f_left").click(function(){
		if(num==0){
			num=len
		};
		num--;
		$(".slides").animate({left: -num * img_width},300);
		$('.dian li').removeClass('hover');
        $('.dian li').eq(num).addClass('hover')
	});
	$(".f_right").click(function(){
		if(num==len-1){
			num=-1
		};
		num++;
		$(".slides").animate({left: -num * img_width},300);	
		$('.dian li').removeClass('hover');
        $('.dian li').eq(num).addClass('hover')
	});
	function auto(){
		num = ( num + 1) % len;
        $('.slides').animate({left: -num * img_width},300);
        $('.dian li').removeClass('hover');
        $('.dian li').eq(num).addClass("hover").siblings().removeClass("hover");
	};
	var timer=setInterval(auto,5000);
	$(".flash").hover(function () {
        clearInterval(timer);
    }, function () {
        timer = setInterval(auto, 5000);
    })
	
	
	var len2=$(".dian2 li").length;
	var timer2=0;
	var num2=0;
	$(".dian2 li").mouseover(function(){
		num2 = $(this).index();
		$(".slides2 li").eq(num2).addClass("over").siblings().removeClass();
		$(this).addClass("hover").siblings().removeClass();
	});
	
	function auto2(){
		num2 = (num2 + 1) % len2;
		$(".slides2 li").eq(num2).addClass("over").siblings().removeClass();
		$(".dian2 li").eq(num2).addClass("hover").siblings().removeClass();
	}
	timer2 = setInterval(auto2,3000);
	$(".flash2").hover(function () {
        clearInterval(timer2);
    }, function () {
        timer2 = setInterval(auto2, 3000);
    })
	
	$(".d3_nav li").click(function(){
		var nav_index = $(this).index();
		$(".d3_nav li").eq(nav_index).addClass("hover").siblings(".d3_nav li").removeClass("hover");	
		$(".d3_block").eq(nav_index).addClass("hover").siblings(".d3_block").removeClass("hover");	
	});
	

    var img_width3=$(".slides3 li").width();
    var len3=$(".slides3 li").length;
    var index3=0;
    var num3=0;
    var timer3=0;
	var w_w = $(window).width();
    $(".slides3").width(img_width3*len3);
    $(".f_left3").click(function(){
        if(index3==0){
            index3=len3
        };
        index3--;
        $(".slides3").animate({left: -index3 * img_width3},300);
        num3=index3;
    });
    $(".f_right3").click(function(){
        if(index3==len3-1){
            index3=-1
        };
        index3++;
        $(".slides3").animate({left: -index3 * img_width3},300);
        num3=index3;
    });
} (window, window.jQuery));
