            <source data-original="https://media.npr.org/assets/img/2015/04/15/ap901106075_custom-0adaa24afecd77df636228d40041f712bc3ff772-s1400.jpg" type="image/jpeg">
            <img data-original="https://web.archive.org/web/20220312202524/https://media.npr.org/assets/img/2015/04/15/ap901106075_custom-0adaa24afecd77df636228d40041f712bc3ff772-s1400.jpg" alt=""/>
