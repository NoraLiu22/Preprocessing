<script>jQuery(function($) {

    // Adding more input fields when the "+ Add Field" button is clicked
    $('#add-field-button').click(function() {
        var $hidden_searches = $('div.advanced-keyword-search:hidden');
        if ($hidden_searches.length > 0) {
            var $first = $hidden_searches.first();
            $first.slideDown('slow');
        } else {
            $('#max-limit').show();
        }
    });

});</script>


