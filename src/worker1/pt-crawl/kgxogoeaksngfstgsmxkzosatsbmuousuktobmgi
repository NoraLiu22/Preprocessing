            function recupclassbtn(nombtn1) {
                var nombtn = nombtn1;
                var $btn = $(nombtn),
                    target = $btn.data("target"), view = $btn.data("view"), style = $btn.data("style"),
                    blocklinks = $btn.data("blocklinks"), block1 = $btn.data("block1"), block21 = $btn.data("block21"), block22 = $btn.data("block22");

                $(">li", $(nombtn).parent()).each(function () {
                    $(nombtn).removeClass("active");
                });
                $btn.addClass("active");
                $("#" + target).children().animate({opacity: 0}, 300, function () {
                    $("#" + target).removeClass().addClass(view);
                    $("#" + target + " .row .modifstyle").removeClass().addClass(style + " modifstyle");
                    $("#" + target + " .blocklinks").removeClass().addClass(blocklinks + " blocklinks");
                    $("#" + target + " .block1").removeClass().addClass(block1 + " block1");
                    $("#" + target + " .block21").removeClass().addClass(block21 + " block21");
                    $("#" + target + " .block22").removeClass().addClass(block22 + " block22");
                    $("#" + target).children().animate({opacity: 1}, 300);
                });
            }

