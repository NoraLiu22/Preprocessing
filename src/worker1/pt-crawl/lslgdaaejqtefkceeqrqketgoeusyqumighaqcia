    <script type="text/javascript">
        (function ($, window) {

            $('.Tabs').each(function (idx, el) {
                var el_li = $(el).find('>ul>li'),
                    el_cont = $(el).siblings('.choose').find('.Tabs_Content'),
                    el_cur = 0;

                el_cont.eq(0).show();
                el_li.on('mouseenter', function () {
                    el_cur = $(this).index();
                    el_li.removeClass('Cur');
                    $(this).addClass('Cur');
                    el_cont.hide();
                    el_cont.eq(el_cur).show();
                });
            });

        })(window.jQuery, window);
    </script>
    <script src="http://images.china.cn/images1/ch/2021CHI24/swiper-bundle.min.js"></script>
    <script>
        var swiper = new Swiper(".Lesson", {
            slidesPerView: 5,
            spaceBetween: 10,
            loop: true,
            autoplay: {
                delay: 2500,
                disableOnInteraction: false,
            },
        });
    </script>

    <script type="text/javascript">
        (function ($) {
            'use strict';

            // Variable
            var picCur = 0, picSum = $('.bigpic li').size(), wid;

            // Function
            function changePic() {
                $('.bigpic li').hide();
                $('.bigpic li').eq(picCur).fadeTo(200, 1);
                $('.picMenu p').removeClass('cur');
                $('.picMenu p').eq(picCur).addClass('cur');
            }

            function autoPic() {
                picCur += 1;
                picCur %= picSum;
                changePic();
            }

            function hideP(id) {
                var idName = $(id);
                idName.find('p').fadeTo(0, 0.5);
                idName.find('li').on('mouseenter', function () {
                    $(this).find('p').stop(true, true).animate({
                        'bottom': 0
                    });
                }).on('mouseleave', function () {
                    $(this).find('p').animate({
                        'bottom': -$(this).innerHeight()
                    });
                });
            }

            // Action
            $('.bigpic p').fadeTo(0, 0.7);
            $('.left').fadeTo(0, 0.7);
            $('.right').fadeTo(0, 0.7);
            $('.bigpic li').each(function () {
                $('.picMenu').append('<p>&nbsp;<\/p>');
            });
            $('.picMenu p').first().addClass('cur');
            $('.bigpic li').first().show();

            $('.right').on('click', function () {
                picCur += 1;
                picCur %= picSum;
                changePic();
            });
            $('.left').on('click', function () {
                picCur -= 1;
                picCur += picSum;
                picCur %= picSum;
                changePic();
            });
            $('.picMenu p').on('click', function () {
                picCur = $(this).index();
                changePic();
            });
            wid = window.setInterval(autoPic, 5000);
            $('.bigpic').on('mouseenter', function () {
                window.clearInterval(wid);
            }).on('mouseleave', function () {
                wid = window.setInterval(autoPic, 5000);
            });
        })(jQuery);
    </script>
