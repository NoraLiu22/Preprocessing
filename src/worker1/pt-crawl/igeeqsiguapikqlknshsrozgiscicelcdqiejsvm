   {
    document.write('<IMG SRC="../laocoon.jpg" ALT="Laoco&ouml;n" TITLE="Laoco&ouml;n - copy of a statue of ~200 B.C." ALIGN=RIGHT WIDTH=305 HEIGHT=440>');
