    <div class="app-invisible column column-60571" data-id="61758" data-pid="60571">
        <a href="/ChengduCity/" style="text-decoration: none;"><img src="https://obj.shine.cn/files/coverage/2017/07/13/92ec2a7e-9fff-40d6-a4b4-ee59b90ea71e.jpg"><div class="title">Chengdu City</div></a>
        <div style="clear:both;"></div>
    </div>
    <div class="app-visible column column-60571" data-id="61758" data-pid="60571">
        <a href="/ChengduCity/" style="text-decoration: none;"><img src="https://obj.shine.cn/files/coverage/2017/07/13/92ec2a7e-9fff-40d6-a4b4-ee59b90ea71e.jpg"><div class="title title-app">Chengdu City</div></a>
        <div style="clear:both;"></div>
