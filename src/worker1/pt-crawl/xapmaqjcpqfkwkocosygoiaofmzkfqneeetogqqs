                    <script type="text/javascript">
                        function showDefaultEditions()
                        {
                            hideCountryDropdownMenu();

                            $('#edition_dialog .edition-content').hide();

                            $('#edition_dialog #select_container').show();

                            $('#edition_dialog').fadeIn();
                        }

                        function setDefaultEdition()
                        {
                            var defaultEdition = $('input[name="default_edition"]:checked').val();

                            $.cookie('DEFAULT_EDITION', defaultEdition,
                                {
                                    expires:(10 * 365),
                                    path:'/'
                                });

                            hideDefaultEditions();

                            var defaultEditionHomepage = '';

                            if ( defaultEdition == 'africa' )
                            {
                                defaultEditionHomepage = '/page/home';
                            }
                            else
                            if ( defaultEdition == 'americas' )
                            {
                                defaultEditionHomepage = '/page/americas-home';
                            }
                            else
                            if ( defaultEdition == 'australasia' )
                            {
                                defaultEditionHomepage = '/page/australasia-home';
                            }
                            else
                            if ( defaultEdition == 'europe' )
                            {
                                defaultEditionHomepage = '/page/europe-home';
                            }

                            setTimeout(function()
                            {
                                window.location.href = defaultEditionHomepage;
                            }, 300);

                            $('#clear_default_edition_dropdown_item').show();
                        }

                        function showClearDefaultEdition()
                        {
                            hideCountryDropdownMenu();

                            $('#edition_dialog .edition-content').hide();

                            $('#edition_dialog #clear_container').show();

                            $('#edition_dialog').fadeIn();
                        }

                        function clearDefaultEdition()
                        {
                            $.removeCookie('DEFAULT_EDITION',
                                {
                                    path:'/'
                                });

                            hideDefaultEditions();

                            $('#clear_default_edition_dropdown_item').hide();
                        }

                        function hideDefaultEditions()
                        {
                            $('#edition_dialog').fadeOut();
                        }
                    </script>

