    <td width="500" height="40" bgcolor="#d8d5c5"><h2><!-- InstanceBeginEditable name="titel" -->
      B&auml;ume des Wissens
      <!-- InstanceEndEditable --></h2></td>
  </tr>
</table>
<table width="760" border="0" cellspacing="0" cellpadding="0">
  <!-- InstanceBeginRepeat name="textfeld" --><!-- InstanceBeginRepeatEntry -->
  <tr> 
