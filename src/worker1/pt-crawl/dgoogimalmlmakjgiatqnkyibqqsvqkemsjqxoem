          <style id="question">
            .hidden {
    display: none;
}

question[data-type=gap] gap > input.incorrect {
    font-weight: bold;
    color: red;
}


question[data-type=gap] gap > answer, div[id*=question][data-type=gap] gap > input.correct {
    font-weight: bold;
    color: green;
}

