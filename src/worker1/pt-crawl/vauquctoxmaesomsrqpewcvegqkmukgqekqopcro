<script type="text/javascript">

if(typeof(disqus_title) != "undefined") { cnn_metadata.friendly_name = disqus_title; }
else { cnn_metadata.friendly_name = document.title; }

cnn_metadata.template_type = 'content';

//function to parse swf url and find keywords
function cnn_adbpswf(s_url) {

	var t_str = s_url + '';
	var t_arr = t_str.split('/');
	//console.log(t_arr);

	var t_tt = '';
	var t_pos = -1;

	for(i = 0; i < t_arr.length; i++) {

		var t_srch = cnn_adbpsearchstr(t_arr[i]);
		if(t_srch) {
			if((t_pos == -1) || (i < t_pos)) {
				t_pos = i;
				t_tt =  t_srch[1];
			}
		}

	}

	//last check for default
	if(t_tt == '') {
		if(t_str.search(/interactive/i) >= 0) { t_tt = 'interactive'; }
	}

	if(t_tt) { cnn_metadata.template_type_content = t_tt;  }

}


</script>


