//adbp cvp tracking
if(!Object.isUndefined(cnn_metadata)) {

	//track video count
	var cnn_vid_count = 0;
	
	var cnn_adbpmap = cnn_adbpsctnmppng();
	if(cnn_adbpmap.length > 0) { cnn_metadata.section = cnn_adbpmap; }


	//track top video player
	if(typeof(playerOverRide) != "undefined") {
		cnn_metadata.business.cnn.video.video_player = 'story player';
		cnn_vid_count++;
	}
	
	//track partner
	if(typeof(cnnOmniPartner) != "undefined") {
	
		if(cnn_metadata.template_type_content == '') { cnn_metadata.template_type_content = 'partner'; }
		
	}
	
	//count instances of videos
	if(!Object.isUndefined(CNN.expElements)) {
	
		for(var t_obj in CNN.expElements) {
			
			if(CNN.expElements[t_obj].type == 'video') { cnn_vid_count++; }
			
		}
		
	}
	
	//set video count
	cnn_metadata.business.cnn.page.video_embed_count  = cnn_vid_count;
	
	
	//get original publish date
	if(typeof(cnnFirstPub) != "undefined") {
	
		var curr_month = cnnFirstPub.getMonth();
		curr_month++;
		if(curr_month < 10) { curr_month = '0' + '' + curr_month; }
		curr_day = cnnFirstPub.getDate();
		if(curr_day < 10) { curr_day = '0' + '' + curr_day; }
		
		cnn_metadata.business.cnn.page.publish_date = cnnFirstPub.getFullYear() + "/" + curr_month + "/" + curr_day;
	
	}
	
	//if template type not set, do a url path check on the folder only
	if(cnn_metadata.template_type_content == '') {

		var t_str = window.location.href + '';
		t_str = t_str.replace(/index.htm.+$/i, '');
		var t_arr = t_str.split('/');
		var f_str = t_arr[(t_arr.length - 2)];
		
		var t_srch = cnn_adbpsearchstr(f_str);
		if(t_srch) {
			cnn_metadata.template_type_content =  t_srch[1];
		}

	}	
	
}

