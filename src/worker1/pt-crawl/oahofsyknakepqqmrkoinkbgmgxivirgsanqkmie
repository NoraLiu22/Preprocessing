    <script>
        $(".navbar-toggler-icon").click(function () {
            if ($(".ribbon-top-left").is(":visible")) {
                $(".ribbon-top-left").hide();
            } else {
                $(".ribbon-top-left").show();
            }
        });

        $('#mysearch').click(function () {
            $('#finder').submit();
        });
        $('#backsign').click(function () {
            $('#keywords').val('');
            $('#backsign').html('')
        });

        $('.basicAutoComplete').keyup(function () {
            if (($(".basicAutoComplete").val().length) > 0) {
                $('#backsign').html('<i class="fas fa-backspace"></i>')
            } else {
                $('#backsign').html('')
            }
        });

    </script>

    <!-- Script for sidebar interaction -->
    <script>
        $(document).ready(function () {
            // Open sidebar on menu button click
            $('.menu-button').on('click', function () {
                $('#sidebar-menu').addClass('active');
            });

            // Close sidebar on close button click
            $('#close-sidebar').on('click', function () {
                $('#sidebar-menu').removeClass('active');
            });

            // Close sidebar when clicking outside of it
            $(document).on('click', function (event) {
                if (!$(event.target).closest('#sidebar-menu, .menu-button').length) {
                    $('#sidebar-menu').removeClass('active');
                }
            });
        });
    </script>
    
<script src="/static/site/js/bootstrap-autocomplete.js"></script>
    <script>
        $(document).ready(function() {
            $('.basicAutoComplete').autoComplete(
            { minLength: 3 }
            );
            $('.basicAutoComplete').on('autocomplete.select', function (evt, item) {
                $('#finder').submit();
                $('#searchTop').submit();
            });
    });
    
    </script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const sectionsToShowButton = [
            '#_content_section', 
            '#latest-projects', 
            '#latest-resources', 
            '#_latest-training-resources'
        ];
        const floatingButton = document.getElementById('floatingButton');

        function checkVisibility() {
            let shouldShowButton = sectionsToShowButton.some(sectionId => {
                const section = document.querySelector(sectionId);
                if (section) {
                    const rect = section.getBoundingClientRect();
                    console.log(`Checking ${sectionId}: rect.top=${rect.top}, rect.bottom=${rect.bottom}, window.innerHeight=${window.innerHeight}`);
                    return rect.top < window.innerHeight && rect.bottom > 0;
                }
                return false;
            });
            console.log('Should show button:', shouldShowButton);
            floatingButton.style.display = shouldShowButton ? 'block' : 'none';
        }

        window.addEventListener('scroll', checkVisibility);
        checkVisibility();

        floatingButton.addEventListener('click', function() {
            window.location.href = "/map/"; 
        });
    });
    </script>


