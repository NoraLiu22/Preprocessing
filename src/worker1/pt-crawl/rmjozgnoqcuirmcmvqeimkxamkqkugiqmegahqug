<script>
    $(document).ready(function () {
        var searchResults = $('#coursesearchresults');
        var scrollToResults = function scrollToResults() {
            $('html, body').animate({
                scrollTop: searchResults.offset().top
            }, 500);
        }

        $('.j-search-button').on('click', function () {
            $('#page').val("");
            $('#skiptoresults').val("1");
        });

        if ($('#skiptoresults').val() === "1") {
            scrollToResults();
        }
    });
</script>

