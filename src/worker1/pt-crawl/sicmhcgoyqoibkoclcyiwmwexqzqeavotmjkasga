                            <option value="https://tile.loc.gov/storage-services/service/mbrs/berl/09010402/001r.jpg"
                                data-file-download="JPEG"
                                >JPEG&nbsp;(55.9 KB)
                            </option>
                            
                            </option>
                        
                        
                    
                    
                    
                
                    
                    
                    
                    
                    
                        
                            
                            <option value="https://tile.loc.gov/storage-services/master/mbrs/berl/09010402/001.tif"
                                data-file-download="TIFF"
                                >TIFF&nbsp;(2.7 MB)
                            </option>
                            
                            </option>
                        
                        
                    
                    
                    
                
            </select>
            <button class="button-default">Go</button>
            </div>
        
    
