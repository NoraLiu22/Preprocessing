    <div class="app-invisible column column-60571" data-id="61768" data-pid="60571">
        <a href="/People/" style="text-decoration: none;"><img src="https://obj.shine.cn/files/coverage/2023/02/27/22d11141-ecb3-482f-a1f5-67fbc34990ea_0.jpg"><div class="title">People</div></a>
        <div style="clear:both;"></div>
    </div>
    <div class="app-visible column column-60571" data-id="61768" data-pid="60571">
        <a href="/People/" style="text-decoration: none;"><img src="https://obj.shine.cn/files/coverage/2023/02/27/22d11141-ecb3-482f-a1f5-67fbc34990ea_0.jpg"><div class="title title-app">People</div></a>
