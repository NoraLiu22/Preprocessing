                showHideMobileNav();
            });

            $(".navIconWrapper").on("click", function () {
                showHideMobileNav();
                updateMobileNav(window.location.pathname);
            });

            $("#overlay").on("click", function () {
                showHideMobileNav();
            });

            $("#mobileNav a.hasSubPages").on("click", function (e) {
                updateMobileNav($(this).attr('href'));
                e.preventDefault();
            });

