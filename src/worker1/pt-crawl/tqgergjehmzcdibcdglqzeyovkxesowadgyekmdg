<script type="text/javascript">
var blogIDs = new Array();
			(function() {
				var links = $("a[href*='disqus_thread']");
				var query = '?';

				for(var i = 0; i < links.length; i++) {
					var dsqid = links[i].getAttribute('dsqid');
					if(dsqid) {
						query += 'dsqid' + i + '=' + dsqid + '&';
						if(dsqid.search(/^(0?[1-9]|1[0-9]|2[0-2])_/) != -1 && dsqid.length > 5){
							blogIDs.push(dsqid);
						}
					}
				}
				document.write('<script charset="utf-8" type="text/javascript" src="https://web.archive.org/web/20181117040851/http://telegraphuk.disqus.com/get_num_replies_from_dsqid.js' + query + '"></' + 'script>');

			})();

			$(function() {
				for(var i = 0; i < blogIDs.length; i++) {
					$.getJSON('https://web.archive.org/web/20181117040851/http://disqus.com/api/3.0/threads/details.jsonp?callback=?&thread:ident='+ blogIDs[i],
							{	forum: 'telegraphblogs',
								api_key: '2Oj1BYXrIx0TfEYEgUWtwP6JPbac3RVpnAelCJVEmBZuvMxQJqqF89YzPOEz0rTB'},
			        		function(data) {
			        			$("a[href*='disqus_thread']").each(function(i,ele){
			        				if (this.getAttribute('dsqid') == data.response.identifiers[0]){
			        					//document.write('artid: ' + data.response.identifiers[0] + ' counts: ' + data.response.posts);
				        				var thisText = data.response.posts + ' Comments';
				        				$(ele).text(thisText);
			        				};
			        			});
			        		}
					);

				};
			});
		</script>

