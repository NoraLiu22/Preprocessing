           posts.pop();\n                            }\n                        }else{\n                            if(posts.length < 27){\n                                load_more.innerHTML = \'No Further Results\';\n                            }else{\n                                load_more.innerHTML = \'LOAD MORE\';\n                                posts.pop();\n                            }\n                        }\n            \n                        var infinite_section = document.createElement(\'div\');\n                        infinite_section.setAttribute("class" , \'infinite\');\n                        var writer_name, title, img, img_cont, link, card, row, title_info, writer_name_text;\n                        \n                        for(var i = 0; i < posts.length; i++){\n                            if(i == 0 || i % 2 == 0){\n                              row = document.createElement(\'div\');\n                              row.setAttribute("class" , \'card-row\');\n                            }\n                            card = document.createElement(\'div\');\n                            card.setAttribute("class" , \'card-article\');\n            \n                            link = document.createElement(\'a\');\n                            link.setAttribute("href" , posts[i].post_url);\n            \n                            img_cont = document.createElement(\'div\');\n                            img_cont.setAttribute("class" , \'card-article-img-cont\');\n            \n                            img = document.createElement(\'img\');\n                            img.setAttribute("src" , "https://web.archive.org/web/20201211024115/https://mediaproxy.salon.com/width/380/" + posts[i].image);\n            \n                            title = document.createElement(\'h2\');\n                            title_info = document.createTextNode(posts[i].post_title);\n            \n                            title.appendChild(title_info);\n                            img_cont.appendChild(img);\n                            link.appendChild(img_cont);\n                            link.appendChild(title);\n                            // Otherwise use just the one author\'s name\n                            writer = posts[i].author_names;\n            \n                            if(typeof posts[i].source != "undefined" && posts[i].source != "") {\n                                writer += " - " + posts[i].source;\n                            }\n            \n                            writer_name = document.createElement(\'strong\');\n                            writer_name.setAttribute("class" , \'writer\');\n                            writer_name_text = document.createTextNode(writer);\n            \n                            writer_name.appendChild(writer_name_text);\n                            link.appendChild(writer_name);\n                            card.appendChild(link);\n                            row.appendChild(card);\n            \n                            if(i % 2 == 1) infinite_section.appendChild(row);\n                        }\n            \n                        if(result.change === "change"){\n                            document.getElementById(\'posts\').appendChild(infinite_section);\n                        }else{\n                            document.getElementById(\'load-infinite\').appendChild(infinite_section);\n                        }\n                    }\n                    // No more data\n                    else{\n                        load_more.innerHTML = \'No Further Results\';\n                    }\n                }\n                // Errored out\n                else{\n                    load_more.innerHTML = \'An Error Occurred\';\n                }\n            }\n        };\n    }\n    catch(e) {\n        console.log(e);\n    }\n}\n// Get a cookie\nfunction getCookie(cname){\n    var name = cname + "=";\n    var decodedCookie = decodeURIComponent(document.cookie);\n    var ca = decodedCookie.split(\';\');\n\n    for(var i = 0; i <ca.length; i++){\n        var c = ca[i];\n\n        while(c.charAt(0) == \' \') c = c.substring(1);\n\n        if(c.indexOf(name) == 0) return c.substring(name.length, c.length);\n    }\n    \n    return "";\n}\n// Parse json cookie\nfunction parseCookie(cvalue) {\n    try { return JSON.parse(cvalue); }\n    catch(err) { return []; }\n}\n// Set a cookie\nfunction setCookie(cname, cvalue, minutes){\n    console.log(\'setCookie called\');\n    \n    var d = new Date();\n    d.setTime(d.getTime() + (minutes*60*1000));\n    \n    var expires = "expires="+ d.toUTCString();\n    document.cookie = cname + "=" + cvalue + ";" + expires + ";domain=.salon.com;path=/";\n}\n// Search Function\nfunction focustime(){\n    var input = document.getElementById ("search_input"); \n    input.focus();\n}\n// Get Proper RTP version\nfunction getRTPVersion(){\n  try{\n      var proper_cookie = getCookie("proper_rtp_split_test");\n      \n      if(proper_cookie == "") return 0;\n      var json = JSON.parse(proper_cookie);\n      \n      if(json && json.version_id) return json.version_id;\n      else return 0;\n  }\n  catch(e){\n      return 0;\n  }\n}\n\n\n//Ad-free check (LaterPay / Scroll)\nvar adsRemovedWith = false;\n\n// LaterPay check\nif(getCookie(\'access\') != ""){\n    console.log(\'ads removed by Laterpay\');\n    adsRemovedWith = \'laterpay\';\n    salon_config.live_ads = 0;\n}\n// Scroll check\nelse if(getCookie(\'scroll0\') != ""){ \n    console.log(\'ads removed by scroll.com\');\n    adsRemovedWith = \'scroll\';\n    salon_config.live_ads = 0;\n}\n// Salon (stripe) check\nelse if(getCookie(\'salon_ad_free_user\') != ""){ \n    console.log(\'ads removed by Salon.com\');\n    adsRemovedWith = \'salon\';\n    salon_config.live_ads = 0;\n}\n// Shared Premium check \nelse if(getCookie(\'shared_premium\') != ""){ \n    //parse cookie\n    window.sharedPremium = parseCookie(getCookie(\'shared_premium\'));\n\n    //test if active shared subscription (exclude salon users who save $guid\'s for visitng partner sites)\n    if (window.sharedPremium.active && window.sharedPremium.active=="yes" && window.sharedPremium.site && window.sharedPremium.site!="salon") {\n        console.log(\'ads removed by shared premium - \'+window.sharedPremium.site);\n        adsRemovedWith = \'shared_premium_\'+window.sharedPremium.site;\n        salon_config.live_ads = 0;\n    }\n}\n\n// Callback for proper ads\nfunction proper_callback_function(){\n    console.log("Proper callback function found.");\n    \n    if(salon_config.page_type == "article" && salon_config.adblock == 1){\n        return true;\n    }\n\n    return false;\n}\n\n// Hide ad containers for ad-free users\nif(salon_config.live_ads == 0){\n    // Fix css\n    var style = document.createElement(\'style\');\n    style.innerHTML = \'#subscription-mobile, #inline-subscription, #rc-widget-30ad7f, .outer-ad-unit-wrapper, .proper-ad-unit, #salon_auto_video { display: none !important; } .ad-topper { min-height:1em !important; height:1em !important; } .page-category .black-container { min-height:60px !important; height:60px !important; } \';\n    document.head.appendChild(style);\n    window.__SPOTIM_ADS_DISABLED__ = true;\n}\n\n// Load proper script\nif(salon_config.live_ads == 1){\n    // Proper Media\n    if(salon_config.proper_ads == 1 && (!testDropProper)){\n        console.log(\'load proper ads\');\n        \n        var use_adblock=!0,load_proper_message_var=!1;"function"==typeof proper_callback_function&&(use_adblock=proper_callback_function()),window.addEventListener("proper-ad-bidders-blocked",function(){use_adblock&&load_proper_message("load")}),window.addEventListener("properEvents",function(e){var s=document.cookie.match("(^|;)\\\\s*publife_session_data\\\\s*=\\\\s*([^;]+)");!!s&&s.pop()||(use_adblock=!1),"proper-ads-fired"==e.detail.event&&use_adblock&&load_proper_message("whitelist")});var script=document.createElement("script");function load_proper_message(e){var s;!0!==load_proper_message_var&&(load_proper_message_var=!0,(s=document.createElement("script")).type="text/javascript",s.src="https://"+salon_config.adblock_url+"/design/assets/bundle-message.js",s.onload="load"==e?function(){ProperMediaMessage.project.setSiteUrl("https://"+salon_config.adblock_url),ProperMediaMessage.project.show_shield_message(salon_config.user_name,"salon")}:"whitelist"==e||"un-whitelist"==e||"subscribe"==e||"un-subscribe"==e?function(){ProperMediaMessage.project.setSiteUrl("https://"+salon_config.adblock_url),ProperMediaMessage.project.updateUserInfo(e)}:function(){ProperMediaMessage.project.setSiteUrl("https://"+salon_config.adblock_url),ProperMediaMessage.project.updateUserInfo("time")},document.getElementsByTagName("head")[0].appendChild(s))}script.type="text/javascript",script.src="https://web.archive.org/web/20201211024115/https://global.proper.io/salon.min.js",script.onerror=function(){use_adblock&&load_proper_message("load")},document.getElementsByTagName("head")[0].appendChild(script);\n    }\n}\n\n// Counter for load-more button\nif(!window.counter) window.counter = 2;\n\n'}});  </script>

