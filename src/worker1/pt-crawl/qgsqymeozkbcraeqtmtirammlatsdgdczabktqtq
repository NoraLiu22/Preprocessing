se%7D</script></div><script>
      window.onload = () => {
        setTimeout(async function () {
          const el = document.createElement('div')
          const pageViewed = encodeURIComponent(window.location.href)
          const gtmState = window.google_tag_manager && window.google_tag_manager.dataLayer
              ? 'enabled'
              : 'disabled'

          const snowplowState = window.snowplow
              ? 'enabled'
              : 'disabled'

          const bloomreachState = window.exponea
              ? 'enabled'
              : 'disabled'

          const options = {
            method: 'HEAD',
            mode: 'no-cors'
          };

          let adsState

          await fetch('https://z.moatads.com/financialtimesprebidheader859796398452/moatheader.js', options)
            .then((response) => {
              // ads are enabled when adblocker is disabled and the HEAD request passes with status 200 and doesn't redirect
              adsState = 'enabled'

              // ads are disabled when adblocker is enabled and the HEAD request returns status 307 and redirects
              if (response.redirected) {
                adsState = 'disabled'
              }
            }).catch(() => {
              adsState = 'disabled'
            })

          el.innerHTML =
          '<div style="display: none; visibility: hidden;"><img src="https://datacollector.ftadviser.com/collect/event?e=se&aid=FTAdviser&se_ca=3rd_party_checks&url=' +
          pageViewed +
          '&se_ac=gtm:' +
          gtmState +
          '+snowplow:' +
          snowplowState +
          '+bloomreach:' +
          bloomreachState +
          '+ads:' +
          adsState +
          '&se_la=test-pv&p=web&tv=no-js-0.1.0"></img></div>'
        }, 3000)
      };
