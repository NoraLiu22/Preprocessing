    $(document).ready(function () {

        // Randomly select background images/colours for hero panel

        const pageHeroPanel = $('.panel--hero');
        const heroPanelClass = 'panel--hero-image';
        let heroPanelClassVariant = '';

        let randomNumber = Math.floor(Math.random() * 2); // Generate random between 0-2

        console.log(randomNumber);

        switch (randomNumber) {
            case 0:
                heroPanelClassVariant = '--one';
                break;
            case 1:
                heroPanelClassVariant = '--two';
                break;
            case 2:
                heroPanelClassVariant = '--three';
                break;
            default:
                heroPanelClassVariant = '--one';
        }

        pageHeroPanel.addClass(heroPanelClass + heroPanelClassVariant); // Append class to hero element
    });
</script>

