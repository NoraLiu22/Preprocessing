<script type="text/javascript">

    // Reset select field on page load
    document.getElementById('subjectArea').value = '';

        var source, destination, campus, selectedMode;
    var autocompleteSuccess = false;
    var mapLoaded = false;
        var directionsDisplay;
        var directionsService = new google.maps.DirectionsService();
    var searchOptions = {
          componentRestrictions: {country: 'gb'}
    }
    
    
        function GetRoute() {
    
            //*********DIRECTIONS AND ROUTE**********************//
            source = document.getElementById("txtSource").value;
      selectedMode = document.querySelector('input[name=transitmode]:checked').value;
            destination = campus;

            var request = {
                origin: source,
                destination: destination,
                travelMode: google.maps.TravelMode[selectedMode]
            };
      
            directionsService.route(request, function (response, status) {
                if (status == google.maps.DirectionsStatus.OK) {
          document.getElementById('dvError').style.display="none";
          var mapOptions = {
            zoom: 16,
            center: campus
          };
          document.getElementById('transitMode-container').style.display="block";
          document.getElementById('dvMap').style.display="block";
          document.getElementById('dvDistance').style.display="block";
          map = new google.maps.Map(document.getElementById('dvMap'), mapOptions);
          directionsDisplay.setMap(map);
          directionsDisplay.setPanel(document.getElementById('dvPanel'));
                    directionsDisplay.setDirections(response);
          mapLoaded = true;
          var vw = document.documentElement.clientWidth;
          if(vw < 900){
            if($("#transitMode-container").css('display') == 'block'){
              $("html, body").animate({ scrollTop: $("#transitMode-container").offset().top-20 }, 500); 
            }
          };
                } else {
          console.error('there has been an error!');
          document.getElementById('dvError').style.display="block";
        }
            });

            //*********DISTANCE AND DURATION**********************//
            var service = new google.maps.DistanceMatrixService();
            service.getDistanceMatrix({
                origins: [source],
                destinations: [destination],
                travelMode: google.maps.TravelMode[selectedMode],
                unitSystem: google.maps.UnitSystem.METRIC,
                avoidHighways: false,
                avoidTolls: false
            }, function (response, status) {
                if (status == google.maps.DistanceMatrixStatus.OK && response.rows[0].elements[0].status != "ZERO_RESULTS") {
                    var distance = response.rows[0].elements[0].distance.text;
                    var duration = response.rows[0].elements[0].duration.text;
                    //var dvDistance = document.getElementById("dvDistance");
          var calculatedDuration = document.getElementById("calculatedDuration");
          var calculatedDistance = document.getElementById("calculatedDistance");
          //dvDistance.style.display="block";
                    calculatedDuration.innerHTML = "";
          calculatedDistance.innerHTML = "";
                    calculatedDuration.innerHTML += duration;
                    calculatedDistance.innerHTML += distance;

                } else {
                    //alert("Unable to find the distance via road.");
          document.getElementById('dvError').style.display="block";
                }
            });

        }
    
    // Check if both address has been returned and subject area selected
    function checkInputs() {
      var e = document.getElementById('subjectArea');
      var val = e.options[e.selectedIndex].value;
      if(!val == '' && autocompleteSuccess){
          GetRoute();
      };
    }
    
    // Autocomplete service on address input
        google.maps.event.addDomListener(window, 'load', function () {
            var autocomplete = new google.maps.places.Autocomplete(document.getElementById('txtSource'), searchOptions);
            directionsDisplay = new google.maps.DirectionsRenderer();
      autocomplete.addListener('place_changed', function(){
        autocompleteSuccess = true;
        checkInputs();
      });
        });
    
    
    // Add event listener to subject area dropdown - set campus coords to subject area value
    document.getElementById('subjectArea').addEventListener('change', function() {
      var campusName = document.getElementById('transitMode-container').getElementsByTagName('h3')[0].getElementsByTagName('a')[0];
      var val = this.options[this.selectedIndex].value;     
      switch(val){
        case 'curzon':
          campus = new google.maps.LatLng(52.483179, -1.883007); // Curzon Building Coordinates
          campusName.innerHTML = 'Curzon Building, City Centre Campus';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/city-centre-campus/map-and-directions');
          break;
        case 'parkside':
          campus = new google.maps.LatLng(52.482810, -1.885094); // Parkside Building Coordinates
          campusName.innerHTML = 'Parkside Building, City Centre Campus';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/city-centre-campus/map-and-directions');
          break;
        case 'millennium-point':
          campus = new google.maps.LatLng(52.482793, -1.885955); // Millennium Point Coordinates
          campusName.innerHTML = 'Millennium Point, City Centre Campus';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/city-centre-campus/map-and-directions');
          break;
        case 'city-south':
          campus = new google.maps.LatLng(52.467964, -1.924486); // City South Coordinates
          campusName.innerHTML = 'City South Campus';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/city-south-campus/map-and-directions');
          break;
        case 'margaret':
          campus = new google.maps.LatLng(52.481092, -1.903261); // Margaret Street Coordinates
          campusName.innerHTML = 'Margaret Street Campus';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/school-of-art-margaret-street/campus-information');
          break;
        case 'vittoria':
          campus = new google.maps.LatLng(52.486429, -1.91151); // Vittoria Street Coordinates
          campusName.innerHTML = 'Vittoria Street Campus';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/school-of-jewellery');
          break;
        case 'conservatoire':
          campus = new google.maps.LatLng(52.484100, -1.886108); // Conservatoire Coordinates
          campusName.innerHTML = 'Royal Birmingham Conservatoire';
          campusName.setAttribute('href', '/conservatoire/about-us/parking-and-directions');
          break;
        case 'nti':
          campus = new google.maps.LatLng(52.482212, -1.888887); // NTI Coordinates
          campusName.innerHTML = 'New Technology Institute';
          campusName.setAttribute('href', '/about-us/maps-and-campuses/university-house');
          break;
      };
      //console.log('campus set as: ' + val);
      checkInputs();
    });
    
    // Reload map when user changes travel mode
    $('input[name=transitmode]:radio').click(function(){
      if (mapLoaded){
        GetRoute();
      }
    });
    
    window.onload = function() {
        console.log('finished loading');
        document.getElementsByClassName('loading-icon')[0].style.display = "none";
        document.getElementsByClassName('directions-finder')[0].style.display = "block";
    };
    
    </script> 
</div>
        </div>
</div>
