                            <section id="glossary" class="part-type-glossary page tei-parser preview relative" data-location-id="">
                                <hr class="hidden-print">
                                <div class="rw rw-section-head" data-location-id="">
                                    <div class="gtr"><a title="Bookmark this section" href="#glossary" data-bookmark="The Questions of the Nāga King Sāgara (3) / Glossary" class="milestone">g.</a></div>
                                    <div class="rw-heading heading-section chapter">
                                        <header>
                                            <h2 class="section-title">Glossary</h2>
                                        </header>
                                    </div>
                                </div>
                                <div class="nested-section relative bottom-margin attestation-types visible-print-block">
                                    <div data-location-id="" class="rw rw-section-head">
                                        <div class="rw-heading heading-section nested nested-1">
                                            <header>
                                                <h3 class="section-title">Types of attestation for names and terms of the corresponding source language</h3>
                                            </header>
                                        </div>
                                    </div>
                                    <div data-location-id="" class="rw rw-attestation-types">
                                        <div class="small">
                                            <div class="attestation-type" id="att-type-attestedSource">
                                                <div class="code">AS</div>
                                                <div class="detail">
                                                    <h4>Attested in source text</h4>
                                                    <p>This term is attested in a manuscript used as a source for this translation.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="small">
                                            <div class="attestation-type" id="att-type-attestedOther">
                                                <div class="code">AO</div>
                                                <div class="detail">
                                                    <h4>Attested in other text</h4>
                                                    <p>This term is attested in other manuscripts with a parallel or similar context.</p>
                                                </div>
                                            </div>
                                        </div>
