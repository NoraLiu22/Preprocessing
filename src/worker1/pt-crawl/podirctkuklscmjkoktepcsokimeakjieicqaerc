    <script type="text/javascript">
        $(function() {
          
			
//console.log(doctytle);
/*
if(doctytle=="10"){


$("#testUl").append(doctitle);
}else{
            showJsonpData("testUl", "https://www.gov.cn/pushinfo/v150203/pushinfo.jsonp",1);
}
*/
showJsonpData("testUl", "https://www.gov.cn/pushinfo/v150203/pushinfo.jsonp",1);
        });
        function showJsonpData(objId, jsonpUrl, articleLimit) {
            $.ajax({
                url : jsonpUrl,
                dataType : "jsonp",
                jsonp : "pushInfoJsonpCallBack",
                jsonpCallback:"pushInfoJsonpCallBack",
                success : function(data) {
                    $.each(data,function(i, json) {
                        if (i>=articleLimit) return false;
debugger;
                        //var title=json.title;
						var pubDate= json.pubDate
  var doctitle='<a href="https://www.gov.cn/zhengce/content/202404/content_6947737.htm">国际邮轮在中华人民共和国港口靠港补给的规定（全文）</a>';
                                                var crtime="2024-04-26";
						var startTime= new Date(Date.parse(pubDate))
						var endTime = new Date(Date.parse(crtime))
						if(startTime>endTime){
							$("#"+objId).append("<a hre"+"f='"+json.link+"' style='font-size:20px;' target='_blank' title='"+json.title+"'>"+json.title+"</a>");
						}else{
							$("#"+objId).append(doctitle);
						}
 

                        
                    })
                },
                error:function(){
                }
            });
        }
    </script>

