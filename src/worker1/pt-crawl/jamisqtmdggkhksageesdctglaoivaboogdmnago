  </script>
<script>
   perfMetrics.onFirstInputDelay(function(delay, evt) {
    var rtp_version = getRTPVersion();
    console.log('FID Speed Score ('+evt.type+') = '+Math.round(delay)+' *RTP='+rtp_version);
    var score = Math.round(delay);
    if(score>10000) score=10000; //max 10 seconds
    ga('send', 'event', {
      eventCategory: 'SiteSpeed FID',
      eventAction: 'RTP '+rtp_version,
      eventLabel: evt.type,
      eventValue: score,
      nonInteraction: true
    });
  });
  </script>
