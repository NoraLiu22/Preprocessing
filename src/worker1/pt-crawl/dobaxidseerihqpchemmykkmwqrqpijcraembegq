<script type='text/javascript'>
    !function (e, t, n, g, i) { e[i] = e[i] || function () { (e[i].q = e[i].q || []).push(arguments) }, n = t.createElement("script"), tag = t.getElementsByTagName("script")[0], n.async = 1, n.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + g, tag.parentNode.insertBefore(n, tag) }(window, document, "script", "assets.growingio.com/2.1/gio.js", "gio");
    (function () {
        gio('init', '93159901a9261c6b', {});
        var bSendArticle = false;
        var articleID_pvar = "";
        var column_pvar = "";
        var column_firstpvar = "";
        var UpdateTime_pvar = "";

        var metas = document.head.getElementsByTagName("meta");
        for (var i = 0; i < metas.length; i++) {
            if (metas[i].name == "ArticleId") {
                bSendArticle = true;
                articleID_pvar = metas[i].content;
            }
            if (metas[i].name == "ColumnId") {
                var _v = metas[i].content;
                _v = _v.split("/").map(function (i) { return i.replace(/^\s+|\s+$/g, ""); });
                column_firstpvar = _v[0] || "";
                column_pvar = _v[1] || "";
            }
            if (metas[i].name == "ArticlePublishDate") {
                UpdateTime_pvar = metas[i].content.split(' ')[0];
            }
        }
        if (bSendArticle) {
            gio('page.set', "story_pvar", articleID_pvar || "默认值");
            gio('page.set', "col_firstpvar", column_firstpvar || "默认值");
            gio('page.set', "col_pvar", column_pvar || "默认值");
            gio('page.set', "update_pvar", UpdateTime_pvar || "默认值");
            gio('page.set', "story_titlepvar", document.title || "默认值");
            {
                var u = navigator.userAgent;
                var isWeb = navigator.userAgent.indexOf("WCID/SHINE") == -1;
                var isAndroid = u.indexOf('Android') > -1 || u.indexOf('Adr') > -1; //android终端
                var isiOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/); //ios终端
                gio('page.set', "platfm_pvar", isWeb ? "web" : isAndroid ? "android" : isiOS ? "ios" : "app");
            }
        }
        gio('send');
    })();
</script>
