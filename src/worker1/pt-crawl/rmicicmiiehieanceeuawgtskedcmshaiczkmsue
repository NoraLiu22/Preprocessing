            var quarterWidth = mapWidth.offsetWidth * 0.25;

            //Loop through array and add markers
            var marker;
            var currentPosLat;
            var currentPosLang;

            for (i = 0; i < mapLocations.length; i++) {
                //console.log(i);
                //console.log(mapLocations.length);
                marker = new Marker({
                    position: new google.maps.LatLng(mapLocations[i][0], mapLocations[i][1]),
                    map: map,
                    title: mapLocations[i][2],
                    price: mapLocations[i][3],
                    img: "https://bcu.imgix.net/" + mapLocations[i][4],
                    icon: {
                        path: SQUARE_PIN,
                        fillColor: mapLocations[i][5],
                        fillOpacity: 1,
                        strokeColor: '',
                        strokeWeight: 0
                    },
                    map_icon_label: '<span class="map-icon ' + mapLocations[i][6] + '"></span>',
                    description: mapLocations[i][7],
                    features: mapLocations[i][8],
                    url: mapLocations[i][9]
                });


                //Resize marker
                marker.icon.scaledSize = new google.maps.Size(250, 150);

                //Event handler for clicking on marker
                google.maps.event.addListener(marker, "click", function (e) {
                    if (window.innerWidth > 900) {
                        var positionMap = 0 - Math.floor(quarterWidth);
                        map.panTo(this.getPosition());
                        map.panBy(positionMap, 0);
                    }
                    /* disable centering on mobile/tablet
        else {
      map.panTo(this.getPosition());
    }*/

                    currentPosLat = this.getPosition().lat();
                    currentPosLang = this.getPosition().lng();

                    if (!infoPanel.classList.contains('visible')) {
                        infoPanel.className += 'visible';
                    }

                    //Infowindow content constructor

                    infoPanel.getElementsByTagName('img')[0].setAttribute('src', this.img); //Image
                    infoPanel.getElementsByTagName('img')[0].setAttribute('width', 710); //Image
                    infoPanel.getElementsByTagName('img')[0].setAttribute('height', 300); //Image
                    infoPanel.getElementsByTagName('h3')[0].innerHTML = this.title; //Title
                    infoPanel.getElementsByClassName('info-price')[0].innerHTML = this.price; //Price
                    infoPanel.getElementsByClassName('info-desc')[0].innerHTML = this.description; //Description
                    var infoFeatureSpans = infoPanel.getElementsByClassName('info-features')[0]
                        .getElementsByTagName('span');
                    var infoFeatureListItems = infoPanel.getElementsByClassName('info-features')[0]
                        .getElementsByTagName('li'); //Features
                    var additionalCssClasses = " bcu-icon-blue epsilon left mrm";
                    for (var i = 0; i < infoFeatureSpans.length; i++) {
                        //infoFeatures[k].className = this.features[k];
                        switch (this.features[i]) {

                            case "city-center":
                                infoFeatureSpans[i].className = "icon-location" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "City Center";
                                break;
                            case "city-south":
                                infoFeatureSpans[i].className = "icon-location" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "City South";
                                break;
                            case "bcu":
                                infoFeatureSpans[i].className = "icon-lion" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "BCU";
                                break;
                            case "partner":
                                infoFeatureSpans[i].className = "icon-city" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "Partner";
                                break;
                            case "en-suite":
                                infoFeatureSpans[i].className = "icon-shower" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "En-suite";
                                break;
                            case "three-quarter-bed":
                                infoFeatureSpans[i].className = "icon-accommodation" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "Three-Quarter Bed";
                                break;
                            case "double-bed":
                                infoFeatureSpans[i].className = "icon-accommodation" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "Double Bed";
                                break;
                            case "social-study":
                                infoFeatureSpans[i].className = "icon-chat" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "Social/Study";
                                break;
                            case "laundry":
                                infoFeatureSpans[i].className = "icon-laundry" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "Laundry";
                                break;
                            case "gym":
                                infoFeatureSpans[i].className = "icon-gym" + additionalCssClasses;
                                infoFeatureListItems[i].innerHTML = "Gym";
                                break;
                        }
                    }
                    infoPanel.getElementsByTagName('a')[0].setAttribute('href', this.url); //Link
                    document.querySelector('.info__cta-link').focus();

                });


            }; // End of loop

            //Add campuses as POLYGON
            //Define city centre coords
            var cityCentreCoords = [{
                    lat: 52.482689,
                    lng: -1.887374
                },
                {
                    lat: 52.482882,
                    lng: -1.886387
                },
                {
                    lat: 52.483993,
                    lng: -1.886749
                },
                {
                    lat: 52.484336,
                    lng: -1.886001
                },
                {
                    lat: 52.483506,
                    lng: -1.885620
                },
                {
                    lat: 52.483820,
                    lng: -1.884043
                },
                {
                    lat: 52.483464,
                    lng: -1.883871
                },
                {
                    lat: 52.483728,
                    lng: -1.882460
                },
                {
                    lat: 52.482889,
                    lng: -1.881913
                },
                {
                    lat: 52.482562,
                    lng: -1.883259
                },
                {
                    lat: 52.482967,
                    lng: -1.883490
                },
                {
                    lat: 52.482297,
                    lng: -1.887202
                },
                {
                    lat: 52.482689,
                    lng: -1.887374
                }
            ];
            //Create city centre polygon
            var cityCentreShape = new google.maps.Polygon({
                paths: cityCentreCoords,
                strokeColor: '#750099',
                strokeOpacity: 0.7,
                strokeWeight: 0,
                fillColor: '#750099',
                fillOpacity: 0.6
            });
            //click event listener
            //google.maps.event.addListener(cityCentreShape, "click", function (e) {
            //    console.log('shape clicked');
            //});

            //Define city south coords
            var citySouthCoords = [{
                    lat: 52.467901,
                    lng: -1.927030
                },
                {
                    lat: 52.468316,
                    lng: -1.927020
                },
                {
                    lat: 52.468332,
                    lng: -1.926671
                },
                {
                    lat: 52.468531,
                    lng: -1.926666
                },
                {
                    lat: 52.468535,
                    lng: -1.926279
                },
                {
                    lat: 52.468737,
                    lng: -1.926269
                },
                {
                    lat: 52.468744,
                    lng: -1.925099
                },
                {
                    lat: 52.467901,
                    lng: -1.925131
                },
                {
                    lat: 52.467901,
                    lng: -1.927030
                }
            ];
            //Create city centre polygon
            var citySouthShape = new google.maps.Polygon({
                paths: citySouthCoords,
                strokeColor: '#750099',
                strokeOpacity: 0.7,
                strokeWeight: 0,
                fillColor: '#750099',
                fillOpacity: 0.6
            });

            //Define school of art coords
            var schoolArtCoords = [{
                    lat: 52.481233,
                    lng: -1.903461
                },
                {
                    lat: 52.480987,
                    lng: -1.903012
                },
                {
