            function closeInfo() {

                //Close infowindow
                if (infoPanel.classList.contains('visible')) {
                    infoPanel.className = '';
                    document.querySelector('.info__cta-link').blur();
                }

                //Recenter map on desktop
                if (window.innerWidth > 900) {
                    map.panTo(new google.maps.LatLng(currentPosLat, currentPosLang));
                }
            };


            //Close info when by clicking on map
            google.maps.event.addListener(map, 'click', function () {
                if (infoPanel.classList.contains('visible')) {
                    closeInfo();
                }
            });

            //Close info when by clicking on close button in infowindow
            var closeBtn = document.getElementById('close-btn');
            closeBtn.addEventListener('click', function () {
                closeInfo();
            });

            // Close info window with Esc key
            document.addEventListener('keydown', function (e) {

                if (document.activeElement.classList.contains('info__cta-link')) {

                    if (e.key === 'Escape') {
                        console.log('ESCAPE pressed');
                        closeInfo();
                    }
                }

            });



            function panToCampus() {
                var studyArea = this.value;
                selectedCampus = studyArea;
                var num = 0;
                var studyingAtCampus = document.getElementsByClassName('studying-at')[0].getElementsByTagName('span')[
                0];
                var campusesList = document.getElementsByClassName('halls-of-residence__block');
                for (j = 0; j < campusesList.length; j++) {
                    campusesList[j].style.display = "none";
                }

                if (studyArea === "citycentre") {
                    map.panTo(new google.maps.LatLng(52.485330, -1.884724));
                    studyingAtCampus.innerHTML = " City Centre Campus.";
                    const campusBlocks = document.getElementsByClassName('campus--c-center');
                    for(let block of campusBlocks) {
                        block.style.display = "block";
                    }
                    displayCampusOnMap('citycentre');
                }
                if (studyArea === "citysouth") {
                    map.panTo(new google.maps.LatLng(52.468863, -1.914593));
                    studyingAtCampus.innerHTML = " City South Campus.";
                    const campusBlocks = document.getElementsByClassName('campus--c-south');
                    for(let block of campusBlocks) {
                        block.style.display = "block";
                    }
                    displayCampusOnMap('citysouth');
                }
                if (studyArea === "schoolart") {
                    map.panTo(new google.maps.LatLng(52.4811327541648, -1.9032772596190668));
                    studyingAtCampus.innerHTML = " School of Art.";
                    displayCampusOnMap('schoolart');
                }
                if (studyArea === "schooljewellery") {
                    map.panTo(new google.maps.LatLng(52.486315, -1.899597));
                    studyingAtCampus.innerHTML = " School of Jewellery.";
                    displayCampusOnMap('schooljewellery');
                }
                map.setZoom(15);
                document.getElementsByClassName('studying-at')[0].style.display = "block";
            };

            //Subject area changes value, user selects subject
            document.getElementById('subject-area').addEventListener('change', panToCampus);

            if (campusIsDisplaying) {
                displayCampusOnMap(document.getElementById('subject-area').value);
            }

            function displayCampusOnMap(campus) {
                if (campus === 'citycentre') {
                    cityCentreShape.setMap(map);
                    citySouthShape.setMap(null);
                    schoolArtShape.setMap(null);
                    schoolJewelleryShape.setMap(null);
                }
                if (campus === 'citysouth') {
                    cityCentreShape.setMap(null);
                    citySouthShape.setMap(map);
                    schoolArtShape.setMap(null);
                    schoolJewelleryShape.setMap(null);
                }
                if (campus === 'schoolart') {
                    cityCentreShape.setMap(null);
                    citySouthShape.setMap(null);
                    schoolArtShape.setMap(map);
                    schoolJewelleryShape.setMap(null);
                }
                if (campus === 'schooljewellery') {
                    cityCentreShape.setMap(null);
                    citySouthShape.setMap(null);
                    schoolArtShape.setMap(null);
                    schoolJewelleryShape.setMap(map);
                }
                campusIsDisplaying = true;
            }


        } // End if statement

    }; // End initialize

    google.maps.event.addDomListener(window, 'load', initialize);


    window.addEventListener('resize', function () {

        selectedCampus = document.getElementById('subject-area').value;
        if (selectedCampus === '' || selectedCampus === 'citycentre') {
            map.panTo(new google.maps.LatLng(52.485330, -1.884724));
        }
        if (selectedCampus === 'citysouth') {
            map.panTo(new google.maps.LatLng(52.468863, -1.914593));
        }
        if (selectedCampus === 'schooljewellery') {
            map.panTo(new google.maps.LatLng(52.48643872493908, -1.9115110812666671));
        }
        if (selectedCampus === 'schoolart') {
            map.panTo(new google.maps.LatLng(52.481131160012545, -1.9032775308572556));
        }

    });
</script>

