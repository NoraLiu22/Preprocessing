    <script>
    $(document).ready(function () {
    
        // Randomly select background images/colours for hero panel
    
        const clearingHeroPanel = $('.clg-hero');
        const heroPanelClass = 'clg-hero';
        let heroPanelClassVariant = '';
    
        let randomNumber = Math.floor(Math.random() * 4); // Generate random between 0-4
        switch (randomNumber) {
            case 0:
                heroPanelClassVariant = '--frost';
                break;
            case 1:
                heroPanelClassVariant = '--pink';
                break;
            case 2:
                heroPanelClassVariant = '--blue';
                break;
            case 3:
                heroPanelClassVariant = '--peach';
                break;
            default:
                heroPanelClassVariant = '--frost';
        }
    
        // Append class to hero element
        clearingHeroPanel.addClass(heroPanelClass + heroPanelClassVariant); 
        
        // Append to contact panel
        if($('.clg-contact')) {
            $('.clg-contact').addClass('clg-contact' + heroPanelClassVariant);
            $('.clg-contact__link').addClass('clg-contact__link' + heroPanelClassVariant);
        }
    });
    </script>
        </div>
