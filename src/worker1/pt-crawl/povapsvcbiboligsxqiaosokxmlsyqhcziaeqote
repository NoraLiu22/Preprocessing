<script>

$(document).ready(function(){
    
    var contentTop, winHeight, panelHeight;
    
	$('.find-a-course--button').click(function(){
			
            //scroll window
            contentTop = $(".hero--search--panel").offset().top;
            winHeight = $(window).height();
            panelHeight = $(".hero--search--panel").outerHeight();
        
            console.log('contentTop = ' + contentTop);
            console.log('winHeight = ' + winHeight);
            console.log('panelHeight = ' + panelHeight);
        
            $('html, body').animate({
                scrollTop: (contentTop - winHeight) + panelHeight
            }, 300);

        
	});

});

</script>
