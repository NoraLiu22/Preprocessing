    <script type="text/javascript" src="https://d11qvh2fgoiqjh.cloudfront.net/static/hitcount/jquery.postcsrf.52fbbe0e27ed.js"></script>


    <script>
        $(document).ready(function() {
            // $("img").unveil();
            $.ajax({
                type: 'POST',
                url: "/checkedition/",
                data: {region: "China"},
                success: function (response) {
                    console.log(response);
                    var show_edition_alert = response["show_edition_alert"];
                    var recommended_edition = response["recommended_edition"];
                    var recommended_edition_i18n = recommended_edition;
                    if (show_edition_alert === true) {
                        if (!$.cookie("eb_hideCountryAlert")) {
                            $("#edition-alert").data("eb-recommended-edtion", recommended_edition);

                            if (recommended_edition === "International") {
                                $("#geolocationAlertMsg-International").removeClass("eb-normalise-visually-hidden");
                            } else if (recommended_edition === "Asia Pacific") {
                                $("#geolocationAlertMsg-AsiaPacific").removeClass("eb-normalise-visually-hidden");
                            } else if (recommended_edition === "China") {
                                $("#geolocationAlertMsg-China").removeClass("eb-normalise-visually-hidden");
                            } else if (recommended_edition === "Europe") {
                                $("#geolocationAlertMsg-Europe").removeClass("eb-normalise-visually-hidden");
                            } else if (recommended_edition === "USA") {
                                $("#geolocationAlertMsg-USA").removeClass("eb-normalise-visually-hidden");
                            }

                            $("#edition-alert__recommended-edition").text(recommended_edition_i18n);
                            $("#edition-alert").removeClass("eb-message--closed");
                        }
                    }
                },
                error: function (response) {
                    // alert the error if any error occured
                }
            });

            $("#edition-alert__cta").click(function() {
                var newEdition = $("#edition-alert").data("eb-recommended-edtion");
                var next = $("#js-editionForm > input[name='next']");
                var region = $("#js-editionForm > input[name='region']");
                var editonsAction = $(`.editons--action[data-region="${newEdition}"]`);

                next_url = editonsAction.attr("href");
                next.val(next_url);
                new_region = editonsAction.data("region");
                region.val(new_region);
                $("#js-editionForm").submit();
            });
            $("#edition-alert__cta--close").click(function() {
                $("#edition-alert").addClass("eb-message--closed");
                $.cookie("eb_hideCountryAlert", "hide", {
                    expires: 14,
                    path: "/",
                    secure: true
                });
            });

            const quoteTitle = document.getElementById("eb-home-quotes-quote");
            quoteTitle.style.height = `${quoteTitle.clientHeight}px`;
            const quoteText = quoteTitle.textContent.trim();
            quoteTitle.textContent = "";

            gsap.registerPlugin(TextPlugin);
            gsap.registerPlugin(ScrollTrigger);

            let quoteTween = gsap.to(quoteTitle, {
                text: {
                    value: quoteText,
                },
                duration: 4,
                delay: 0.4,
                ease: "none",
                scrollTrigger: {
                    trigger: quoteTitle,
                    scrub: false,
                },
            });
        });
    </script>
    <script>
        const topicsSection = document.querySelector('.eb-container--topics');
        const topicsCarousel = topicsSection.querySelector('.eb-carousel--topics');
        const nextBtn = topicsSection.querySelector('.eb-carousel__btn--next');
        const prevBtn = topicsSection.querySelector('.eb-carousel__btn--prev');
        const itemWidth = topicsSection.querySelector('.eb-carousel__item').clientWidth+20;

        nextBtn.addEventListener('click', scrollToNextItem);
        prevBtn.addEventListener('click', scrollToPrevItem);

        function scrollToNextItem() {
            if(topicsCarousel.scrollLeft < (topicsCarousel.scrollWidth - itemWidth))
                // The scroll position is not at the beginning of last item
                topicsCarousel.scrollBy({left: itemWidth, top: 0, behavior:'smooth'});
            else
                // Last item reached. Go back to first item by setting scroll position to 0
                topicsCarousel.scrollTo({left: 0, top: 0, behavior:'smooth'});
        }

        function scrollToPrevItem() {
            if(topicsCarousel.scrollLeft != 0)
                // The scroll position is not at the beginning of first item
                topicsCarousel.scrollBy({left: -itemWidth, top: 0, behavior:'smooth'});
            else
                // This is the first item. Go to last item by setting scroll position to scroller width
                topicsCarousel.scrollTo({left: topicsCarousel.scrollWidth, top: 0, behavior:'smooth'});
        }
    </script>
    <script>
        const featureSeriesSection = document.querySelector('.eb-container--feature-series');
        const featureSeriesCarousel = featureSeriesSection.querySelector('.eb-carousel--feature-series');
        const nextBtnFS = featureSeriesSection.querySelector('.eb-carousel__btn--next');
        const prevBtnFS = featureSeriesSection.querySelector('.eb-carousel__btn--prev');
        const itemWidthFS = featureSeriesSection.querySelector('.eb-carousel__item').clientWidth+20;

        nextBtnFS.addEventListener('click', scrollToNextItem);
        prevBtnFS.addEventListener('click', scrollToPrevItem);

        function scrollToNextItem() {
            if(featureSeriesCarousel.scrollLeft < (featureSeriesCarousel.scrollWidth - itemWidthFS))
                // The scroll position is not at the beginning of last item
                featureSeriesCarousel.scrollBy({left: itemWidthFS, top: 0, behavior:'smooth'});
            else
                // Last item reached. Go back to first item by setting scroll position to 0
                featureSeriesCarousel.scrollTo({left: 0, top: 0, behavior:'smooth'});
        }

        function scrollToPrevItem() {
            if(featureSeriesCarousel.scrollLeft != 0)
                // The scroll position is not at the beginning of first item
                featureSeriesCarousel.scrollBy({left: -itemWidthFS, top: 0, behavior:'smooth'});
            else
                // This is the first item. Go to last item by setting scroll position to scroller width
                featureSeriesCarousel.scrollTo({left: featureSeriesCarousel.scrollWidth, top: 0, behavior:'smooth'});
        }
    </script>

</body>
