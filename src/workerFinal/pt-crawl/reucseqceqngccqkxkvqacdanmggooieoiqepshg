            i=0,
            slot = new Array();

            if (dfpslots.length) {
                googletag.cmd.push(function() {
                    $(dfpslots).each(function(){
                        if ($(this).attr('data-sizes')) {
                            var sizes = $(this).data('sizes');
                            for (var i=0; i < sizes.length; i++){
