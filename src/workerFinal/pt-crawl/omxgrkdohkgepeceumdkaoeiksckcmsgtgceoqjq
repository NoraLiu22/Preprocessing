	<script type="text/javascript">
		// Helper to grab URL query parameters and convert to js object
		function getQueryParameters()
		{
			var vars = [], hash;
			var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
			for(var i = 0; i < hashes.length; i++)
			{
				hash = hashes[i].split('=');
				vars.push(hash[0]);
				vars[hash[0]] = hash[1];
			}
			return vars;
		}
		
		// Grab the utm email if it exists
		var queryParamUtmEmail = decodeURIComponent(getQueryParameters()['utm_email']);

		// Set the Nosto email tag with email query param
		if(queryParamUtmEmail != 'undefined'){
			$(".nosto_customer").find(".email").text(queryParamUtmEmail);
            $(".nosto_customer").find(".marketing_permission").text('true');
		} else {
            $(".nosto_customer").find(".marketing_permission").text('false');
        }
	</script>

