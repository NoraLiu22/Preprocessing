  <section id="restoring-asias-roar" class="slider-slice_container paragraph-container">
    <section class="text_link_carousel " aria-labelledby="carousel-heading">
            <div class="article_wrapper text-link-heading-container">
                <h3>
            RESTORING ASIA’S ROAR
        </h3>
                      </div>
            <div class="splide">
        <div class="splide__track article_wrapper">
          <ul class="splide__list">
                                                                    <li class="splide__slide">
                <figure>
                  <img src="https://www.wwf.org.uk/sites/default/files/styles/text_link_carousel_slider_320/public/2022-08/Potential%20future%20only%201080x1080.png?h=57024e64&amp;itok=efvRPtW7"
                       srcset="https://www.wwf.org.uk/sites/default/files/styles/text_link_carousel_slider_320/public/2022-08/Potential%20future%20only%201080x1080.png?h=57024e64&amp;itok=efvRPtW7 320w,
                           https://www.wwf.org.uk/sites/default/files/styles/text_link_carousel_slider_640/public/2022-08/Potential%20future%20only%201080x1080.png?h=57024e64&amp;itok=4avskMNo 640w,
                           https://www.wwf.org.uk/sites/default/files/styles/text_link_carousel_slider_768/public/2022-08/Potential%20future%20only%201080x1080.png?h=57024e64&amp;itok=-CIV9Fve 768w,
