    <script type="text/javascript">
        $(document).ready(function () {
            Navigation.init('/cast-staff');

            var amazonLightModal = new LightModal('#amazon-links');
            amazonLightModal.Init();

            $('#amazon-popup').click(function () {
                amazonLightModal.Show();
            });

            var audioLightModal = new AudioLightModal('#audio-player', "audio-iframe");
            audioLightModal.Init();

            $('#audio-popup').click(function () {
                audioLightModal.Show();
            });

            var gallery = new Gallery($('#gallery'));
            gallery.Init();

            $('#logo-img').on('click', function () {
                gallery.Show();
            });

            window.addEventListener("hashchange", function (e) {
                if ($('.person-tabs ul.tabs.main-tabs > li.tab > a.active').length) {
                    var activeTabHref = $('.person-tabs ul.tabs.main-tabs > li.tab > a.active').attr('href').split('#')[1];
                    var newUrlHref = e.newURL.split('#')[1];

                    if (activeTabHref !== newUrlHref) {
                        $('.person-tabs ul.tabs.main-tabs').tabs('select', newUrlHref);
                    }

                    if (!$('.person-tabs ul.tabs.main-tabs > li.tab > a[href="#' + newUrlHref + '"]').length) {
                        $('ul.tabs.credits-tabs').tabs('select', newUrlHref);
                    }

                    if (!newUrlHref) {
                        $('.person-tabs ul.tabs.main-tabs').tabs('select', $('.person-tabs ul.tabs.main-tabs > li.tab:first-child > a').attr('href').split('#')[1]);
                    }
                }
            });

            $('ul.tabs.credits-tabs > li.tab > a').on('click', function (e) {
                $active = $(this);
                window.location.hash = $active.attr('href');
            });

            var numSeeAlso = 0,
                btnMoreSeeAlso = $("#see-also-show-more"),
                seeAlsoContainer = $(".see-also-list-container"),
                seeAlsoList = $(".see-also-list");

            if (seeAlsoList.height() > 210) {
                seeAlsoContainer.addClass("long-list");
                btnMoreSeeAlso.show();
                btnMoreSeeAlso.click(function () {
                    var isCollapsed = $(this).data("collapsed");
                    if (isCollapsed) {
                        seeAlsoContainer.removeClass("collapsed long-list");
                        $(this).html("- Collapse");
                    } else {
                        seeAlsoContainer.addClass("collapsed long-list");
                        $(this).html("+ More");
                    }
                    $(this).data("collapsed", !isCollapsed);
                });
            }
        });

        function findoutwhere_onclick() {
            if ($('#SearchCommonPerson').val().trim().length > 0) {
                location.href = '/Search/CommonPerson/7257/' + $('#SearchCommonPerson').val().replace("/", "%5E") + '/1';
            }
        }
    </script>


    

    

    

    <script type="text/javascript">

        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations().then(
                function (registrations) {
                    for (let registration of registrations) {
                        registration.unregister().then(function () { return self.clients.matchAll(); }).then(function (clients) {
                            clients.forEach(client => { if (client.url && "navigate" in client) { client.navigate(client.url); } });
                        });
                    }
                }
            );
        }

    </script>

