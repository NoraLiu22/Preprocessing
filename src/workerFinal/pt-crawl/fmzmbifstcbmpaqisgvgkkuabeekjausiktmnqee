  <div class="section_title">Newsletters</div>

  <div class="details">
    <h2 class="heading">Subscribe to our newsletters and stay ahead of the curve</h2>

    <p class="description">
All the biggest stories, expert analysis and data, straight to your inbox.    </p>
  </div>

  <div class="signup">
<form method="post">
      <div class="newsletters">
          <div class="newsletter_wrapper">
            <input
              class="newsletter"
              id="bceecba53c"
                  data-endpoint="/newsletters/subscribe/bceecba53c"
  formaction="https://gamer-network.us15.list-manage.com/subscribe/post?u=b9e2ea3c5bf495a0ea0f662c6&amp;id=bceecba53c"

              type="checkbox"
              checked
              data-name="GI Daily"
            >
            <label for="bceecba53c" class="newsletter_label">GI Daily</label>
          </div>
          <div class="newsletter_wrapper">
            <input
              class="newsletter"
              id="e296a6c6a1"
                  data-endpoint="/newsletters/subscribe/e296a6c6a1"
  formaction="https://gamer-network.us15.list-manage.com/subscribe/post?u=b9e2ea3c5bf495a0ea0f662c6&amp;id=e296a6c6a1"

              type="checkbox"
              checked
              data-name="GI Market Report"
            >
            <label for="e296a6c6a1" class="newsletter_label">GI Market Report</label>
          </div>
          <div class="newsletter_wrapper">
            <input
              class="newsletter"
              id="a026197bf6"
                  data-endpoint="/newsletters/subscribe/a026197bf6"
  formaction="https://gamer-network.us15.list-manage.com/subscribe/post?u=b9e2ea3c5bf495a0ea0f662c6&amp;id=a026197bf6"

              type="checkbox"
              checked
              data-name="Partner Emails"
            >
            <label for="a026197bf6" class="newsletter_label">Partner Emails</label>
          </div>
      </div>

        <div class="email_wrapper">
          <input aria-label="Email" type="email" placeholder="Enter your email address" name="EMAIL" required>
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_b9e2ea3c5bf495a0ea0f662c6_bceecba53c" tabindex="-1" value=""></div>
            <button
    class="button small"
    type="submit"
  >
Sign up  </button>

          <div class="alert hidden"></div>
        </div>
      </form>
  </div>


  <script>
    (function(){
      const target = document.currentScript;
      const section = target.closest('.newsletter_promo');
      const csrfToken = section.querySelector('input[name="csrfmiddlewaretoken"]');
      const inputs = section.querySelectorAll('.newsletter');
      const submitButton = section.querySelector('.button');
      const email = section.querySelector('input[name="EMAIL"]');
      const featuredNewsletter = !inputs.length && submitButton.dataset.endpoint;
      let inputCheckedCounter = Array.from(inputs).filter((input) => input.checked).length;

      inputs.forEach(input => input.addEventListener('change', () => {
        if (input.checked) inputCheckedCounter++;
        else inputCheckedCounter--;

        submitButton.disabled = inputCheckedCounter <= 0;
      }));

      submitButton.addEventListener('click', (e) => {
        if (email && !email.checkValidity()) return;
        e.preventDefault();

        submitButton.classList.add('loading');
        hideAlerts();

        if (featuredNewsletter) {
          signUpRequest(submitButton, email, csrfToken);
        } else {
          inputs.forEach(input => {
            if (input.checked) {
              signUpRequest(input, email, csrfToken);
            }
          });
        }

        submitButton.classList.remove('loading');
      });

      const signUpRequest = (el, email, csrfToken) => {
        const { endpoint } = el.dataset;
        const data = {};
        if (email) data['email'] = email.value;
        const headers = {
          'X-Requested-With': 'XMLHttpRequest',
        };
        if (csrfToken) headers['X-CSRFToken'] = csrfToken.value;
        fetch(endpoint, {
          method: 'POST',
          body: JSON.stringify(data),
          headers,
        })
          .then(response => {
            if (!response.ok) throw new Error();
            return response.json();
          })
          .then(json => {
            el.disabled = true;
            submitButton.disabled = true;
            if (json.success === true) {
              updateAlert('You have successfully subscribed', 'success');
            } else throw new Error();
          })
          .catch(error => {
            updateAlert(`We weren\'t able to subscribe you, please <a href="/contact-us">contact us</a> for more information.`, 'error');
          });
      };

      const updateAlert = (text, classList) => {
        const alert = section.querySelector('.alert');
        alert.classList = `alert ${classList}`;
        alert.innerHTML = text;
        alert.classList.remove('hidden');
      }

      const hideAlerts = () => {
        const alerts = section.querySelectorAll('.alert');
        alerts.forEach((alert) => {
          alert.classList.add('hidden');
        });
      }
    })()
  </script>
</section>
