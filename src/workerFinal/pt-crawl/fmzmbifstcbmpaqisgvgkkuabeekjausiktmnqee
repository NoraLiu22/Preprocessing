<script>
  document.addEventListener('DOMContentLoaded', () => {
    window._paq = window._paq || [];

    const sendPiwikEvent = (action, label, position=null, category='navigation') => {
      const data = [category, action];
      if (label) data.push(label);
      if (label && Number.isInteger(position)) data.push(position);
      window._paq.push(['trackEvent', ...data]);
    };

    const sendPiwikTrackEvent = (distance, action='article-content') => {
      const data = ['trackEvent', 'custom page scroll', action, distance];
      window._paq.push(data);
    };

    const registerClicks = (selector, action, labelOverride=null, position=null, parent=document) => {
      parent.querySelectorAll(selector).forEach((item, index) => {
        item.addEventListener('click', () => {
          const label = piwikLabel(item, labelOverride);
          sendPiwikEvent(action, label.join(' | '), position);
        });
      });
    };

    const piwikLabel = (el, labelOverride) => {
      const label = [labelOverride || el.textContent.trim()];
      const href = el.getAttribute('href');
      if (href) {
        let url;
        try {
          url = new URL(href);
        } catch {
          url = window.location.origin + href;
        }
        label.push(url);
      }
      return label;
    }

    const registerSectionClicks = (selector, action) => {
        document.querySelectorAll(selector).forEach((section) => {
          const sectionTitle = section.querySelector('.section_title');
          const label = sectionTitle ? sectionTitle.textContent.trim() : 'no label';
          section.querySelectorAll('.summary').forEach((summary, position) => {
            registerClicks('a', action, label, position + 1, summary);
          });
        });
    };

    registerClicks('.app_header .nav_primary a', 'main navigation menu');
    registerClicks('.app_header .nav_trending a', 'main navigation menu', labelOverride='Trending');
    registerClicks('.app_header .nav_archives a', 'main navigation menu', labelOverride='Platform');
    registerClicks('.app_header .nav_secondary a', 'sub navigation menu');






    const linkElements = document.querySelectorAll('a[data-dtm], button[data-dtm]');
    if (linkElements.length > 0) {
      linkElements.forEach((el) => {
        const action = el.dataset.dtm;
        if (action) {
          const label = piwikLabel(el);
          el.addEventListener('click', () => {
            sendPiwikEvent(action, label.join(' | '), position=null, category='conversion driver');
          });
        }
      });
    }

    const searchParams = new URLSearchParams(window.location.search);
    const eventCategory = searchParams.get('event_category');
    const eventAction = searchParams.get('event_action');
    if (eventCategory && eventAction) window._paq.push(['trackEvent', eventCategory, eventAction]);
  });
