// Chrome 61 scrollingElement duck punch
jQuery(function () {
  var _origScrollable = jQuery.fn._scrollable;

  var _newScrollable = function() {
    var scrollable = _origScrollable.apply(this, arguments);

    if (scrollable.is('body')  && document.scrollingElement) {
      return jQuery(document.scrollingElement);
    } else {
      return scrollable;
    }
  };

  jQuery.fn._scrollable = _newScrollable;
});
</script>

