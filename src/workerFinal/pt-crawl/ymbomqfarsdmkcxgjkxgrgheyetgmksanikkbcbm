		function deferUntil(condition, callback, timeout) {
			timeout = timeout || 10;

			// Wait until the condition is achieved
			var defer_interval = setInterval(function() {
				var condition_met = (condition && (typeof condition == 'function')) ? condition() : true;
				if (!condition_met) {
					return;
				}

				if (callback && (typeof callback == 'function')) {
					callback();
				}

				// Clear the defer_interval
				clearInterval(defer_interval);
			}, timeout);
		}
	</script>



	
