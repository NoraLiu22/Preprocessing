                var App = App || {};
                App.ArticleSplitScreen = App.ArticleSplitScreen || {};
                App.ArticleSplitScreen.siteName = 'jama';
                App.ArticleSplitScreen.siteId = 3;
                App.ArticleSplitScreen.journalId = 67;
                App.ArticleSplitScreen.adDisplay = 'ArticleContentsSkyBox';
                App.ArticleSplitScreen.adSection = "scholarly";
                App.ArticleSplitScreen.adPosition = "contab";
