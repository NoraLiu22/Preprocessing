    <script>
      /***  Port of Area 17 Helper until new platform is established.*  Based on http://www.quirksmode.org/js/cookies.html*  @param  name - name within cookie to examine*  @returns  value - value associated with that name or null if not found*/ function sciamReadCookie(
        name
      ) {
        if (name) {
          var nameEQ = name + "=";
          var ca = document.cookie.split(";");
          for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == " ") {
              c = c.substring(1, c.length);
            }
            if (c.indexOf(nameEQ) === 0) {
              return c.substring(nameEQ.length, c.length);
            }
          }
          return null;
        }
        return null;
      }
      /* Current metered paywall implementation has eligible articles user has previously read, not including the current article being read */ var userNumArticlesPrevRead =
        (JSON.parse(sciamReadCookie("spw_l")) || []).length;
      window.dataLayer = window.dataLayer || [];
      var newDataLayer = {
        content: {
          platform: "mura",
          /* String: which platform are we on? Currently, the value is "mura" */ language:
            dataLayer[0].content.attributes.language || "en",
          /* Two-letter language code representing what language the content is written in */ primaryCategory:
            dataLayer[0].content.category.subjectType || "",
          /* String: Primary category for content (e.g. Technology, Health) */ subCategory:
            dataLayer[0].content.category.subjectSubType1 || "",
          /* String: Subcategory for content (e.g. Engineering under Technology) */ subtype:
            dataLayer[0].content.category.contentSubType1 || "",
          /* String: Subtype classification (e.g. News, Advances) */ type:
            dataLayer[0].content.category.contentType || "",
          /* String: What is the content type?  (e.g. Article, Print Article, Video, etc.) - Print Article means it appeared in magazine */ updatedAtDateTime:
            dataLayer[0].content.updatedAt || "",
          /* String: When was the content last updated?  (ISO-8861 format preferably) */ categories:
            dataLayer[0].content.contentInfo.keywords || "",
          /* String: A list of strings that has all the categories the content could be filed under.  This field would include primaryCategory and subCategory values. */ contentId:
            dataLayer[0].content.contentInfo.contentId || "",
          /* String: Content ID (dependent on the CMS being used) */ collectionId:
            (dataLayer[0].content.contentInfo.collection || [{}])[0].collectionID || "",
          /* String: Content can be part of a collection, but it is unclear what that means. */ collectionName:
            (dataLayer[0].content.contentInfo.collection || [{}])[0].collectionName || "",
          /* String: Content can be part of a named collection, but it is unclear what that means. */ publishedAtDateTime:
            dataLayer[0].content.contentInfo.publishedAt || "",
          /* String: When was the content originally published, full date and time?  (ISO-8861 format preferably) */ publishedAtDate:
            dataLayer[0].content.contentInfo.publishedAtDate || "",
          /* String: When was the content originally published, date only?  (ISO-8861 format preferably) */ publishedAtTime:
            dataLayer[0].content.contentInfo.publishedAtTime || "",
          /* String: When was the content originally published, time only?  (ISO-8861 format preferably) */ brand:
            dataLayer[0].content.contentInfo.brand || "",
          /* String: Represents the brand.  Currently, only one brand value exists. */ authors:
            dataLayer[0].content.contentInfo.author || [],
          /* String[]: Array of name strings of the authors.  Depending on CMS, this format could change.  (i.e. instead of an array of strings, it could be a string of comma-separated values) */ title:
            dataLayer[0].content.contentInfo.title || "",
          /* String: Content title */ tags: dataLayer[0].content.attributes.keywords || "",
          /* String: Tags associated with the content.  Currently, in Mura, there is a keywords field, but the taxonomy seems to be messed up.  These keywords field is acting like categories. */ template:
            dataLayer[0].content.attributes.template || "",
          /* String: Always "sciam" */ isSyndicated:
            dataLayer[0].content.attributes.copyright.syndicated || false,
          /* Number: Is the article a syndicated article?  (This is an article we can syndicate.) */ isPartner:
            dataLayer[0].content.category.contentType === "PartnerArticle",
          /* Boolean: Is content from a partner site? */ isSponsored:
            dataLayer[0].content.category.contentType === "CustomMediaArticle",
          /* Boolean: Is content sponsored? */ isResalable:
            dataLayer[0].content.attributes.copyright.resale || false,
          /* Boolean: Can the content be resold? (Do we have the rights?) */ containsMedia: "",
          /* String: What additional media items the article contains.  Possible values are "video", "podcast", or "none." */ articleDoi:
            (dataLayer[0].content.article || {}).doi || "",
          /* String: Digital Object Identifier for print articles.  For other article types, the property does not exist, so we need to create an empty object */ journalIssueName:
            (dataLayer[0].content.article || {}).journalIssueName || "",
          /* String: Issue name (e.g. "Scientific American Volume 328, Issue 1"). For other article types, the property does not exist, so we need to create an empty object */ wordCount:
            dataLayer[0].content.attributes.wordCount ||
            undefined /* Number: Word count of content.  If the content is irrelevant, then this value should be undefined */,
        },
      };
      dataLayer.push({ event: "contentView", content: newDataLayer.content });
    </script>
