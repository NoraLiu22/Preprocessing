<script type="text/javascript">
  $(function(){
      if($.cookie('maincss')) {
          $("#maincss").attr({href:$.cookie('maincss') + '?s=202404121638'});
          if($.cookie('maincss') == '/nd2.css') {
              $('#maincss_ndx').css('display', '');
          }else if($.cookie('maincss') == '/ndx.css'){
              $('#maincss_nd2').css('display', '');
          }
      }else{
          maincss('/nd2.css');
      }
  });
  function maincss(cssurl){
      $('#maincss').attr({href:cssurl + '?s=202404121638'});
      $.cookie('maincss',cssurl,{expires:30,path:'/'});
      if($.cookie('maincss') == '/nd2.css') {
          $('#maincss_nd2').css('display', 'none');
          $('#maincss_ndx').css('display', '');
      }else if($.cookie('maincss') == '/ndx.css'){
          $('#maincss_ndx').css('display', 'none');
          $('#maincss_nd2').css('display', '');
      }
  }
</script>
