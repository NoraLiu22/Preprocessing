<aside class="scrollmation-inline hide-small " data-resize-element=".scrollmation-two-column .secondary-column" data-copy-element data-scrollmation-slide  data-media-ratio="2.18064516129">
  

        <img alt="" class="inline-image edit-image-button" src="./media/energain-heat-diagram1_comp_aroi2an-lr_idhifke.jpg" data-min-width-1401="./media/energain-heat-diagram1_comp_aroi2an-mr_otxrtnb.jpg" />
      

