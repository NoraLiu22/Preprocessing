<!--[if gt IE 9]><!-->
<script>
  
  (function() {
    'use strict';
    var title = document.getElementById('lpc-story-title-page-video-23763');
    var video = document.getElementById('video-lpc-story-title-page-video-23763');

    function enableBackgroundVideo(section) {
      var video = section.querySelector('video');
      if (video) {
        video.classList.remove('hide');
      }

      // Show the fallback images after 2 seconds, in case the video
      // fails for some reason
      setTimeout(function() { enableBackgroundImage(section) }, 2000);
    }

    function enableBackgroundImage(section) {
      var picture = section.querySelector('[data-video-fallback]');
      if (picture) {
        picture.classList.remove('hide');
      }
    }

    if (Device.isMobile()) {
      enableBackgroundImage(title);
    } else {
      enableBackgroundVideo(title);
    }
  })();
</script>
<!--<![endif]-->



