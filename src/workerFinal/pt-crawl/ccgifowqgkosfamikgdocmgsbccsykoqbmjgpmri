        stroke-width: 0px;
      }
    </style></defs><g id="_72a08e.tif" data-name="72a08e.tif"><g><path class="cls-1" d="m382.31,511.16h-253.52c-5.05-.89-10.13-1.67-15.16-2.7C47.1,494.81.22,437.68.09,369.72-.05,293.7-.03,217.67.17,141.65c.02-9.25.8-18.67,2.62-27.73C16.14,47.13,73.48.19,141.7.08c75.84-.12,151.69-.12,227.53.09,9.42.03,19.07.61,28.2,2.71,57.05,13.14,93.63,48.13,109.45,104.55,1.95,6.97,2.82,14.24,4.18,21.38v253.57c-.89,5.03-1.53,10.12-2.7,15.08-13.39,57-48.21,93.64-104.61,109.5-6.99,1.96-14.29,2.83-21.45,4.2ZM255.54,45.82c0-.08,0-.16,0-.23-37.09,0-74.19.02-111.28-.01-11.37-.01-22.5,1.24-33.36,4.84-36.86,12.21-65.75,47.85-65.45,93.39.5,74.53.14,149.07.12,223.61,0,11.2,1.29,22.17,4.83,32.87,12.24,36.98,48.01,65.77,93.37,65.47,74.52-.5,149.04-.15,223.57-.12,11.2,0,22.17-1.28,32.86-4.84,37.14-12.35,65.67-47.99,65.43-92.89-.4-74.87-.15-149.74-.08-224.61.02-16.07-2.81-31.49-10.51-45.63-17.29-31.76-43.88-50.43-80.25-51.56-39.72-1.23-79.5-.28-119.26-.28Z"></path><path class="cls-1" d="m387.26,255.44c.1,72.45-58.96,131.72-131.42,131.89-72.63.17-132.05-59.16-131.99-131.82.05-72.48,59.21-131.62,131.67-131.65,72.45-.02,131.65,59.1,131.75,131.57Zm-131.55,86.26c47.79-.14,86.16-38.72,85.92-86.39-.24-47.65-38.41-85.74-86-85.81-47.73-.07-86.2,38.38-86.16,86.14.03,47.78,38.53,86.19,86.24,86.06Z"></path><path class="cls-1" d="m392.98,151.87c-18.39.1-33.49-14.78-33.54-33.08-.05-18.16,15.22-33.45,33.35-33.41,18.19.04,33.43,15.36,33.31,33.48-.11,18.09-14.98,32.91-33.13,33.01Z"></path></g></g></svg></a></div></div><div class="copyright">Copyright © <!-- -->2024<!-- --> The Harvard Crimson, Inc.</div></footer></div>
