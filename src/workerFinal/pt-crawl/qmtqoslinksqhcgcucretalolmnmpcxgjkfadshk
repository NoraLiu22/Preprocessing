    <script>
        $(document).ready(function() {
    $('.ambassador-card').on('click', function() {
        // Tomar el contenido de la tarjeta en la que se hizo clic
        let cardContent = $(this).html();
        
        // Colocar el contenido en el cuerpo del modal
        $('#ambassadorModal .modal-body').html(cardContent);

        // Mostrar el modal
        $('#ambassadorModal').modal('show');
        });
    });

    </script>
