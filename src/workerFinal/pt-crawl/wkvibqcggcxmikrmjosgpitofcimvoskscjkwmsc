        function trackUserViewItemGA4() {
            const dataLayer = (window).dataLayer;
            if (dataLayer) {
                dataLayer.push({
                    'event': 'view_article',
                    'content_type': 'Published',
                    'article_title': 'Glial Contribution to Excitatory and Inhibitory Synapse Loss in Neurodegeneration',
                    'journal_title': 'Cellular Neuroscience',
                    'research_topic_title': 'Synaptic Loss and Neurodegeneration',
                    'section_title': "Non-Neuronal Cells",
                    'published_date': '20190226',
                    'accepted_date': '20190208',
                    'article_id': '437481',
                    'journal_id': '1523',
                    'research_topic_id': 7690 == 0 ? 'null' : '7690',
                    'section_id' :'1524',
                    'article_type': 'REVIEW article',
                    'doi': '10.3389/fncel.2019.00063',
                    'domain_id': '1',
                    'speciality_id': 1966 == 0 ? 'null' : '1966',
                    'StageId': 18 == 0 ? 'null' : '18',
                });
