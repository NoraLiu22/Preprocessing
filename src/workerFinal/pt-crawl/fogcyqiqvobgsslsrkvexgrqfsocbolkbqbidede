      <div class="">
        
            <div class="field field--name-field-image field--type-entity-reference field--label-hidden field__item"><div>
  
  
  <div class="field field--name-field-media-image field--type-image field--label-visually_hidden">
    <div class="field__label visually-hidden">Image</div>
              <div class="field__item">    <picture>
                  <source media="all and (min-width: 992px)" type="image/jpeg" width="1088" height="612" data-srcset="/sites/oscars/files/styles/hero_image_landing_page_default/public/240109c_0412.jpg?h=34859a72&amp;itok=5FoDuVKs 1x"/>
              <source media="all and (min-width: 768px)" type="image/jpeg" width="1050" height="591" data-srcset="/sites/oscars/files/styles/hero_image_landing_page_tablet/public/240109c_0412.jpg?VersionId=Hbj.5gzavRcF6l3jKCRtOEdeTg22Y8EM&amp;h=34859a72&amp;itok=RRj1S9F9 1x"/>
              <source type="image/jpeg" width="640" height="360" data-srcset="/sites/oscars/files/styles/hero_image_landing_page_phone/public/240109c_0412.jpg?VersionId=Lc79VQ9EoHjGPJlk_G9TzogihF9PQi.0&amp;h=34859a72&amp;itok=jj4EVnwF 1x"/>
                  <img loading="lazy" class="img-fluid d-block mx-auto lazyload" src="/sites/oscars_org/themes/custom/oscars_org/assets/images/placeholder.lazy-load.jpg" width="1" height="1" alt="2024 Governors Awards" title="2024 Governors Awards" data-src="data:image/gif;base64,R0lGODlhAQABAIABAP///wAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" />

  </picture>

