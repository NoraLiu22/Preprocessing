                        <div class="row">
                            <div class="col-12">
                                <div class="progress progress-bar-toolbar">
                                    <div id="document-progress-bar" class="progress-bar bg-primary" role="progressbar" aria-label="Document progress bar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
