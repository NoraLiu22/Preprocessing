<script type="text/javascript">
    // traduzioni
    var JS_RIVISTELIST = new Array();
    JS_RIVISTELIST['showEmptyResult'] = 'We have not identified any Journal with the search parameters';
    JS_RIVISTELIST['showDialogErrorTitle'] = 'Operation failed';
    JS_RIVISTELIST['showDialogErrorBody'] = 'Error while loading journals:<br>';
    JS_RIVISTELIST['showDialogErrorBody2'] = 'There was an error: <br>';
    JS_RIVISTELIST['periodicita'] = 'Periodicity';

    //inizializzazione filtri ed elenco riviste
	dojo.provide('rivisteweb.instance');
	dojo.require("rivisteweb.PageNavigator");
	dojo.require("rivisteweb.LetterNavigator");
	dojo.require("rivisteweb.JournalsList");
	dojo.require("rivisteweb.AuthorsList");
	dojo.require("dojo.hash");

    dojo.addOnLoad(function() {
        dojo.enabu.main.baseUrl = '/';
        rivisteweb.instance.PageNavigatorObj = new rivisteweb.PageNavigator('page-navigator');
        rivisteweb.instance.PageNavigatorObj.hide(); 
        rivisteweb.instance.LetterNavigatorObj = new rivisteweb.LetterNavigator('letter-navigator');
        rivisteweb.instance.LetterNavigatorObj.enable();
        rivisteweb.instance.JournalsListObj = new rivisteweb.JournalsList(rivisteweb.instance.PageNavigatorObj, rivisteweb.instance.LetterNavigatorObj);
        rivisteweb.instance.JournalsListObj.initRwJournals()
        rivisteweb.instance.PageNavigatorObj.setOptions({hashless: true, object: "rivisteweb.instance.JournalsListObj"})
        dojo.subscribe("/dojo/hashchange", this, function(hash){
        	rivisteweb.instance.JournalsListObj.setState(hash);
        });
        rivisteweb.instance.JournalsListObj.setSubject('');  
        rivisteweb.instance.JournalsListObj.setPublisher('ilmulino');  
        if (dojo.hash()) {
        	rivisteweb.instance.JournalsListObj.setState(dojo.hash());
        } else {
	        rivisteweb.instance.JournalsListObj.searchAction({first:true});
        }
    });
</script>
