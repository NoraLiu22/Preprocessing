                <h1 class="text-dark">
                    
                    Research in Medieval and Early Modern Culture
                </h1>
                

                
                
    
        
    


                

                
                

                
                




                
                
                
            </div>
        </div>

        
        <div id="main-content" class="row">
            <div class="container-fluid py-5 px-4 px-lg-2">
                <nav>
                    <tab-nav>
                        <ul class="nav" role="tablist">
                            
                                <li class="nav-item" role="presentation">
                                    <a href="#overview" id="overviewTab" data-bs-toggle="tab" role="tab" class="nav-link active">
                                        <div class="productsTabLink">Overview</div>
                                    </a>
                                </li>
                            
                            
                                <li class="nav-item" role="presentation">
                                    <a href="#volumes" id="volumesTab" data-bs-toggle="tab" role="tab" class='nav-link '>
