    <script>
        


        //Get the current querystring
        let qstring = window.location.search;
        //remove any url encoding changes that may have happened
        qstring = decodeURI(qstring);
        qstring = qstring.replaceAll("+", " ");
        qstring = qstring.replaceAll("%26", "&");
        qstring = qstring.replaceAll("%2C", ",");

        //Getting the parent container
        let keywordContainer = document.getElementById("keywordContainer");

        //Get the search button
        let subBtn = document.getElementsByTagName("button")[0];

        //Getting input fields
        let category = document.getElementById("searchCategory");
        let keywordBox = document.getElementById("keywordSearch");
        let keywordLabel = document.getElementById("keywordSearchLabel")
        let districtSelect = document.createElement("select");
        districtSelect.setAttribute("name", "keywordSearch");
        let countySelect = document.createElement("select");
        countySelect.setAttribute("name", "keywordSearch");
        let researchSelect = document.createElement("select");
        researchSelect.setAttribute("name", "keywordSearch");
        let deptSelect = document.createElement("select");
        deptSelect.setAttribute("name", "keywordSearch");


        //Generating lists for dropdown menus
        let counties = ["Arkansas" , "Ashley" , "Baxter" , "Benton" , "Boone" , "Bradley" , "Calhoun" , "Carroll" , "Chicot" , "Clark" , "Clay" , "Cleburne" , "Cleveland" , "Columbia" , "Conway" , "Craighead" , "Crawford" , "Crittenden" , "Cross" , "Dallas" , "Desha" , "Drew" , "Faulkner" , "Franklin" , "Fulton" , "Garland" , "Grant" , "Greene" , "Hempstead" , "Hot Spring" , "Howard" , "Independence" , "Izard" , "Jackson" , "Jefferson" , "Johnson" , "Lafayette" , "Lawrence" , "Lee" , "Lincoln" , "Little River" , "Logan" , "Lonoke" , "Madison" , "Marion" , "Miller" , "Mississippi" , "Monroe" , "Montgomery" , "Nevada" , "Newton" , "Ouachita" , "Perry" , "Phillips" , "Pike" , "Poinsett" , "Polk" , "Pope" , "Prairie" , "Pulaski" , "Randolph" , "Saline" , "Scott" , "Searcy" , "Sebastian" , "Sevier" , "Sharp" , "St. Francis" , "Stone" , "Union" , "Van Buren" , "Washington" , "White" , "Woodruff" , "Yell" ];
        let depts = ["AES | ACVIP | Arkansas Crop Variety Improvement Program" , "AES | AEAB | Agricultural Economics and Agribusiness" , "AES | AECT | Agricultural  Education, Communications and Technology" , "AES | AGCS | Agricultural Communication Services" , "AES | AGLW | Ag Law Center" , "AES | AGSL | Agricultural Statistics Lab" , "AES | ANSC | Animal Science" , "AES | AWRC | Arkansas Water Resources Center" , "AES | BAEG | Biological and Agricultural Engineering" , "AES | CSES | Crop, Soil and Environmental Sciences" , "AES | DREX | Director of Experiment Stations" , "AES | ENPL | Entomology & Plant Pathology" , "AES | FDSC | Food Science" , "AES | Grants" , "AES | HES | Human Environmental Sciences" , "AES | HORT | Horticulture" , "AES | IT | Information Technology" , "AES | POSC | Poultry Science" , "AES | SOIL | Soil Testing Lab" , "AES | TCO | Technology Commercialization Office" , "AES | UAMF | Arkansas Forest Resources Center" , "AES | VDL | Vet Diagnostic Lab" , "CES | 4-H & Youth Development" , "CES | 4-H & Youth Development State Leader" , "CES | Agricultural Economics & Agribusiness" , "CES | Animal Science" , "CES | Associate Director of Agriculture & Natural Resources" , "CES | Biological & Agricultural Engineering" , "CES | Center for Agricultural & Rural Sustainability" , "CES | Communications" , "CES | Community, Professional, & Economic Development" , "CES | Credit Union" , "CES | Crop, Soil & Environmental Science" , "CES | Delta District" , "CES | Entomology & Plant Pathology" , "CES | Facilities Management" , "CES | Family & Consumer Sciences" , "CES | Forest Resources" , "CES | Horticulture" , "CES | Information Technology" , "CES | Ouachita District" , "CES | Ozark District" , "CES | Poultry Science" , "CES | Print Shop" , "CES | Senior Associate Vice President for Agriculture - Extension" , "CES | Southern Regional Risk Management Education Center" , "CES | Sponsored Programs" , "CES | Vines 4-H Center" , "Division | DBUS | Business Office" , "Division | DCOM | Chief Communications Officer" , "Division | DFIN | Associate Vice President of Finance and Administration" , "Division | DHUM | Human Resources" , "Division | DIAC | Office of Inclusion, Access, and Compliance" , "Division | DITS | Information Technology" , "Division | DLGL | Chief Legal Counsel" , "Division | VPAG | Vice President for Agriculture" ];
        let research = ["AES | AREC | Agricultural Research and Extension Center" , "AES | CTST | Cotton Research Station" , "AES | FRSS | Fruit Research Station" , "AES | LFST | Livestock and Forestry Research Station" , "AES | NERE | Northeast Research and Extension Center" , "AES | NERREC | Northeast Rice Research and Extension Center" , "AES | PTST | Pine Tree Research Station" , "AES | RIRE | Rice Research and Extension Center" , "AES | SEST | Southeast Research Station" , "AES | SWRE | Southwest Research and Extension Center" , "AES | VGSS | Vegetable Research Station" , "AES | XASU | Arkansas State University Research Unit" , "CES | NE Rice Research & Extension Center" , "CES | Northeast Research & Extension Center" , "CES | Rice Research & Extension Center" , "CES | Southwest Research & Extension Center" ];
        let districts = ["Delta", "Ouachita", "Ozark"];
        //console.log(counties);
        //Adding dropdown options for districts
        for (let i = 0; i < districts.length; i++) {
            let currentOption = document.createElement("option");
            currentOption.setAttribute("value", districts[i]);
            currentOption.setAttribute("name", "keywordSearch")
            currentOption.innerText = districts[i];
            districtSelect.appendChild(currentOption);
        }

        //Adding dropdown options for counties
        for (let i = 0; i < counties.length; i++) {
            let currentOption = document.createElement("option");
            currentOption.setAttribute("value", counties[i]);
            currentOption.setAttribute("name", "keywordSearch")
            currentOption.innerText = counties[i];
            countySelect.appendChild(currentOption);
        }
        //Adding dropdown options for departments
        for (let i = 0; i < depts.length; i++) {
            let currentOption = document.createElement("option");
            currentOption.setAttribute("value", depts[i]);
            currentOption.setAttribute("name", "keywordSearch")
            currentOption.innerText = depts[i];
            deptSelect.appendChild(currentOption);
        }
        //Adding dropdown options for research centers
        for (let i = 0; i < research.length; i++) {
            let currentOption = document.createElement("option");
            currentOption.setAttribute("value", research[i]);
            currentOption.setAttribute("name", "keywordSearch")
            currentOption.innerText = research[i];
            researchSelect.appendChild(currentOption);
        }

        //Event loop for disabling the search button on an empty search
        function search_disable(ev) {
            if (ev.target.value === '') {
                subBtn.disabled = true;
            } else {
                subBtn.disabled = false;
            }
        }

        //Add event listeners for disabling search button
        category.addEventListener('input', search_disable);
        keywordBox.addEventListener('input', search_disable);
        countySelect.addEventListener('input', search_disable);
        researchSelect.addEventListener('input', search_disable);
        districtSelect.addEventListener('input', search_disable);


        //Event loop for displaying correct field based on category
        category.addEventListener("change", (ev) => {
            //For District
            if (ev.target.value === "3") {
                keywordContainer.replaceChild(districtSelect, keywordContainer.childNodes[3]);
                keywordLabel.innerText = "District Select"
                //For County
            } else if (ev.target.value === "2") {
                keywordContainer.replaceChild(countySelect, keywordContainer.childNodes[3]);
                keywordLabel.innerText = "County Select"
                // For Research Center
            } else if (ev.target.value === "4") {
                keywordContainer.replaceChild(researchSelect, keywordContainer.childNodes[3]);
                keywordLabel.innerText = "Research Center Select"
                //For Department
            } else if (ev.target.value === "1") {
                keywordContainer.replaceChild(deptSelect, keywordContainer.childNodes[3]);
                keywordLabel.innerText = "Department Select"
                //For Name
            } else {
                keywordContainer.replaceChild(keywordBox, keywordContainer.childNodes[3]);
                keywordLabel.innerText = "Keyword Search"
            }
            // trigger the event for determining if the search should be disabled/enabled
            keywordContainer.childNodes[3].dispatchEvent(new Event('input'));
        })

        //Set the input fields appropriately based on the presence of a query string.

        //First select the proper category
        category_var_str = "chooseCategory="
        keyword_var_str = "keywordSearch="
        if (qstring.length > 0) {
            let cat_index = qstring.indexOf(category_var_str)
            if (cat_index > 0) {
                category.selectedIndex = parseInt(qstring[cat_index + category_var_str.length]);

                //Manually trigger the 'change' event for the category drop down
                category.dispatchEvent(new Event('change'));

                // Determine the value of the search box

                let key_index = qstring.indexOf(keyword_var_str);

                if (key_index >= 0) {
                    key_index += keyword_var_str.length
                    let search_word = qstring.slice(key_index, qstring.length);
                    //select the appropriate input field and pre-fill it based on the keywordSearch value in the query string
                    switch (category.selectedIndex) {
                        case 0:
                            //First/last name
                            keywordContainer.childNodes[3].value = search_word;
                            break;
                        case 2:
                            //County
                            keywordContainer.childNodes[3].selectedIndex = counties.indexOf(search_word);
                            break;
                        case 1:
                            //Department
                            keywordContainer.childNodes[3].selectedIndex = depts.indexOf(search_word);
                            break;
                        case 4:
                            //Research Center
                            keywordContainer.childNodes[3].selectedIndex = research.indexOf(search_word);
                            break;
                        case 3:
                            //District
                            keywordContainer.childNodes[3].selectedIndex = districts.indexOf(search_word);
                            break;
                        default:
                            break;
                    }
                }
            }


        }
        // trigger the event for determining if the search should be disabled/enabled
        keywordContainer.childNodes[3].dispatchEvent(new Event('input'));

    </script>


    <script>
        //Hide results that don't match keyword search exactly when searching by department or research
       let searchCategoryValue = document.querySelector('#searchCategory').value
       let keywordSearchValue = document.querySelector('select[name="keywordSearch"]').value
       if(searchCategoryValue === '1' || searchCategoryValue === '4'){
           let personnelCards = document.querySelectorAll('.personnel-card')
            personnelCards.forEach((el) => {
                let departmentText = el.querySelector('.card-dept').innerText
                if(departmentText !== keywordSearchValue){
                    el.style='display:none';
                }
            })
       }
    </script>
