<script type="text/javascript">
    // traduzioni
    let JS_TRANSLATIONS = [];
    JS_TRANSLATIONS['showEmptyResult'] = 'There was no author identified with the search parameters';
    JS_TRANSLATIONS['showDialogErrorTitle'] = 'Operation failed';
    JS_TRANSLATIONS['showDialogErrorBody'] = 'Error while loading Journals:<br>';
    JS_TRANSLATIONS['showDialogErrorBody2'] = 'There was an error:<br>';

    dojo.provide('rivisteweb.instance');
    dojo.require("rivisteweb.PageNavigator");
    dojo.require("rivisteweb.LetterNavigator");
    dojo.require("rivisteweb.AuthorsList");
    dojo.require("dojo.hash");

    let timer;
    let authorsList;
    domReady(function() {
        dojo.enabu.main.baseUrl = '/';
        let pageNavigator = new rivisteweb.PageNavigator('page-navigator');
        pageNavigator.hide();
        let letterNavigator = new rivisteweb.LetterNavigator('letter-navigator');
        letterNavigator.enable();
        authorsList = new rivisteweb.AuthorsList(pageNavigator, letterNavigator);
        dojo.subscribe("/dojo/hashchange", this, function(hash){
            authorsList.setState(hash);
        });
        if (location.hash) {
            authorsList.setState(dojo.hash());
        } else {
            authorsList.setLetter('A');
            authorsList.searchAction();
        }

        document.getElementById("searchauthor").addEventListener("submit",  function(e) {
            e.preventDefault();
            searchQuery();
        });

        document.querySelectorAll("#letter-navigator input").forEach((node) => {
            node.addEventListener("change", () => {
                location.hash = `letter=${node.value}`
            })
        });

        document.getElementById("searchauthor-term").addEventListener("keyup", (event) => {
            if ((event.which >= 48 && event.which <= 90) || event.keyCode === 13) { // alpha, digit, invio
                clearTimeout(timer);
                timer = setTimeout(function () {
                    searchQuery();
                }, 800);
            }
        });

        document.getElementById("searchauthor-term").addEventListener("blur", () => {
            const search_query = document.searchauthor.search_query.value;
            if (search_query == '') {
                location.hash = ''
            }
        });
    });

    function searchQuery() {
        const search_query = document.searchauthor.search_query.value;
        if (search_query.length > 2) {
            location.hash = '!search=' + escape(search_query)
        }
    }
</script>

