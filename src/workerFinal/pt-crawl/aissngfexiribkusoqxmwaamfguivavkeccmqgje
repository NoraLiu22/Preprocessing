	jQuery(document).ready(function (){
		var v1 = $("#wipoVideo1").get(0);
		var v2 = $("#wipoVideo2").get(0);
		var v3 = $("#wipoVideo3").get(0);
		var v4 = $("#wipoVideo4").get(0);
