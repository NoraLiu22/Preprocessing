<div class="container-fluid">
    <div class="row" data-sf-element="Row">
        <div id="MainContentPlaceholder_C041_Col00" class="sf_colsIn col-skinny-xs" data-sf-element="Column 1" data-placeholder-label="Column 1">

    <div id="shadow-divide-container" class="spacer_desktop_40 spacer_tablet_40 spacer_mobile_30">
        <div class="shadow-divider no-shadow">
            <hr>
