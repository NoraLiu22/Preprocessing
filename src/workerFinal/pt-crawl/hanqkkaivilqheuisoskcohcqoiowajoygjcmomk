  <!-- START subjectBox -->
  <h1>Indian Rhythmic Cycles</h1>
    <p><img src="images/bayan.gif" alt="Picture of North Indian Drum" width="72" height="74" /></p>
    </div>
     <!-- End subjectBox -->
	 <!-- START buyBox -->
    <div id="buyBox">
	 <!-- START buyBoxIcon -->
	<div id="buyBoxIcon"><img src="images/navigation/cavehand2_60sq.png" alt="Ancient Traditions Book Cover" width="60" height="60" border="0" /></div>
	<!-- End buyBoxIcon -->
	<!-- START orderArea -->
	<div id="orderArea">
