var thisPic = 0;  //the counter for the image array
var lastPic = 4;  //the last cell in our array = (number of pictures - 1)

cnnPix = new Array(lastPic)

for(var i=0;i<=lastPic;i++){
cnnPix[i] = new Image()}

cnnPix[0].src="top.celebrations.jpg";
cnnPix[1].src="2.ring.dancers.jpg";
cnnPix[2].src="3.skaters.jpg";
cnnPix[3].src="4.flags.jpg";
cnnPix[4].src="5.marchers.jpg";


/* above is the array that holds our images, it is indexed from 0 to 
   (number of elements - 1) */
   
cnnCaptions = new Array(lastPic)

cnnCaptions[0]="A day for dancing: Dragon dancers celebrate China\'s National Day in Beijing";
cnnCaptions[1]="Ring dancers";
cnnCaptions[2]="Roller skaters";
cnnCaptions[3]="The East Is Red: A vivid reminder of the revolution that brought China\'s Communists to power 50 years ago";
cnnCaptions[4]="Remembering the Chairman: Fantasically attired marchers keep pace with portrait of Mao Tse-tung in National Day parade";
   
  
   

function processPrevious() {
        if (document.images) {
                if (thisPic==0) //if at the very beginning of array
                {
                    thisPic=lastPic; //goto the last cell in the array
                 }
                 else 
                 {
                    thisPic--; //else simply decrement the counter                    
                 }
                  document.myPicture.src=cnnPix[thisPic].src;
                  document.caption.capbox.value=cnnCaptions[thisPic];
        }
}

function processNext() {
        if (document.images) {
                if (thisPic==lastPic) //if at the very end of the array
                {
                    thisPic=0; //goto the first cell of the array
                 }
                 else 
                 {
                thisPic++; //else simply increment the counter
                }
                document.myPicture.src=cnnPix[thisPic].src;
				document.caption.capbox.value=cnnCaptions[thisPic];
        }
}

//End hiding script from old browsers -->

