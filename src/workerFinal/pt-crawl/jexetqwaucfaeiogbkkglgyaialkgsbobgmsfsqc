<script>
    $("#searchInput").keypress(function (ev) {
        var keycode = (ev.keyCode ? ev.keyCode : ev.which);
        if (keycode == '13') {
            localStorage.setItem("searchQuery", this.value);
        }
    });
    $("#searchForm .btn-primary").click(function () {
        var x = document.getElementById("searchInput");
        localStorage.setItem("searchQuery", x.value);
    });
