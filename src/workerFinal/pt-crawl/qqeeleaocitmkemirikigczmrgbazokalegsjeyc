// set place name in EN or FR
if ( window.location.href.indexOf("parks.canada.ca") > -1 ) {
  seasideName = "Kejimkujik National Park Seaside";
} else {
  seasideName = "Parc national Kejimkujik Bord de mer";
}

// clone place icon to create a second placemarker
$(".wb-geomap-layers tbody tr").clone().insertAfter(".wb-geomap-layers tbody tr");

// change location of second place icon
let seasideIcon = $(".wb-geomap-layers tbody tr:nth-of-type(2)");
seasideIcon.attr("data-geometry", "POINT(-64.856189 43.837904)");
seasideIcon.find( "td:nth-of-type(2), td:nth-of-type(3)" ).text( seasideName );

