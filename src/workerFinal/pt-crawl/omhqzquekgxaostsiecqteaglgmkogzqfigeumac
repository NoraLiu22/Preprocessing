function whenJQueryAndPostscribeReady() {
    return new Promise((resolve) => {
        if (window.postscribe) {
            resolve(true);
        } else {
            setTimeout(() => {
                whenJQueryAndPostscribeReady().then(resolve);
            }, 250);
        }
    });
}

//- TODO: move items out of this block if possible, starting with taboola
document.addEventListener("DOMContentLoaded", () => {
    console.log("DOMContentLoaded _layout");

    //- its less error prone to repeat the query logic here
    const q = {};

    const urlParams = new URLSearchParams(document.location.search);

    for (const [k, v] of urlParams) {
        q[k] = v;
    }

    const disable = q.scripts_disabled;

    const search = disable ? disable.replace(/%20/g, "") : "";

    const disabledScripts = disable ? search.split(",").map(s => s.trim().toLowerCase()) : [];

    // this will convert to string so check for "1"
    const allowCommentsOriginal = `1`;

    let queryAdsDisabled = false;

    const yt = ``;
    const hasYt = yt && yt.includes("youtube.com");

    let queryConnatixDisabled = disabledScripts.includes("connatix") || hasYt;
    let queryOpenwebDisabled = disabledScripts.includes("openweb") || allowCommentsOriginal !== "1";
    let queryTaboolaDisabled = disabledScripts.includes("taboola");

    try {
        const publishedDateEle = document.querySelector('.publishedDate[data-published-date]');

        if (publishedDateEle) {
            const publishedDate = publishedDateEle.dataset.publishedDate;

            dayjs.extend(window.dayjs_plugin_utc);
            dayjs.extend(window.dayjs_plugin_timezone);
            dayjs.extend(window.dayjs_plugin_localizedFormat);

            const localeDate = dayjs.utc(publishedDate).format("MMMM D, YYYY");

            publishedDateEle.textContent = localeDate;
        }
    } catch (error) {
        console.error(error);
    }

    const billboard = document.querySelector("#BillboardAd");
    const billboardHeight = billboard ? billboard.offsetHeight : 0;
    let startCollapse = false;
    let windowScroll = window.scrollY;
    window.onscroll = function () {
        collapseHeader();
    };

    const collapseHeader = () => {
        if (window.scrollY > billboardHeight && !startCollapse) {
            startCollapse = true;
            document.getElementById("Header").className = "header collapse";
        } else if (
            startCollapse &&
            window.scrollY > windowScroll &&
            window.scrollY > billboardHeight
        ) {
            document.getElementById("Header").className = "header collapse";
        } else if (
            (startCollapse &&
                window.scrollY < windowScroll &&
                window.scrollY > billboardHeight) ||
            window.scrollY < billboardHeight
        ) {
            document.getElementById("Header").className = "header open";
        }
        windowScroll = window.scrollY;
    };

    let topicToggle = document.querySelector("#TopicToggle");
    let topicMenu = document.querySelector("#TopicsMenu");

    topicToggle.addEventListener("click", function(){
        if (topicMenu.classList.contains("is-active")) {
            this.setAttribute("aria-expanded", "false");
            topicMenu.classList.remove("is-active");
        } else {
            topicMenu.classList.add("is-active");
            this.setAttribute("aria-expanded", "true");
        }
    });

    let hamburgerToggle = document.querySelector("#HamburgerToggle");
    let hamburgerMenu = document.querySelector("#HamburgerMenu");
    let hamburgerClose = document.querySelector("#HamburgerClose");

    hamburgerToggle.addEventListener("click", function() {
        if (hamburgerMenu.classList.contains("is-active")) {
            this.setAttribute("aria-expanded", "false");
            hamburgerMenu.classList.remove("is-active");
        } else {
            hamburgerMenu.classList.add("is-active");
            this.setAttribute("aria-expanded", "true");
            hamburgerClose.setAttribute("aria-expanded", "true");
            hamburgerMenu.className += " is-active";
        }
    });

    hamburgerClose.addEventListener("click", function(){
        if (hamburgerMenu.classList.contains("is-active")) {
            this.setAttribute("aria-expanded", "false");
            hamburgerToggle.setAttribute("aria-expanded", "false");
            hamburgerMenu.classList.remove("is-active");
        }
    });

    let searchToggle = document.querySelector("#SearchToggle");
    let searchMenu = document.querySelector("#SearchMenu");
    let searchClose = document.querySelector("#SearchClose");

    searchToggle.addEventListener("click", function(){
        if (searchMenu.classList.contains("is-active")) {
            this.setAttribute("aria-expanded", "false");
            searchMenu.classList.remove("is-active");
        } else {
            searchMenu.classList.add("is-active");
            this.setAttribute("aria-expanded", "true");
            searchClose.setAttribute("aria-expanded", "true");
            searchMenu.className += " is-active";
        }
    });

    searchClose.addEventListener("click", function(){
        if (searchMenu.classList.contains("is-active")) {
            this.setAttribute("aria-expanded", "false");
            searchToggle.setAttribute("aria-expanded", "false");
            searchMenu.classList.remove("is-active");
        }
    });

    if (document.getElementsByTagName("article").length) {
        whenJQueryAndPostscribeReady().then(() => {
            try {
                let postscribe = window.postscribe;
                let PlayBuzz = window.PlayBuzz;
                const base64 = {
                    encode: function encode(str) {
                        return btoa(
                            encodeURIComponent(str).replace(
                                /%([0-9A-F]{2})/g,
                                function (match, p1) {
                                    return String.fromCharCode("0x" + p1);
                                }
                            )
                        );
                    },
                    decode: function decode(str) {
                        return decodeURIComponent(
                            Array.prototype.map
                                .call(atob(str), function (c) {
                                    return (
                                        "%" +
                                        (
                                            "00" + c.charCodeAt(0).toString(16)
                                        ).slice(-2)
                                    );
                                })
                                .join("")
                        );
                    },
                };
                const embeds = document.querySelectorAll(
                    "[data-ifls-social-embed]"
                );
                for (let i = 0; i < embeds.length; i++) {
                    let container = embeds[i];
                    const type = container.getAttribute(
                        "data-ifls-social-embed"
                    );
                    container.id = `ifls-auto-embed-${i}`;
                    container.innerHTML = "";
                    const rawBase64Code = container.getAttribute(
                        "data-ifls-social-embed-code"
                    );
                    if (rawBase64Code) {
                        try {
                            const rawCode = base64.decode(rawBase64Code);
                            postscribe(
                                "#" + container.getAttribute("id"),
                                rawCode,
                                function () {
                                    console.log(
                                        "article embed rendered for " +
                                            container.getAttribute("id")
                                    );
                                    if (type === "playbuzz") {
                                        try {
                                            PlayBuzz.Feed.renderFeed();
                                        } catch (e) {
                                            console.e("playbuzz error", e);
                                        }
                                    }
                                }
                            );
                        } catch (e) {
                            console.log("social embed error: ", e);
                        }
                    }
                }
            } catch (e) {
                console.error("Error postscribe: ", e);
            }
        });

        function goToConversation(e) {
            try {
                let conversation = document.querySelector(
                        '[data-spot-im-module-default-area="conversation"]'
                    );
                if (conversation) {
                    conversation.scrollIntoView();
                }
            } catch (error) {
                console.error("Issue with Go To Conversation button");
            }
        }

        // these buttons are not rendered in article.pug if comments are not allowed
        // so there is no need to check for allow comments here as goToConversationBtn and scrolltoconversation will be undefined
        const goToConversationBtn = document.getElementById(
            "goToConversationBtn"
        );

        if (goToConversationBtn) {
            goToConversationBtn.onclick = goToConversation;
        }
    }

    //- Taboola
    //- apppend to HEAD
    if (document.disableAds || queryAdsDisabled || queryTaboolaDisabled) {
        console.log("Taboola Disabled");
    } else {
        console.log("Taboola loading...");
        const taboolaHead = document.createElement("script");
        taboolaHead.type = "text/javascript";
        taboolaHead.innerHTML = `
            window._taboola = window._taboola || [];
                _taboola.push({article:'auto'});
                !function (e, f, u, i) {
                    if (!document.getElementById(i)){
                    e.async = 1;
                    e.src = u;
                    e.id = i;
                    f.parentNode.insertBefore(e, f);
                    }
                }(document.createElement('script'),
                document.getElementsByTagName('script')[0],
                '//cdn.taboola.com/libtrc/iflscience-iflscience/loader.js',
                'tb_loader_script');
                if(window.performance && typeof window.performance.mark == 'function')
                    {window.performance.mark('tbl_ic');
            }`;
        document.head.appendChild(taboolaHead);

        //- append to BODY
        const body = document.querySelector("body");
        const taboolaBody = document.createElement("script");
        taboolaBody.type = "text/javascript";
        taboolaBody.innerHTML = "window._taboola = window._taboola || []; _taboola.push({flush: true});"
        body.appendChild(taboolaBody);
    }

    //- Openweb
    if (queryAdsDisabled || queryOpenwebDisabled) {
        console.log("Openweb Disabled or comments disabled");
    } else {
        console.log("Openweb Loading...");
        const openWebContainer = document.querySelectorAll(".OPENWEB");
        if (openWebContainer.length) {
            const openweb = document.createElement("script");
            openweb.async = true;
            openweb.src = "https://launcher.spot.im/spot/sp_KdsXecm1"; //make a config
            openweb.setAttribute("data-spotim-module", "spotim-launcher");
            openweb.setAttribute(
                "data-post-url",
                openWebContainer[0].getAttribute("data-post-url")
            );
            openweb.setAttribute(
                "data-article-tags",
                openWebContainer[0].getAttribute("data-article-tags")
            );
            openweb.setAttribute(
                "data-post-id",
                openWebContainer[0].getAttribute("data-post-id")
            );
            openWebContainer[0].appendChild(openweb);
        }
    }

    //- Connatix
    //- if (document.disableAds || queryAdsDisabled || queryConnatixDisabled) {
