    <main role="main" id="main" class="site-main">
      <section class="block">
      <div class="container">
      <div class="panel-outer">
        <div class="panel-wrapper-hero ">
          <div class="news-hero-panel keep"  style="background-image: url(/wp-content/uploads/cholera_home_dave_goulding.jpg)">
            <div class="image-credit">Dave Goulding, Wellcome Sanger Institute</div>
          </div>
