function accordionClick(b) {
  	var x = document.getElementById(b);
	var str = x.id;
	str = str.substring(8, str.length);

	//alert(str);
	var test = "" + str;
	test = "ptac-faq-answer" + test;
	//alert(count);
	var inner = document.getElementById(test);
	
	c = document.getElementById('ptac-faq-answer' + str);
	//alert(c.id);
