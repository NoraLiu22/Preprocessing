        $(document).ready(function () {
            $(window).scroll(function(){
		        if ($(this).scrollTop() > 2000) {
			        $('.scrollToTop').fadeIn();
		        } else {
			        $('.scrollToTop').fadeOut();
		        }
	        });
	
	        $('.scrollToTop').click(function(){
		        $('html, body').animate({scrollTop : 0},800);
		        return false;
	        });
            var $container = $('.masonry-container');
                $container.imagesLoaded( function () {
                  $container.masonry({
                    columnWidth: '.item',
                    itemSelector: '.item'
                  });   
            });
            //checkContent()
            
        });
        function checkContent() {
            vpw = $(document).width();
            if(vpw>992){
                    $('.scrolled').show();
                    $('.moreSpan').show();
                    $('#tickerDivMain2').show();
                    $('#tickerBanners').show();
                    vph = $(document).height();
                    vph=vph-200;
                    vph=vph/2.5;
                    $('#newsScroll').css({'height':  + 'px'});
                    $('#newsScroll').mCustomScrollbar({
                        axis: "y",
                        theme: "dark-2",
                        scrollButtons: {
                            enable: true
                        },
                        setHeight: true,
                        mouseWheel: { scrollAmount: 150 }
                    });
                    $('#reviewsScrolled').css({'height':  + 'px'});
                    $('#reviewsScrolled').mCustomScrollbar({
                        axis: "y",
                        theme: "dark-2",
                        scrollButtons: {
                            enable: true
                        },
                        setHeight: true,
                        mouseWheel: { scrollAmount: 150 }
                    });
                    $('#reportScrolled').css({'height':  + 'px'});
                    $('#reportScrolled').mCustomScrollbar({
                        axis: "y",
                        theme: "dark-2",
                        scrollButtons: {
                            enable: true
                        },
                        setHeight: true,
                        mouseWheel: { scrollAmount: 150 }
                    });
                    $('#interviewsScrolled').css({'height':  + 'px'});
                    $('#interviewsScrolled').mCustomScrollbar({
                        axis: "y",
                        theme: "dark-2",
                        scrollButtons: {
                            enable: true
                        },
                        setHeight: true,
                        mouseWheel: { scrollAmount: 150 }
                    });
            }
            else{
                $('#newsScroll').css({'height': 'auto'});
                $('#reviewsScrolled').css({'height': 'auto'});
                $('#tickerDivMain2').hide();
                $('#tickerBanners').hide();
                $('.scrolled').show();
                $('.moreSpan').hide();
            }
        }
    </script>
