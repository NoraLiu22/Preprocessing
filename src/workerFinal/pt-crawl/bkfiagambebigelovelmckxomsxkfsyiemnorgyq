<script>
  function getiOSVersion() {
    if (/iP(hone|od|ad)/.test(navigator.platform)) {
      var versionString = (navigator.appVersion).match(/OS ((\d+)_(\d+)_?(\d+)?)/); // match "OS 11_4_1", "OS 10_9" etc.
      var parsedVersion = parseFloat(versionString[1].split("_").join(".")); // convert version string to float i.e. 11.4.1, 10.9

      return parsedVersion;
    }
  }

    function renderiOSBanner() {
      var isUsingSupportediOSVersion = getiOSVersion() >= 11;

      if (isUsingSupportediOSVersion) {
        var meta = document.createElement("meta");
        meta.name = "apple-itunes-app";
        meta.content = "app-id=1380676511";
        document.head.appendChild(meta);
      }
    }

</script><script>
    var functionsAreAvailable = function() {
        return (
            document.body
            && document.body.classList
            && typeof document.body.classList.add === 'function'
            && typeof document.body.classList.remove === 'function'
        );
    }

    if (window) {
        window.addEventListener("DOMContentLoaded", function(event) {
            if (functionsAreAvailable()) {
                document.body.classList.add('no-keyboard-navigation-in-use');

                window.addEventListener("keydown", function(e) {
                    var tabKeyCode = 9;

                    if (e.keyCode === tabKeyCode) {
                        document.body.classList.remove('no-keyboard-navigation-in-use');
                    }
                });
            }
        });
    }
</script><script>
    const orbitColourSchemes = {
      DARK: 'b-header--dark-grey--grey',
      DEFAULT: 'b-header--white--black'
    };

    function setOrbitColour() {
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        applyOrbitTheme(orbitColourSchemes.DARK);
      }

      window.matchMedia('(prefers-color-scheme: dark)').addListener(changeColourScheme);
    }

    function changeColourScheme(colour) {
      if (colour.matches) {
        applyOrbitTheme(orbitColourSchemes.DARK);
      } else {
        applyOrbitTheme(orbitColourSchemes.DEFAULT);
      }
    };

    function applyOrbitTheme(themeClass) {
      document.querySelector('html').classList.add(themeClass);

      if (themeClass === orbitColourSchemes.DARK) {
        document.querySelector('html').classList.remove(orbitColourSchemes.DEFAULT);
      }

      if (themeClass === orbitColourSchemes.DEFAULT) {
        document.querySelector('html').classList.remove(orbitColourSchemes.DARK);
      }
    };

    setOrbitColour();
</script></body>
