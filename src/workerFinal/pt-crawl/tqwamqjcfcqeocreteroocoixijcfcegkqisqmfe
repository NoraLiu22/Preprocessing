                  <section id="content" role="page content" aria-label="extension information">
                     			
                     			
                     				
                     
                        <h1>Guidelines</h1>
                        
                        <p><a title="Division Guidance for Medical Marijuana" href="/docs/Medical_Marijuana_Guidance.pdf" target="_blank" rel="noopener">Division Guidance for Medical Marijuana</a></p>
                        
                        <p><a title="Drug &amp; Alcohol Reasonable Suspicion Checklist " href="/docs/Reasonable_Suspicion_Checklist.pdf" target="_blank" rel="noopener">Drug &amp; Alcohol Reasonable Suspicion Checklist </a></p>
                        
                        <h2>Policies</h2>
                        
                        <p><a title="Policy Approval Flow Chart" href="/docs/policies/policy-approval-flow-chart-oct312005.pdf" target="_blank" rel="noopener">Policy Approval Flow Chart</a></p>
                        
                        <h2>Division of Agriculture</h2>
                        
                        <div id="accordion-d16e148" class="accordion">
                           <div class="card">
                              <div class="card-header" id="heading-1">
                                 <h3 class="mb-0"><button class="btn btn-link accordion-trigger" data-toggle="collapse" data-target="#collapse-d16e148-1" aria-expanded="false" aria-controls="collapse-d16e148-1">Agricultural Development Council<span class="fas fa-plus"></span><span class="fas fa-minus"></span></button></h3>
