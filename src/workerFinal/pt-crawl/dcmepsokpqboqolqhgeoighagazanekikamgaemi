<script type="text/javascript">
      jQuery(document).ready(function() {
          $.ajax({
              type:     'GET',
              dataType: 'HTML',
              url:      '/.navigation.html',
              success:  function(response) { 
                  if (response) {
                      var currentNodeId = $('#navList').attr("data-current");

                      if (response.lastIndexOf("</" + "html" + ">") != -1) {
                          // We got a complete HTML document -> replace whole document
                          document.open("text/html","replace");
                          document.write(response);
                          document.close();
                      } else {
                          $('#navList').replaceWith(response);
                      }
                      
                      var ua = window.navigator.userAgent;
                      var msie = ua.indexOf("MSIE ");

                      // Init MobileNav unless is Internet Explorer
                      if (!(msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./))) {
	                      const mobileNav = new MobileNav(currentNodeId);
	                      mobileNav.init();
	                  }

                      $('.js-header__nav-level--root').accessibleMegaMenu({
                        // enables left/right navigation within mega menu.
                        // you must add this class to the HTML.
                        panelGroupClass: 'js-sub-nav-group',
                      });

                      // remove login link when already logged in
                      if($('#userStatusBar:visible').length) {
                          $('a.login').remove();
                      }
                  }                
              }
          });
      });
  </script>
