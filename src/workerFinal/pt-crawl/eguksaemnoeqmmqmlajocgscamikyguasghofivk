<script type="text/javascript">
    $(function()
    {
        $.get( contextPath + "/book/formats", { isbn:"9780226651552" }, function( data )
        {
            var size = Object.keys( data ).length;

            var salesRestrictionJson = {};
            var pubDateJson = {};
            var isbnHasChapterSale;


                pubDateJson[9780226651552] = "November 2019";
                pubDateJson[9780226651699] = "March 2020";

            var count = 0;
            var needMoreSpace = false;
            for ( var key in data )
            {
                var format;
                if (data.hasOwnProperty( key ))  format = data[key];

                var purchaseFormats = $('#purchase-formats');
                var purchaseFormat = $('<div class="purchase-format"></div>');
                var label = $('<div class="purchase-format-label"></div>');

                // format name
                var labelText;
                if ( format.binding.match( 'Electronic Book' ) ) labelText = format.eFormat.replace( 'acsm', '' );
                else labelText = format.binding;
                if ( Number( format.duration ) > 0 ) labelText += ' (' + format.duration + ' days)';
                label.text( labelText );

                // pub date
                var pubDate = '';
                if ( pubDateJson[format.isbn] )
                {
                    // A new field PubStatus has been added to the return. It is meaningless for eBook. For print book, 1 (published) means back-order, 2 (not-yet-published) and 9 (also not-yet-published) are pre-order - Langchi.
                    if ( format.binding.match( 'Electronic Book' ) )
                    {
                        if ( Number( format.quantityOnHand) > 0 ) pubDate = "Published ";
                        else pubDate = "Will Publish ";
                    }
                    else if ( format.pubStatus < 2 )
                    {
                       pubDate = "Published ";
                    }
                    else pubDate = "Will publish ";

                    pubDate += pubDateJson[format.isbn];
                }

                var pubDateString = $('<div class="purchase-format-pubdate"></div>');
                pubDateString.text( pubDate );

                // sales restriction
                if ( salesRestrictionJson[format.isbn] )
                {
                    var button = $('<button type="button" class="btn" data-toggle="tooltip" data-placement="top" data-html="true" title data-original-title="' + salesRestrictionJson[format.isbn] + '"></button>');
                    button.append( '<img class="link-icon" src="/.resources/ucp/img/icons/press-information.svg" alt="More info" />' );
                    button.append( '<span class="sr-only">Show more information about ' + format.binding + ' format</span>' );
                    label.append( button );
                }

                // price
                var cost = $('<div class="purchase-format-cost"></div>');
                cost.text( '$' + parseFloat( format.price ).toFixed( 2 ) );

                var footnote = $('<div class="purchase-format-footnote"></div>');

                // We default eBook to 200 in QOH. If it is pre-order, it will be 0. This is determined by BV status and fulfill before pub date.
                // The difference is only in the PUB status. If it is status 1, if we have not QOH and we know there is a stock will come in, then we backorder it.
                // If the status is 2, not-yet-published, we know there is a stock will come in, this is pre-order.
                // However, in CISPUB, the orders are them same. We will process it when we received the stock. - Langchi

                // pre-order or back-order
                if ( Number( format.quantityOnHand) === 0 )
                {
                   if ( format.binding !== 'Electronic Book' && Number( format.pubStatus ) === 1 ) {
                       if ( format.remoteVendor === "false" ) {
                           footnote.text( 'Back-order Only' );
                           if ( count < 3 ) needMoreSpace = true;
                       }
                   }
                   else {
                       if ( count < 3 ) needMoreSpace = true;
                       footnote.text( 'Pre-order Only' );
                   }
                }

                // count how many formats are there
                count++;

                // isbn
                var isbn = $('<div class="purchase-format-isbn"></div>');
                isbn.text( 'ISBN: ' + format.isbn );

                purchaseFormat.append( label, cost, footnote, isbn, pubDateString );

                // if there is only one format, then add a first one as an empty one
                // and add it as second one so that it'll display in the middle
                if ( size === 1 ) purchaseFormats.append( '<div class="purchase-format d-none d-sm-block"></div>' );
                purchaseFormats.append( purchaseFormat );

                // chapter for sale
                if ( format.chapterSale === "true" ) isbnHasChapterSale = format.isbn
            }

            // adjust the height of the first row of formats
            if ( size )
            {
                var height;
                if ( needMoreSpace ) height = '152';
                else height = '132';

                $('#example-purchase-widget-1').attr( 'data-forced-max-height', height ).attr( 'data-max-height', height ).css( 'height', height + 'px' );
            }

            // display the "More Formats" if there are more than 3 formats there
            if ( size > 3 || ( size > 2 && window.innerWidth < 576 )) {
                $('#more-less-formats').show();
            }

            // add has chapter to sale to TOC
            if ( isbnHasChapterSale ) {
               $( '#hasChapterSale' ).append( '<p><a href="https://cdcshoppingcart.uchicago.edu/Cart2/ChicagoBook.aspx?ISBN=' + isbnHasChapterSale + '&PRESS=CHICAGO" class="emphasized-link-with-icon">Individual Chapters available for Purchase<i class="fas fa-copy"></i></a></p>' );
            }

            $('[data-toggle="tooltip"]').tooltip();
        });
    });
</script><noindex>
