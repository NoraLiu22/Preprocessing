                articleID_pvar = metas[i].content;
            }
            if (metas[i].name == "ColumnId") {
                var _v = metas[i].content;
                _v = _v.split("/").map(function (i) { return i.replace(/^\s+|\s+$/g, ""); });
                column_firstpvar = _v[0] || "";
                column_pvar = _v[1] || "";
            }
