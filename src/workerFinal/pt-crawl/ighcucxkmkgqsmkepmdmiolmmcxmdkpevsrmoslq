                UpdateTime_pvar = metas[i].content.split(' ')[0];
            }
        }
        if (bSendArticle) {
            gio('page.set', "story_pvar", articleID_pvar || "默认值");
            gio('page.set', "col_firstpvar", column_firstpvar || "默认值");
            gio('page.set', "col_pvar", column_pvar || "默认值");
            gio('page.set', "update_pvar", UpdateTime_pvar || "默认值");
            gio('page.set', "story_titlepvar", document.title || "默认值");
