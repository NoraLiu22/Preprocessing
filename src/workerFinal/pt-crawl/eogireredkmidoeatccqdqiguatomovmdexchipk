<script>
    $(document).on("wb-ready.wb-geomap", "#location_map", function(event, map ) {
        // Get the map to use in zoomFeature function
        var myMap = map;

        // if reprojection is needed
        myMap.getView().setCenter(ol.proj.transform([-115.983967, 50.944013], "EPSG:4326", "EPSG:900913"));

