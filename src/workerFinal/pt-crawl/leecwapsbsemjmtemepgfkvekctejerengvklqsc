    };
    checkLoad();

    function LoadDataLayer() {
        var date = (document.querySelector('.blog-header__date') != null ? document.querySelector('.blog-header__date').innerText : "");
       
        dataLayer.push({
            'event': 'NewsAndPublciationInfo',
            'date': date.trim()
        });
    }
