<script>
    var stickyCta = document.querySelector('#cta-banner');
    var closeBanner = document.querySelector('.close-banner');
    var body = document.querySelector('body');
    var addESC = function(e) {
        if (e.keyCode == 27) {
            hideCta();
        }
    };
    function hideCta() {
        stickyCta.classList.remove("ctaSticky");
        stickyCta.classList.add("ctaRelative");
        closeBanner.classList.add("removeClose");
        document.removeEventListener('keydown', addESC);
    }
    if (stickyCta) {
        closeBanner.addEventListener('click', function() {
            hideCta();
        });
    }
    body.onload = function(){
    document.addEventListener('keydown', addESC);
};
</script>
