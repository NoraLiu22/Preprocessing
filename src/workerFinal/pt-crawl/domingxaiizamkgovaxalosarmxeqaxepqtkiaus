<section >


	<div class="">

			<div class="flex-row">

						<div class="col-xs-12 col-md">

							


	<div class="hero hero-banner lazyload " data-bgset="https://rotoruanz-img-cdn.azureedge.net/rotoruanz/rotoruanz/media/campaign/whakarewarewa-forest-loop_nov2021_credit-graeme-murray-15-edit.jpg [(max-width: 580px)] | https://rotoruanz-img-cdn.azureedge.net/rotoruanz/rotoruanz/media/campaign/whakarewarewa-forest-loop_nov2021_credit-graeme-murray-15-edit.jpg [(max-width: 768px)] | https://rotoruanz-img-cdn.azureedge.net/rotoruanz/rotoruanz/media/campaign/whakarewarewa-forest-loop_nov2021_credit-graeme-murray-15-edit.jpg" data-sizes="auto" >
		
		<div class="hero-container">

			<h1 class="hero-banner__title">Whakarewarewa Forest Loop</h1>


		</div>

	</div>


						</div>

			</div>

	</div>

