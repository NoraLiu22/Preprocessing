<script>
window.onload = function() {
    var elements = document.querySelectorAll('input, select');
    var ids = {};

    elements.forEach(function(element) {
        if (element.id) {
            if (ids[element.id]) {
                element.id = element.id + '-' + ids[element.id]++;
            } else {
                ids[element.id] = 1;
            }
        }

        // Add aria-label attribute to each input field
        element.setAttribute('aria-label', element.getAttribute('data-name'));
    });
};

</script>
