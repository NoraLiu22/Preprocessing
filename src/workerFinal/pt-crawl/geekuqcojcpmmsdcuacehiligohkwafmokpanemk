    <div id="sticky_leaderboard" class="collapsible">
      <div class="leaderboard_inner">
        <div class="advert sticky_lb"
          data-dfp-id="VG_STICKY_DESKTOP"
          data-dfp-sizes="728x90,970x90,980x90"
          data-dfp-targeting="lazyload=false,sticky=true"
          data-dfp-above-the-fold="true"
          data-dfp-responsive=""
          data-dfp-collapse="true"
          id="div-ga-VG_STICKY_DESKTOP"
        ></div>
      </div>
      <div id="sticky_leader_close" class="button">
        <span class="advert_label">Advertisement</span>
        <span class="icon" style="--icon-mask-image: url('/static/solid/xmark.svg')"></span>
      </div>
    </div>

    <script>
      window.googletag = window.googletag || { cmd: [] };
      const stickyAdEl = document.querySelector('#sticky_leaderboard');
      const stickyClose = stickyAdEl.querySelector('#sticky_leader_close');
      stickyClose.addEventListener(
        'click',
        () => {
          window.googletag.cmd.push(() => {
            const removeSlot = window.googletag
              .pubads()
              .getSlots()
              .filter(
                (slot) =>
                  slot.getSlotElementId() === 'VG_STICKY_DESKTOP',
              );
            window.googletag.destroySlots(removeSlot);
            stickyAdEl.remove();
            const appFooter = document.querySelector('.app_footer');
            if (appFooter) {
              appFooter.classList.remove('sticky_leader_ad_padding');
            }
          });
        },
        false,
      );
    </script>
