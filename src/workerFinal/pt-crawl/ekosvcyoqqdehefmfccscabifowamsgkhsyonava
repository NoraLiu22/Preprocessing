              <source srcset="/sites/default/files/styles/interpreter_article_image/public/2024-02/Cover%20image%201600%20comp.webp?itok=ernOiRCy 1x" media="all and (min-width: 768px) and (max-width: 1023px)" type="image/webp" width="1500" height="999"/>
              <source srcset="/sites/default/files/styles/interpreter_article_image_mobile_/public/2024-02/Cover%20image%201600%20comp.webp?itok=51lNWMU0 1x" media="all and (max-width: 767px)" type="image/webp" width="767" height="511"/>
              <source srcset="/sites/default/files/styles/interpreter_article_image/public/2024-02/Cover%20image%201600%20comp.jpg?itok=ernOiRCy 1x" media="all and (min-width: 1350px)" type="image/jpeg" width="1500" height="999"/>
              <source srcset="/sites/default/files/styles/interpreter_article_image/public/2024-02/Cover%20image%201600%20comp.jpg?itok=ernOiRCy 1x" media="all and (min-width: 1200px) and (max-width: 1349px)" type="image/jpeg" width="1500" height="999"/>
              <source srcset="/sites/default/files/styles/interpreter_article_image/public/2024-02/Cover%20image%201600%20comp.jpg?itok=ernOiRCy 1x" media="all and (min-width: 1024px) and (max-width: 1199px)" type="image/jpeg" width="1500" height="999"/>
