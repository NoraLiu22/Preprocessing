<script type="text/javascript">
	var didScroll = false;

	$(window).scroll(function() {
	    didScroll = true;
	});

	setInterval(function() {
	    if ( didScroll ) 
		{
	        if(!didScroll) return;
			
			didScroll = false;
	        
			var scroll = $(window).scrollTop();
			
			if(scroll>50)
			{
				$('#firefly > .navbar').addClass('shadow');
			}	
			else
			{
				$('#firefly > .navbar').removeClass('shadow');
			}
	    }
	}, 50);	
</script>	

