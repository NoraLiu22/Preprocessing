                    .addService(googletag.pubads());

                gptadslots[1] = googletag.defineSlot('/3048/driving/news', [[300, 250], [300, 600]], 'div-gpt-ad-mpu')
                    .set('ad_position', 'mpu')
                    .addService(googletag.pubads());

                gptadslots[2] = googletag.defineSlot('/3048/driving/news', [300, 300], 'div-gpt-ad-mpu-2')
                    .set('ad_position', 'mpu')
                    .addService(googletag.pubads());

                googletag.pubads()
                    .setTargeting('pos', ['mpu'])
                    .setTargeting('section', '/news/products')
