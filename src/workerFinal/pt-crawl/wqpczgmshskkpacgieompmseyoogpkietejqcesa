<style>
.ui-datepicker-year, .ui-datepicker-calendar thead {
    display: none;
}
</style>

<script defer="defer">
jQuery(function($) {
    //Find date from url and start calendar there.
    var path = window.location.pathname;
    if (path.slice(-1) == '/') {
        path = path.slice(0,-1);
    }
    var lastSlash = path.lastIndexOf('/');
    var pathInfo = path.substr(lastSlash + 1);

    var datePattern = /^[a-z]+-\d{2}$/;
    var defaultDay = "01";
    var defaultMonth = "January";

    if (datePattern.test(pathInfo)) {
        var dash = pathInfo.lastIndexOf('-');
        defaultDay= pathInfo.substr(dash + 1);
        defaultMonth = pathInfo.substr(0, dash);
    }

    //override getDay()
    Date.prototype.getDay = function() {
        //change getDay() so that the first day of the month is always at
        // the beginning of the week
        return ((this.getDate()-1) % 7);
    }

    var addDatePicker = function (elementId) {
        var focusActiveDate = function (event) {

            // focus highlighted if no date is selected
            var activateDates = $('.ui-state-active');

            if (activateDates.length > 0) {
                activateDates.focus();

            } else {
                $('.ui-state-highlight').focus();

            }

            // Make next/prev buttons focusable
            $('.ui-datepicker-next').click(function () {
                $('.ui-datepicker-next').focus();

            });
            $('.ui-datepicker-prev').click(function () {
                $('.ui-datepicker-prev').focus();

            });

        };

        var datepicker = $(elementId);
        var datepickerButton = $('.datepicker-container button.ui-datepicker-trigger');

        datepicker.val(
            defaultMonth.charAt(0).toUpperCase() +
            defaultMonth.slice(1) +
            " " +
            defaultDay
        );

        datepicker.datepicker({
            autoSize: true,
            dateFormat: "MM dd",
            showOn: "button",
            nextText: "Next Month",
            prevText: "Previous Month",
            buttonText: "<i class='icon icon-calendar'></i>",
            defaultDate: defaultMonth + " " + defaultDay,
            onSelect: function () {
                datepicker.focus();

            },
            beforeShow: function () {
                datepickerButton.attr('aria-pressed', true);

            },
            onClose: function () {
                datepickerButton.attr('aria-pressed', false);

            }
        });

        // register focus function
        datepickerButton
        .attr('aria-label', 'date picker')
        .attr('aria-pressed', 'false')
        .click(focusActiveDate);

    };

    addDatePicker('#datepicker');
    addDatePicker('#datepickerbottom');

});
</script>

