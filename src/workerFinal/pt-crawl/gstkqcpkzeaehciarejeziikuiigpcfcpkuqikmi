      <div class="cell medium-3">
        <h2 class="footer-list-title h4-st">Our Work</h2>
          <nav
  role="navigation"  id="block-footermiddle2" class="block block-menu navigation menu--footer-middle-2">
            
  <h2 class="visually-hidden" id="block-footermiddle2-menu">Footer middle 2</h2>
  

        
    
          <ul class="footer-list no-bullet">
    
