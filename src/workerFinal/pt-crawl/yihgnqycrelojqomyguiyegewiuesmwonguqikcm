                    <div class="form-label-set">
                        <input placeholder="Enter your email" class="input-text" name="email" id="email-input" type="email" onfocus="recaptchaInit()" required />
                        <label for="big-story-email-input">
                            <span class="a11y">Email address</span>
                            <svg class="icon" aria-hidden="true"><use xlink:href="#icon-email"></use></svg>
                        </label>
                    </div>
                    <input id="newsletter-signup-body-545495" class="g-recaptcha" value="Sign Up" type="submit" />
