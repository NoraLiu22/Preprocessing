","meta":{"target_revision_id":447649,"drupal_internal__target_id":42716}},{"type":"image-block","id":"0f6510dd-76a0-4f3f-904e-3def3f5c8a8b","meta":{"target_revision_id":447651,"drupal_internal__target_id":42717}},{"type":"image-block","id":"18420691-23ca-4f8d-a20f-55a2bfa1febe","meta":{"target_revision_id":447653,"drupal_internal__target_id":42718}},{"type":"image-block","id":"8df46047-230e-4814-b452-8196d0a8669f","meta":{"target_revision_id":447655,"drupal_internal__target_id":42719}},{"type":"call-to-action","id":"59f7b028-be9e-467d-9585-db9bf0bd75cd","meta":{"target_revision_id":447657,"drupal_internal__target_id":42720}},{"type":"image-block","id":"45cda740-2174-4365-ba60-186e43241eb4","meta":{"target_revision_id":447659,"drupal_internal__target_id":42721}},{"type":"image-block","id":"716b6aa6-9b7d-4dd5-bc7f-43a1a69b4b55","meta":{"target_revision_id":447667,"drupal_internal__target_id":42722}},{"type":"image-block","id":"57daf785-affb-4e83-9ebb-297e50eed2fc","meta":{"target_revision_id":447669,"drupal_internal__target_id":42723}},{"type":"image-block","id":"1bde9dbf-aef5-48fc-accd-0d93faa8ebd5","meta":{"target_revision_id":447671,"drupal_internal__target_id":42724}},{"type":"image-block","id":"39319cb1-3565-4ab3-9de0-053227cc5c9b","meta":{"target_revision_id":447673,"drupal_internal__target_id":42725}},{"type":"call-to-action","id":"6f8666b3-c408-4d31-a382-c21482d5a8de","meta":{"target_revision_id":447675,"drupal_internal__target_id":42726}},{"type":"promo","id":"8ac700ed-c43a-459b-a452-c37e7d2b7b41","meta":{"target_revision_id":447625,"drupal_internal__target_id":42709}}],"links":{"related":{"href":"https://core-cms.bfi.org.uk/api/article/83755a61-0883-4c0e-b60a-3f13130a5186/slices?resourceVersion=id%3A47543"},"self":{"href":"https://core-cms.bfi.org.uk/api/article/83755a61-0883-4c0e-b60a-3f13130a5186/relationships/slices?resourceVersion=id%3A47543"}}},"seoImage":{"data":null,"links":{"related":{"href":"https://core-cms.bfi.org.uk/api/article/83755a61-0883-4c0