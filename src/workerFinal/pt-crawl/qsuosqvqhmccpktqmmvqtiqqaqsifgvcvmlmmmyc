        <script>
        function disableServices() {
            let cookies = document.cookie;
            let ca = cookies.split( ";" );
            for( let i = 0; i < ca.length; i++ ) {
                let key = ca[i].split( "=" );
                if (key !== 'consentcookies_status') {
                    document.cookie = `${key[0]}="";expires=Thu, 01 Jan 1970 00:00:00 UTC;${this.params.path}`;
                };
            };
        };
        function getCookies(){
            const current_cookies = Object.fromEntries(document.cookie.split('; ').map(c => c.split('='))); //get all current cookies.
            const keys = Object.keys(current_cookies); //get the name of the cookies only.
            const cookies = {};
            keys.forEach((key) => {
                if(key !== 'consentcookies_status') {
                cookies[key] = { name: key, title: `` };
            }});
            return cookies;
        };
        current_cookies_array = getCookies()
        const cc = CookiesConsentJS({
            expirationDays: 365,
            buttons : ["reject", "accept"],

            content : {
                title : "This website is using Cookies!",
                message : "<p>This web uses 3rd party cookies for statistical purposes that help us to improve the user experience.</p>",
                policy : "Privacy Policy",
                policyLink : "/site/privacy-policy/",
                btnAccept: "Accept all cookies",
                btnReject: "Reject all cookies",
                btnDismiss: "Show cookies message",
            },

            callback : {
                reject : "disableServices",
            },

            cookies : current_cookies_array,
        });
        </script>
