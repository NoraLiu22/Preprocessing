<!--<script>
window.onload = function() {
  var afeBrand = document.getElementById("afe-header-brand-meta");
  var afeModule = document.getElementById("afe-header-module");
  var afeBrandHeight = afeBrand.offsetHeight;
  var afeModuleHeight = afeModule.offsetHeight;
  var afeCircle = document.getElementById("afe-circle");

  // Hide afe-circle on page load
  afeCircle.style.display = "none";

  window.addEventListener("scroll", function() {
    var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    if (scrollTop > afeBrandHeight) {
      afeModule.style.position = "fixed";
      afeModule.style.top = "0";
      afeBrand.style.marginBottom = afeModuleHeight + "px";
      // Show afe-circle when afe-header-module is fixed
      afeCircle.style.display = "block";
    } else {
      afeModule.style.position = "static";
      afeBrand.style.marginBottom = "0";
      // Hide afe-circle when afe-header-module is static
      afeCircle.style.display = "none";
    }
  });

  window.addEventListener("resize", function() {
    afeModuleHeight = afeModule.offsetHeight;
    afeBrandHeight = afeBrand.offsetHeight;
  });
}

    </script>-->
	
