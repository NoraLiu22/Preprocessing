<script type="text/javascript" src="https://www.democratic-erosion.com/wp-content/themes/academy-pro/js/responsive-menus.min.js?ver=1.0.6" id="academy-responsive-menu-js"></script>

			<script type="text/javascript">
				var DrawChart = function (ctx,tooltip,title_input,color,data,action) {

					if (data.DataSets == '' || data.DataSets == undefined) {
						return false;
					}

					var myChart = new Chart(ctx, { //[0].getContext('2d')
								type: 'bar',
								data: {
								labels: data.AxisLabels,
								datasets: [{
									label: ' '+tooltip,
									data: data.DataSets,
									backgroundColor: '#'+color,
									borderColor: '#'+color,
									borderWidth: 1
								}]
							},
							options: {
								responsive: true,
								legend: { position: 'top' },
								title: { display: true, text: title_input },
								scales: {
									xAxes: [{ticks: { autoSkip: false } }],
									yAxes: [{ ticks: { beginAtZero: true, suggestedMax: (action == 'dedd_chart_erosion_severity') ? 4 : true } }]
								},
								legend: { display: false },
								tooltips: { displayColors: false }
							}
					});
				};

				var GetChart = function (action,selector,tooltip,title_input,color,filter) {
					jQuery.post(
						'https://www.democratic-erosion.com/wp-admin/admin-ajax.php',
						{ 'action': action, 'data': filter },
						function(response) {
							var data = JSON.parse(response);
							var ctx = jQuery(selector);
							DrawChart(ctx,tooltip,title_input,color,data,action);
					});
				};

				var CallTheChart = function(item,color,data) {
					ClearChart(item);
					jQuery.each(item, function(){
						var action = 'dedd_chart_'+this[0];
						var selector = '#'+this[0];
						var tooltip = this[1];
						var title = this[2];
						GetChart(action,selector,tooltip,title,color,data);
					});
				}

				var dedd_init = [
					['symptom_year', 'Symptom Category','Number of Symptoms per Year' ],
					['erosion_severity', 'Votes','Erosion Severity' ],
					['precursor', 'Count','Precursor Category' ],
					['symptom', 'Count','Symptom Category' ],
					['resistance', 'Count','Resistance Category' ],
					['erosion_country', 'Erosion Events','Number of Erosion Events by Country' ],
					['erosion_year', 'Erosion Events','Number of Erosion Events per Year' ]
				];

				var ClearChart = function(item) {
					var chartCb = jQuery('.dedd-chart').html();
					jQuery.each(item, function() {
						var selector = '#'+this[0];
						jQuery(selector).remove();
					});
					jQuery('.dedd-chart').html(chartCb);
				}
			</script>
		
			<script type="text/javascript">
				jQuery(document).ready(function() {
						// jQuery('.dedd-link-clear').hide();

						var filter = [];
						var color = '6495ed';
						CallTheChart(dedd_init,color,filter);
				});
			</script>
		
			<script type="text/javascript">
				jQuery(document).ready(function() {

					//Activate filter by button
					jQuery('.dedd-link').on('click', function(){

						jQuery('.dedd-link').each(function() {
							jQuery(this).attr('disabled', 'disabled');
							jQuery(this).removeClass('btn-success').addClass('btn-default');
						});

						jQuery(this).removeAttr('disabled');
						jQuery(this).removeClass('btn-default').addClass('btn-success');

						jQuery('.dedd-link-clear').addClass('visible');

						var filter = jQuery(this).parent('.dedd-filter').attr('data-filter');
						var filter_Value = jQuery(this).text();

						var filter = [filter, filter_Value];
						var color = '8bba30';
						CallTheChart(dedd_init,color,filter);
					});

					//Clear filter button click
					jQuery('.dedd-link-clear').on('click', function(){

						jQuery('.dedd-link').each(function() {
							jQuery(this).removeAttr('disabled');
							jQuery(this).removeClass('btn-success').addClass('btn-default');
						});

						jQuery('.dedd-link-clear').removeClass('visible');

						var filter = [];
						var color = '6495ed';
						CallTheChart(dedd_init,color,filter);
					});
				});
			</script>
		</body></html>
