// Replaces all links with www.era.nih.gov that were just era.nih.gov START
jQuery(document).ready(function($){
  $('a').each(function(){
    //console.log(this.href);
    if (this.href.indexOf("era.nih.gov")) {
       this.href = this.href.replace('https://era.nih.gov', 'https://www.era.nih.gov');
    }
   });
});
// Replaces all links with www.era.nih.gov that were just era.nih.gov END 
</script>

