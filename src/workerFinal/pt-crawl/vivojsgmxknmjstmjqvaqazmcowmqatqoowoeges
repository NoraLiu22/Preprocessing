        //Goes through each href in the list above and applies various items to it if it is the current url the browser is on
        //this includes highlighing background colors, hiding menu buttons, etc
        $.each(urltotarget, function (index, value) {
          if (window.location.href.indexOf(value) > -1) {
            $('a[href*="' + value + '"]').each(function () {
              // This sets the variable named n to be the html text in whatever is currently the URL
              var n = $(this).text().length;

              //if ($(window).width() < 1920) {
              //  var m = 40;
              //}
              //else {
              //  var m = 45;
              //}

              if ($(window).width() < 1920 && $(window).width() > 1500) {
                var m = 40;
              } else if ($(window).width() < 1500) {
                var m = 20;
              }

              // If the html text of the link is below 45 characters use the smaller arrow
              /*if (n < m) {
                if ($(this).is(".parentmenu-link, .selected-parentmenu")) {
                  $(this).append('<span class="arrow-right"></span>');
                } else {
                  $(this).append('<span class="arrow-right-sub"></span>');
                }

              }


              // If the html text of the link is equal to or more than 45 characters use the smaller arrow
              if (n >= m) {

                if ($(this).is(".parentmenu-link, .selected-parentmenu")) {
                  $(this).append('<span class="arrow-right-twolines"></span>');
                } else {
                  $(this).append('<span class="arrow-right-sub-twolines"></span>');
                }

              }*/

              $(this).parent("li").toggleClass("selected-item");

              // Checks if the current url is found within one of the open and close menus and hides the open and close button while adding the background color to the parent menu
              if ($(this).parents(".parentmenu").length) {
                $(this)
                  .closest(":has(a.parentmenu-link)")
                  .find(".parentmenu-link")
                  .toggleClass("selected-parentmenu");
                $(this)
                  .closest(":has(.openclose-menu)")
                  .find(".openclose-menu")
                  .toggleClass("hide-item");
              }

              // These add the background colors and remove the open and close items when needed
              $(this).next().next(".submenu").toggleClass("selected-submenu");
              $(this).closest(".submenu").toggleClass("selected-submenu");
              $(this).next().next(".submenu").toggleClass("hide-item");
              //$(this).closest(".submenu").toggleClass('hide-item');
              //$(this).next('.openclose-menu').toggleClass('hide-item');
              //$(this).next(".openclose-menu").toggleClass('hide-item');
              //$(this).find(".openclose-menu").toggleClass('hide-item');
              $(".nav-menu")
                .find("li.selected-item")
                .removeClass("selected-item");
            });
          }

          if (window.location.href.indexOf("coc") > -1) {
            $('.submenu li a[href$="coc.htm"]')
              .parent()
              .addClass("selected-item");
          }
        });

        $(".openclose-menu").click(function () {
          $(this).text(function (i, text) {
            return text === "+" ? "-" : "+";
          });
        });


        // This needs to be down here in order to execute after everything else relating to the highlight colors and styles
        if (
          window.location.href.indexOf("/policy/peer/revisions-nih-fellowship-application-review-process") >
            -1 ||
          window.location.href.indexOf("/policy/peer/revisions-nih-fellowship-application-review-process.htm") >
            -1
        ) {
          $(".hide-rev-sub").toggleClass("hide-rev-sub");
          $(".rev-sub").addClass("leftnav-active");
          $(".rev-sub").toggleClass("hide-item");
          $(".rev-list-subhead").css("background-color", "#aac996");
          $(".rev-list-subhead").css("font-weight", "bold");
          $(".rev-list-subheadli").removeClass("selected-item");
          
        }


        // This needs to be down here in order to execute after everything else relating to the highlight colors and styles
        if (
          window.location.href.indexOf("/policy/peer/simplifying-review") >
            -1 ||
          window.location.href.indexOf("/policy/peer/simplifying-review.htm") >
            -1
        ) {
          $(".hide-prpp-sub").toggleClass("hide-prpp-sub");
          $(".prpp-sub").addClass("leftnav-active");
          $(".prpp-sub").toggleClass("hide-item");
          $(".prpp-list-subhead").css("background-color", "#aac996");
          $(".prpp-list-subhead").css("font-weight", "bold");
          $(".prpp-list-subheadli").removeClass("selected-item");
          
        }

         if (
          window.location.href.indexOf("/policy/peer/plan-for-enhancing-diverse-perspectives") >
            -1 ||
          window.location.href.indexOf("/policy/peer/plan-for-enhancing-diverse-perspectives.htm") >
            -1
        ) {
          $(".hide-pedp-sub").toggleClass("hide-pedp-sub");
          $(".pedp-sub").addClass("leftnav-active");
          $(".pedp-sub").toggleClass("hide-item");
          $(".pedp-list-subhead").css("background-color", "#aac996");
          $(".pedp-list-subhead").css("font-weight", "bold");
          $(".pedp-list-subheadli").removeClass("selected-item");
          
        }
      </script>
    </ul>
  </li>
</ul>

