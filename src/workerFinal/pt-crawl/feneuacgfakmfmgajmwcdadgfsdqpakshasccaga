type: 'GET',
dataType: "xml"
}).done(function(xml) {
$.each($("item", xml), function(i, e) {
var itemURL = ($(e).find("link"));
var itemTitle = ($(e).find("title").first());
var itemThumb = ($(e).find("media\\:thumbnail").eq(0).attr("url"));
if ( itemThumb == null)
{
itemThumb = '/hmd/images/rss_circulating-now_logo.jpg';
}
var itemDescription = ($(e).find("description"));
var Description= itemDescription.text();
var endOfText = Description.indexOf("</div>");
var snippet = Description.substring(0, endOfText);

$(e).find("category").each(function() 
{ 
var category=$(this).text();

if (category == "NLM DeBakey Fellowship")
{
anchortag = Description.match(/<a[^>]+>/);
srcTag = Description.match(/src="[^"]+"/);

// imgTagUpdated = imgTag.toString().replace("webfeedsFeaturedVisual ", "");

