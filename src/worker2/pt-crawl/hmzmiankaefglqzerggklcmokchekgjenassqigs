        function onCancelNewFolderClick() { OmnitureClick('DocFull|Tools|SaveArticleCancelNewFolder'); }

        function omnitureUpdateSavedEntity() {
            ent = $("#UpdateSavedEntity");
            fid = ent.find("#FolderId");
            fname = ent.find("#FolderName");
            fsource = ent.find("#FolderSource");

            if (fsource != null && fsource.val() == "FolderList" && fid != null && fid.val() != "0")
                OmnitureClick('DocFull|Tools|SaveArticleMoveToFolder');
            else if (fsource != null && fsource.val() == "FolderName" && fname != null && fid.val() != "")
                OmnitureClick('DocFull|Tools|SaveArticleCreateNewFolder');

            notes = ent.find("#Notes");
            if (notes != null && notes.val() != "")
                setTimeout(omnitureNotesStep2, 500);
        }

        function omnitureNotesStep2() {
                
                OmnitureClick('DocFull|Tools|CreateArticleNoteStep2');
        }
        
        function onUpdateNotesFieldClick() {
            if(!_notesCreationStarted) {
                _notesCreationStarted = true;   // only call the click once
                OmnitureClick('DocFull|Tools|CreateArticleNoteStep1');
            }
        }
        var _notesCreationStarted = false;
