          <mfrac>
            <mrow>
              <mi>d</mi>
              <msup>
                <mi>S</mi>
                <mrow class="MJX-TeXAtom-ORD">
                  <mn>2</mn>
                </mrow>
              </msup>
            </mrow>
            <mn>2</mn>
          </mfrac>
        </mrow>
        <mo>+</mo>
        <mi>&#x03BA;<!-- κ --></mi>
        <mi>d</mi>
        <mi>&#x03C3;<!-- σ --></mi>
        <mo>+</mo>
        <mi>&#x03B8;<!-- θ --></mi>
        <mi>d</mi>
        <mi>t</mi>
