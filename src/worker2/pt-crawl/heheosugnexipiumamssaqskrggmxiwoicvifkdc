        <mi mathvariant="normal">&#x0393;<!-- Γ --></mi>
        <mrow class="MJX-TeXAtom-ORD">
          <mfrac>
            <mrow>
              <mi>d</mi>
              <msup>
                <mi>S</mi>
                <mrow class="MJX-TeXAtom-ORD">
                  <mn>2</mn>
                </mrow>
              </msup>
            </mrow>
            <mn>2</mn>
          </mfrac>
        </mrow>
        <mo>+</mo>
        <mi>&#x03BA;<!-- κ --></mi>
        <mi>d</mi>
