        <mi>d</mi>
        <mi>t</mi>
        <mo>&#x2212;<!-- − --></mo>
        <mi mathvariant="normal">&#x0394;<!-- Δ --></mi>
        <mi>d</mi>
        <mi>S</mi>
        <mo>=</mo>
        <mi mathvariant="normal">&#x0393;<!-- Γ --></mi>
        <mrow class="MJX-TeXAtom-ORD">
          <mfrac>
            <mrow>
