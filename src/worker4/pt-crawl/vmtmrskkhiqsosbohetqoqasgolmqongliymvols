              $("#nav_2_static_project_vorwort_de").addClass("active");
              $(".nav_level3_lang").show();
              $("#nav_3_lang_de").addClass("active");
            }
            if(checkUrl2("vorwort_en") == true){
              $("#nav_1_project").addClass("active");
              $(".nav_level2_static_project").show();
              $("#nav_2_static_project_vorwort_de").addClass("active");
              $(".nav_level3_lang").show();
              $("#nav_3_lang_en").addClass("active");
            }

	    //Tab "Danksagung"
            if(checkUrl2("danksagung") == true){
              $("#nav_1_project").addClass("active");
              $(".nav_level2_static_project").show();
              $("#nav_2_static_project_danksagung").addClass("active");
