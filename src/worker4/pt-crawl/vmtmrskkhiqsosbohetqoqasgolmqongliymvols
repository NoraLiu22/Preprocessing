          $( document ).ready(function() {

            /*
             *  #### NAVBAR HANDLING FOR CONFIG PAGES
             */
          
            checkUrl = function(str){
              var type = "";
              
              if(window.location.pathname.indexOf(str) >= 0){
                console.info("config page: " + str);
                return true;
              }
              else{
                console.info("no config page");
                return false;
              }
            }

	    checkUrl2 = function(str) {
	      if(window.location.href.indexOf(str) >= 0) {
	        console.info("found " + str  + " in URL");
		return true;
	      } else {
	        console.info("did not find " + str + " in URL");
		return false;
	      }
	    }

            //Tab1: Classification
            if(checkUrl("classificationEditor") == true){
              $("#nav_1_config").addClass("active");
              $(".nav_level2_config").show();
              $("#nav_2_config_classification").addClass("active");
              $(".nav_level3_config_classification").show();
              $("#nav_3_conf_class_keywords").addClass("active");
            }

            //Tab6: User
            if(checkUrl("MCRUserServlet") == true){
              $("#nav_1_config").addClass("active");
              $(".nav_level2_config").show();
              $("#nav_2_config_user").addClass("active");
              $(".nav_level3_config_user").show();
              $("#nav_3_conf_user_account").addClass("active");
            }

            if(checkUrl("change-password.xed") == true){
              $("#nav_1_config").addClass("active");
              $(".nav_level2_config").show();
              $("#nav_2_config_user").addClass("active");
              $(".nav_level3_config_user").show();
              $("#nav_3_conf_user_password").addClass("active");
            }
        
	    //Tab "Autoren"
            if(checkUrl2("author_search") == true){
              $("#nav_1_config").addClass("active");
              $(".nav_level2_config").show();
              $("#nav_2_config_classification").addClass("active");
              $(".nav_level3_config_classification").show();
              $("#nav_3_conf_class_authors").addClass("active");
