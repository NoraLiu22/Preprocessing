<script src="https://www.lexm.uni-hamburg.de//js/js.cookie.js"></script><script>
    $( document ).ready(function() {

        // versteckt die Kurzanzeige (Lotte Schöne) der jeweiligen Überschrift in den Inhalten,
	// zeigt die Langanzeige (Lotte Schöne – Personendaten) der jeweiligen Überschrift in den Inhalten
	showFull = function() {
	    $(".short").hide();
	    $(".full").show();
	}

	// wie showFull nur umgekehrt
	showShort = function() {
	    $(".short").show();
	    $(".full").hide();
	}

	// verstecke alle Inhalte
	hideAll = function() {
	    $("#content_headline").hide();
	    $("#content_biography").hide();
	    $("#content_persondata").hide();
	    $("#content_jobs").hide();
	    $("#content_exile").hide();
	    $("#content_acts").hide();
	    $("#content_documents").hide();
	    $("#content_links").hide();
	    $("#content_pics").hide();
	    $("#content_notes").hide();
	    $("#content_music").hide();
	    $("#content_ids").hide();

	    $("#citation_biography").hide();
	    $("#citation_complete").hide();
	}

	// default Ansicht (erster Aufruf der Seite ohne Parameter etc.)
	$("#nav_1_person").addClass("active");
	$("#menu_complete").addClass("active");
	showShort();
	$("#citation_complete").show();
	$(".nav_level2_person").show();
	$("#nav_2_person_wholelist").addClass("active");

	$("#menu_complete").click(function() {
	    clearActive();
	    $("#menu_complete").addClass("active");
	    showShort();
	    hideAll();

	    $("#citation_complete").show();

	    $("#content_headline").show();
	    $("#content_biography").show();
	    $("#content_persondata").show();
	    $("#content_jobs").show();
	    $("#content_exile").show();
	    $("#content_acts").show();
	    $("#content_documents").show();
	    $("#content_links").show();
	    $("#content_ids").show();

   	    return false; 
	});

	$("#menu_biography").click(function() {
	    clearActive();
	    $("#menu_biography").addClass("active");
	    hideAll();

	    $("#citation_biography").show();

	    $("#content_headline").show();
	    $("#content_biography").show();

   	    return false; 
	});

	$("#menu_persondata").click(function() {
	    clearActive();
	    $("#menu_persondata").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_persondata").show();

   	    return false; 
	});

	$("#menu_jobs").click(function() {
	    clearActive();
	    $("#menu_jobs").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_jobs").show();

   	    return false; 
	});

	$("#menu_exile").click(function() {
	    clearActive();
	    $("#menu_exile").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_exile").show();

   	    return false; 
	});

	$("#menu_acts").click(function() {
	    clearActive();
	    $("#menu_acts").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_acts").show();

   	    return false; 
	});

	$("#menu_documents").click(function() {
	    clearActive();
	    $("#menu_documents").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_documents").show();

   	    return false; 
	});

	$("#menu_links").click(function() {
	    clearActive();
	    $("#menu_links").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_links").show();

   	    return false; 
	});

	$("#menu_pics").click(function() {
	    clearActive();
	    $("#menu_pics").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_pics").show();

   	    return false; 
	});

	$("#menu_notes").click(function() {
	    clearActive();
	    $("#menu_notes").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_notes").show();

   	    return false; 
	});

	$("#menu_music").click(function() {
	    clearActive();
	    $("#menu_music").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_music").show();

   	    return false; 
	});

	$("#menu_ids").click(function() {
	    clearActive();
	    $("#menu_ids").addClass("active");
	    showFull();
	    hideAll();

	    $("#content_ids").show();

   	    return false; 
	});

	// entferne das "active" attribute von allen inhalten, damit zeigt bootstrap diese nicht mehr
	// als Aktiv (Rot) an
	clearActive = function(){
	    $("#menu_complete").removeClass("active");
	    $("#menu_biography").removeClass("active");
	    $("#menu_persondata").removeClass("active");
	    $("#menu_jobs").removeClass("active");
	    $("#menu_exile").removeClass("active");
	    $("#menu_acts").removeClass("active");
	    $("#menu_documents").removeClass("active");
	    $("#menu_links").removeClass("active");
	    $("#menu_pics").removeClass("active");
	    $("#menu_notes").removeClass("active");
	    $("#menu_music").removeClass("active");
	    $("#menu_ids").removeClass("active");
	}
	
	// teste, ob ein gegebener String in der URL vorkommt
	checkUrl2 = function(str) {
	    if(window.location.href.indexOf(str) >= 0) {
		console.info("found " + str  + " in URL");
		return true;
	    } else {
		console.info("did not find " + str + " in URL");
		return false;
	    }
	}
	
	// nach Seitenaufruf -> öffne Tab, wenn in der URL entsprechende Strings vorkommen
	// wird nach bestimmten Weiterleitungen verwendet
	switchTabUrl = function() {
	    if(checkUrl2("complete") == true){
		$("#menu_complete").click();
	    }
	    if(checkUrl2("biography") == true){
		$("#menu_biography").click();
	    }
	    if(checkUrl2("persondata") == true){
		$("#menu_persondata").click();
	    }
	    if(checkUrl2("contrib") == true){
		$("#menu_jobs").click();
	    }
	    if(checkUrl2("exile") == true){
		$("#menu_exile").click();
	    }
	    if(checkUrl2("acts") == true){
		$("#menu_acts").click();
	    }
	    if(checkUrl2("docs") == true){
		$("#menu_documents").click();
	    }
	    if(checkUrl2("links") == true){
		$("#menu_links").click();
	    }
	    if(checkUrl2("norm") == true){
		$("#menu_ids").click();
	    }
	    if(checkUrl2("fotos") == true){
		$("#menu_pics").click();
	    }
	    if(checkUrl2("noten") == true){
		$("#menu_notes").click();
	    }
	    if(checkUrl2("musik") == true){
		$("#menu_music").click();
	    }
	}

	// nach Seitenaufruf -> öffne Tab, wenn der String entsprechend aussieht
	// wird nach setzen von Informationen aus Cookies verwendet 
	// (Weiterleitung nach Speichern am Ende eines Editiervorgangs)
	switchTabParam = function(viewStr) {
	    if(viewStr == "complete"){
		$("#menu_complete").click();
	    }
	    if(viewStr == "biography"){
		$("#menu_biography").click();
	    }
	    if(viewStr == "persondata"){
		$("#menu_persondata").click();
	    }
	    if(viewStr == "contrib"){
		$("#menu_jobs").click();
	    }
	    if(viewStr == "exile"){
		$("#menu_exile").click();
	    }
	    if(viewStr == "acts"){
		$("#menu_acts").click();
	    }
	    if(viewStr == "docs"){
		$("#menu_documents").click();
	    }
	    if(viewStr == "links"){
		$("#menu_links").click();
	    }
	    if(viewStr == "norm"){
		$("#menu_ids").click();
	    }
	}
	
	// URL-Parameter 'view' is set when canceling (Abbrechen) is clicked in a form
	// cookies with view are set when saving a form (#save onClick in lexmperson_[...].xed)
	// read cookie
	console.log('cookie: view: ' + Cookies.get('view'));
	var view = Cookies.get('view');
	Cookies.set('view', ''); // cookie wieder löschen

	if(view) {
	    // wenn Weiterleitungs-Informationen durch Cookie gesetzt wurden:
	    switchTabParam(view);
	} else {
	    switchTabUrl();
	}
    });
</script>
