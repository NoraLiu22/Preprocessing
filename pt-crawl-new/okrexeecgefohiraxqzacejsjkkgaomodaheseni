            var gusto = window.gusto || {};
            gusto.temp_player_launch = {
                localised: true,
                url: gusto.PLAYER_INFO.player_url,
                open : function(e) {
                    e.preventDefault();
                    if (gusto.temp_player_launch.url) {
                        window.open(gusto.temp_player_launch.url, 'playerWin', 'width=380,height=665,status=0,resizable=1');
                    }
                },
                init: function() {
                    var btns = document.getElementsByClassName('player_button');
                    for (var btnIndex = 0; btnIndex < btns.length; btnIndex++) {
                        btns[btnIndex].href = (this.localised && this.url) ? this.url: '/localise/';
                        if ((this.localised) && (window.innerWidth >= 1024)) {
                            btns[btnIndex].addEventListener('click', gusto.temp_player_launch.open);
                        }
                    }
                }
            };
            gusto.temp_player_launch.init();
