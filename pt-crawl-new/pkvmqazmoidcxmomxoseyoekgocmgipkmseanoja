    <section class="flexibleblocks-block __text __animate __smlmargin">
        <div class="container-fluid">
            <div class="row __center">
                <div class="col-12 col-lg-8 col-xl-6">
                    <div class="usercontent">
                        <p><strong>In Wales, you should be able to live your life through the medium of Welsh.  </strong></p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="flexibleblocks-block __video __smlmargin">
        <div class="container-fluid">
