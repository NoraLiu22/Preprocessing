            let target,played_ad;
            
            var player = videojs(document.getElementById('lee-outstream-player'), {
                muted: true,
                fluid: true,
                loop: false
            });
            
            player.ima({
                adTagUrl: vast,
                vastLoadTimeout: 7000,
                playerMode: 'outstream',
            });

            player.ima.initializeAdDisplayContainer();
            
            player.on('adsready', (e) => {
                if(!window.lee_meter_loaded){
                    console.log('[Outstream] init.');
                player.trigger('nopostroll');
                var promise = player.play();
                promise.then(() => {
                })
                .catch(() => {
                    lee_initStnPlayer();
                });
                } else {
                }
            });

            player.on('ads-manager', (e) => {
                target = e;
                
                target.adsManager.addEventListener(google.ima.AdEvent.Type.ALL_ADS_COMPLETED, (e) => { 
                    player.ads.endLinearAdMode();
                    player.pause();
                        if(!played_ad){ 
                            lee_initStnPlayer();
                        }
                });
            });

            player.on('ads-ad-started', (e) => {
                played_ad = true;
                wrapper.style.display = 'block';
                    
                const stick = () => {
                    if(!wrapper.classList.contains('sticky')){
                        wrapper.classList.add('sticky');
                        target.adsManager.resize(wrapper.offsetWidth, wrapper.offsetHeight, google.ima.ViewMode.NORMAL);
                    }
                }
    
                const unstick = (evnt = false) => {
                    if(wrapper.classList.contains('sticky')){
                        wrapper.classList.remove('sticky');
                        target.adsManager.resize(wrapper.offsetWidth, wrapper.offsetHeight, google.ima.ViewMode.NORMAL);
                    }
                    if(evnt) removeEventListener('scroll', evnt, false);
                }

                if(!__tnt.elementOnScreen('#lee-outstream-container')) stick();
                    
                const sticky = throttleFunction(() => {
                    if(!__tnt.elementOnScreen('#lee-outstream-container')){
                        stick();
                    } else {
                        unstick();
                    }
                }, 50);
    
                window.addEventListener('scroll', sticky);
                    
                target.adsManager.addEventListener(google.ima.AdEvent.Type.COMPLETE, (e) => { 
                    player.ads.endLinearAdMode();
                    player.pause();
                    unstick(sticky);
                    wrapper.style.display = 'none';
                });

                document.getElementById('lee-outstream-close').addEventListener('click', (e) => {
                    player.ima.pauseAd();
                    unstick(sticky);
                });
            });
            }
        })(); /*]]>*/</script>
