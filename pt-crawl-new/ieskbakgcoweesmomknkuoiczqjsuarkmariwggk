    <script>
        jQuery(document).ready(function($){
            window.lee_fetched_services = false;

            try {
                if(typeof window.falconOffer != 'object') throw new error('Offer not defined');
                
                var sHtml = $('#lee-service-template').html();
                
                $.each(window.falconOffer, function(k, v) {
                    if(k === 'html'){
                        v = v.replace(new RegExp('{{domain}}', 'gi'), 'richmond.com')
                            .replace(new RegExp('{{site_name}}', 'gi'), 'Richmond Times-Dispatch')
                            .replace(new RegExp('{{business_name}}', 'gi'), 'Richmond Times-Dispatch')
                            .replace(new RegExp('{{site_phone}}', 'gi'), '800-468-3382');
                    }
                    if(v){
                        sHtml = sHtml.replace(new RegExp('{{'+k+'}}', 'gi'), v);
                    } else {
                        sHtml = sHtml.replace(new RegExp('{{'+k+'}}', 'gi'), '');
                    }
                });
                 
                $('#lee-services-list .packages').html(sHtml).promise().then(function(){
                    $('#lee-services-list .loading').hide();
                    $('#lee-services-list .packages').css('opacity', 1);
                });
            } catch (e) {
                if(window.console) console.error(e);
                $('#lee-services-list .loading').hide();
                $('#lee-services-list .packages').css('opacity', 1);
            }

            window.lee_fetched_services = true;
        });
    </script></div>
