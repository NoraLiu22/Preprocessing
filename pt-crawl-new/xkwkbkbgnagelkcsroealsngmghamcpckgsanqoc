            'enable_ads_related_videos': window.gusto.ad_switch ? window.gusto.ad_switch.enable_ads_related_videos : 'true',
            'mappings': {
                'banner': {
                    'sizes': [[728, 90], [970, 250]],
                    'position': 'top'
                },
                'mpu': {
                    'sizes': [300, 250],
                    'position': 'mpu1'
                },
