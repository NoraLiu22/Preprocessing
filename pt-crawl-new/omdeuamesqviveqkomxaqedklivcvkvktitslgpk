         var self_host = new URI(location.href).host();
         $("a").on('click', function(e) {
            var ev_category = $(this).attr('data-ga-event');
            var href = $(this).attr('href');
            var url = new URI(href);
            var host = url.host();
            if( host.length > 0 && self_host == host ) {
                href = url.path();
                if( url.query() ) {
                   href = href + '?' + url.query();
