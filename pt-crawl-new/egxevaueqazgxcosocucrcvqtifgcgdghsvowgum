if(index===invisibleElements.length-1){resolve()}})});menuLoop.then(()=>{const mainContainerWidth=document.getElementById('maincontainer').offsetWidth-40
setTimeout(()=>{const subNavWithMore=document.querySelectorAll('nav.main-navigation ul.sub-navigation > li');let more=subNavWithMore[subNavWithMore.length-1];if(more.offsetTop>140){subNavMore.prepend(more.previousElementSibling);subNavMore.style.minWidth=(mainContainerWidth-more.offsetLeft+20)+'px'}
