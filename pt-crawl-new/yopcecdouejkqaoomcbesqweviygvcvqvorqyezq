<script>
$(".primary > li > a").click(function () {
     var windowWidth = $(window).width();
     if (windowWidth <= 768) {
         if ($(this).parent().hasClass("openSection")) {
             $("li.openSection").removeClass("openSection");
         } else {
             $("li.openSection").removeClass("openSection");
             $(this).parent("li").addClass("openSection");
         }
     }
 });
 $(".category > .group-label").click(function () {
     var windowWidth = $(window).width();
     if (windowWidth <= 768) {
