    var $=jQuery.noConflict();
    //fixes opening and closing search form on desktop
    function openSearch(){
        $('.td-drop-down-search').addClass("td-drop-down-search-open");
    };
    function closeSearch(){
        $('.td-drop-down-search').removeClass("td-drop-down-search-open");
    };
</script>
