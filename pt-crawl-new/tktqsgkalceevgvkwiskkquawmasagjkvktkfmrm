<img srcset="https://cdn.vox-cdn.com/thumbor/3dwUIaxvsF7XFU-B0IHm7KM9D1k=/0x0:1920x1080/320x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 320w, https://cdn.vox-cdn.com/thumbor/pscFYmw4Hal-GHIKY-urnwF1fiY=/0x0:1920x1080/520x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 520w, https://cdn.vox-cdn.com/thumbor/9z6mUImjUSYLRdmP0347Ajfl51U=/0x0:1920x1080/720x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 720w, https://cdn.vox-cdn.com/thumbor/pLEe3w2hgaPGGWYjigiHDwZ4JlQ=/0x0:1920x1080/920x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 920w, https://cdn.vox-cdn.com/thumbor/G4eIjO_IYTE1DgJWLlRhupuobDY=/0x0:1920x1080/1120x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 1120w, https://cdn.vox-cdn.com/thumbor/5vU1tPZPsXbhYiLeLpgf0XuprqA=/0x0:1920x1080/1320x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 1320w, https://cdn.vox-cdn.com/thumbor/gZf5W80R4k1N1GVJYKZyWHzS6yU=/0x0:1920x1080/1520x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 1520w, https://cdn.vox-cdn.com/thumbor/dMZQmvmY8VjqTyU5sTOhTvJpDM4=/0x0:1920x1080/1720x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 1720w, https://cdn.vox-cdn.com/thumbor/FEJsjJ4SPDSXLwhO6K25WBkPO7k=/0x0:1920x1080/1920x0/filters:focal(0x0:1920x1080):no_upscale()/cdn.vox-cdn.com/uploads/chorus_asset/file/25242382/tekken_8_jaguar_characters_roster.jpg 1920w" sizes="90vw" al