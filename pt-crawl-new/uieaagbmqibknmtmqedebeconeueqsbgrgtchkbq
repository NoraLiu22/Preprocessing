<script>
'use strict';
(function() {

	let observer;
	document.addEventListener('pjax:success', function() {
		const hero = document.querySelector('.homeHero');
		if(!hero) return;
		
		const tags = document.querySelector('.featuredProductTags');
		if(observer) observer.disconnect();
		observer = new IntersectionObserver(function(entries) {
			for(const entry of entries) {
				tags.classList.toggle('featuredProductTags--forceOpen', entry.isIntersecting);
			}
		});

		observer.observe(hero);
	});
})();
</script>


	<div id="body__contentWrapper">
		<div id="body__content">
			<main>
				
				<script>
				'use strict';
					(function() {
						
		function details_init() {
			const priceIndicators = document.querySelectorAll('.priceIndicator');
			const addToCartButtons = document.querySelectorAll('.addToCart');
			const shippingIndicators = document.querySelectorAll('.shippingIndicator');
			const optionDropdowns = document.querySelectorAll('.productHero__variantSelect select');

			async function handleAddToCart() {
				addToCartButtons.forEach((el) => {
					el.disabled = true;
					Array.from(el.children).forEach((c) => c.classList.add('hidden'));
					el.querySelector('.submitStatus--pending').classList.remove('hidden');
				});
				optionDropdowns.forEach((el) => {
					el.disabled = true;
				});

				try {
					const attrs = {};
					if(window.selectedVariant.shipping__backorder_date && window.selectedVariant.shipping__backorder_date.value) attrs.shipping__backorder_date = window.selectedVariant.shipping__backorder_date.value;
					const items = [];
					items.push({
						variantId: window.selectedVariant.id,
						quantity: 1,
						attributes: attrs,
						variantIdNumeric: parseInt(window.selectedVariant.id.split('/').splice(-1)[0]),
						productIdNumeric: 6764574179406,
					});

					await checkoutAdd(items);
					pjax.load('/cart');

					const evt = new Event('cart:added', {bubbles: true, cancelable: true});
					evt.items = items;
					document.dispatchEvent(evt);
				} catch(e) {
					console.error(e);
					addToCartButtons.forEach((el) => {
						el.disabled = false;
						Array.from(el.children).forEach((c) => c.classList.add('hidden'));
						el.querySelector('.submitStatus--default').classList.remove('hidden');
					});
					optionDropdowns.forEach((el) => {
						el.disabled = false;
					});
					alert('There was an error adding the item to your cart. Please try again later.');
					return;
				}

				addToCartButtons.forEach((el) => {
					el.disabled = true;
					Array.from(el.children).forEach((c) => c.classList.add('hidden'));
					el.querySelector('.submitStatus--done').classList.remove('hidden');
					el.classList.add('bg--sunset1');
					el.style.opacity = '1';
				});
				optionDropdowns.forEach((el) => {
					el.disabled = false;
				});
			}

			addToCartButtons.forEach((el) => {
				el.addEventListener('click', handleAddToCart);
			});

			function updateUI() {
				addToCartButtons.forEach((el) => {
					el.disabled = !window.selectedVariant;
					Array.from(el.children).forEach((c) => c.classList.add('hidden'));
					el.querySelector('.submitStatus--default').classList.remove('hidden');
					el.style.opacity = '';
					el.classList.remove('bg--sunset1');
				});

				let price = parseFloat(window.selectedVariant.price.amount);

				priceIndicators.forEach(function(indicator) {
					indicator.innerText = Intl.NumberFormat('en-US', {currency: window.selectedVariant.price.currencyCode, style: 'currency'}).format(price);
				});

				shippingIndicators.forEach(function(indicator) {
					if(window.selectedVariant.shipping__backorder_date && window.selectedVariant.shipping__backorder_date.value) {
						const d = new Date(window.selectedVariant.shipping__backorder_date.value);
						indicator.innerText = `Estimated ship date is ${d.toLocaleDateString(undefined, {month: 'long', day: 'numeric', year: 'numeric'})}`;
					} else if(window.selectedVariant.shipping__cutoff_message && window.selectedVariant.shipping__cutoff_message.value) {
						indicator.innerText = window.selectedVariant.shipping__cutoff_message.value;
					} else {
					}
				});

				try {
					const p_id = 6764574179406;
					const v_id = parseInt(window.selectedVariant.id.split('/').slice(-1)[0]);
					const prod = track__buildProduct(p_id.toString(), v_id.toString(), undefined, undefined);
					if(window._pageInitComplete) {
						track_productView(prod);
					} else {
						window._trackingQueue.push(prod);
					}
				} catch(e) {
					console.error(e);
				}
			}

			const VARIANTS = {
				'40098672607310': {"id":"gid://shopify/ProductVariant/40098672607310","availableForSale":true,"price":{"amount":"99.0","currencyCode":"USD"},"requiresShipping":true,"selectedOptions":[{"name":"Quantity","value":"One Pillow"}],"sku":"EFPQ-1","title":"One Pillow","weight":5.0,"weightUnit":"POUNDS","unitPrice":null,"shipping__cutoff_message":null,"shipping__backorder_date":null},
				'40098672640078': {"id":"gid://shopify/ProductVariant/40098672640078","availableForSale":true,"price":{"amount":"169.0","currencyCode":"USD"},"requiresShipping":true,"selectedOptions":[{"name":"Quantity","value":"Two Pillows"}],"sku":"EFPQ-2","title":"Two Pillows","weight":10.0,"weightUnit":"POUNDS","unitPrice":null,"shipping__cutoff_message":null,"shipping__backorder_date":null},
			};
			window.VARIANTS = VARIANTS;
			window.selectedVariant = null;

			// detect query parameter
			const qp = new URLSearchParams(window.location.search);
			let qp_variant = qp.get('variant');

			window.product_applyOptions = function(form) {
				let options;

				if(qp_variant) {
					window.selectedVariant = VARIANTS[qp_variant];
					qp_variant = null;
					if(!window.selectedVariant) {
						console.error('Unknown variant ID from query parameter.');
						return;
					}

					options = {
						Quantity: window.selectedVariant.selectedOptions.find((o) => o.name == 'Quantity').value,
					}
				} else {
					
					options = {
						Quantity: form.querySelector('[data-option-name=Quantity]').value,
					};

					if(options['Quantity'] == 'One Pillow' &&
					true) {
						window.selectedVariant = VARIANTS['40098672607310'];
					} else 					if(options['Quantity'] == 'Two Pillows' &&
					true) {
						window.selectedVariant = VARIANTS['40098672640078'];
					} else 
					{
						window.selectedVariant = null;
						console.error('Unknown option configuration:', options);
						alert('There was a problem with the product you selected. Please try again later.');
						return;
					}
				}


				// set all options
				for(const key in options) {
					document.querySelectorAll(`[data-option-name=${key}]`).forEach((input) => {
						input.value = options[key];
					});
				}

				updateUI();
			}

			window.product_applyOptions(document.querySelector('.productHero__form'));

		}

		document.addEventListener('pjax:success', details_init, {once: true});
	
					})();
					(function() {
						
window.addEventListener('pjax:success', function() {
	function mod(n, m) {
		return ((n % m) + m) % m;
	}

	document.querySelectorAll('.imageCarousel').forEach(function(carousel) {
		const images = carousel.querySelectorAll('img.imageCarousel__slide');

		const container = carousel.querySelector('.imageCarousel__slides');
		
		const indicatorCurrent = carousel.querySelector('.imageCarousel__indicatorCurrent');
		const indicatorTotal = carousel.querySelector('.imageCarousel__indicatorTotal');
		indicatorTotal.innerText = images.length;

		const buttonPrev = carousel.querySelector('button.imageCarousel__prev');
		const buttonNext = carousel.querySelector('button.imageCarousel__next');

		let visible = 0;
		let transitioning = false;

		const updateVisibility = function(hideIndex, showIndex, right) {
			indicatorCurrent.innerText = showIndex + 1;

			transitioning = true;
			const showImage = images[showIndex];
			const hideImage = images[hideIndex];

			showImage.style.transition = 'none';
			showImage.style.transform = `translateX(${right ? '100%' : '-100%'})`;
			hideImage.style.transition = 'none';
			hideImage.style.transform = 'translateX(0%)';

			// trigger reflow, more reliable than setTimeout
			showImage.offsetHeight;
			
			showImage.addEventListener('transitionend', () => {
				transitioning = false;
			}, {once: true});
			showImage.style.transition = 'transform 0.5s cubic-bezier(0.65, 0, 0.35, 1)';
			showImage.style.transform = 'translateX(0%)';
			hideImage.style.transition = 'transform 0.5s cubic-bezier(0.65, 0, 0.35, 1)';
			hideImage.style.transform = `translateX(${right ? '-100%' : '100%'})`;

		};

		function slidePrev() {
			if(transitioning) return;

			const old = visible;
			visible = mod(visible - 1, images.length);
			updateVisibility(old, visible, false);
		}

		function slideNext() {
			if(transitioning) return;

			const old = visible;
			visible = mod(visible + 1, images.length);
			updateVisibility(old, visible, true);
		}

		buttonPrev.addEventListener('click', slidePrev);
		buttonNext.addEventListener('click', slideNext);

		const SWIPE_THRESHOLD = 25;
		let touchStartX = 0;
		container.addEventListener('touchstart', (event) => {
			touchStartX = event.changedTouches[0].screenX;
		}, {passive: true});
		container.addEventListener('touchend', (event) => {
			const diff = event.changedTouches[0].screenX - touchStartX;
			if(diff > SWIPE_THRESHOLD) {
				slidePrev();
			} else if(diff < -SWIPE_THRESHOLD) {
				slideNext();
			}
		}, {passive: true});
	});
}, {once: true});

					})();
					(function() {
						function closeAllFolds(exclude) {
	document.querySelectorAll('.accordion__fold').forEach((f) => {
		if(f == exclude) return;
		f._toggle(false);
	});
}

function initAccordionFold(fold) {
	const body = fold.querySelector('.accordion__foldBody');
	fold._toggle = function(open) {
		if(open == undefined) open = fold.classList.contains('accordion__fold--closed');
		if(open == true) closeAllFolds(fold);

		fold.classList.toggle('accordion__fold--closed', !open);
		fold.setAttribute('aria-expanded', open);
		body.style.transition = 'height 0.5s';
		if(!open) {
			body.style.height = '0px';
		} else {
			body.style.height = body.firstElementChild.getBoundingClientRect().height + 'px';
		}
	}
	fold.addEventListener('click', function() {
		fold._toggle();
	});
	fold.addEventListener('keydown', function(event) {
		if(event instanceof KeyboardEvent && event.key !== 'Enter' && event.key !== ' ') return;
		fold._toggle();
		event.preventDefault(); // prevent space key from scrolling downwards
	});
}

document.addEventListener('pjax:success', function() {
	document.querySelectorAll('.accordion__fold').forEach(initAccordionFold);
	closeAllFolds();
}, {once: true});

window.addEventListener('resize', function() {
	this.document.querySelectorAll('.accordion__fold').forEach(function(fold) {
		if(fold.classList.contains('accordion__fold--closed')) return;
		const body = fold.querySelector('.accordion__foldBody');
		body.style.height = body.firstElementChild.getBoundingClientRect().height + 'px';
	});
});

					})();
					(function() {
						

const AVATARS = {
		1: {
			path: '/img/karl_64x.jpg',
			width: 64,
			height: 64,
		},
		3: {
			path: '/img/ezra_64x.jpg',
			width: 64,
			height: 64,
		},
};

let section, content, paginator, paginateButton, errorMessage, searchInput, searchTrigger;
let reviewTemplate, responseTemplate, filterTemplate;
let observer;
let questionFilterMenuBuilt = false;
let lastId = null;
const variantFilters = {};
const questionFilters = {};

function adjustDisplaySize(body) {
	const measurement = body.firstElementChild.getBoundingClientRect().height + 5; // 5px extra to account for descenders
	const open = body.classList.contains('review__body--open');
	body.style.height = open ? `${Math.max(measurement, 120)}px` : '120px';
	body.nextElementSibling.style.visibility = measurement > 120 ? 'visible' : 'hidden'; // button
	body.classList.toggle('review__body--appropriatelySized', measurement <= 120);
}

function formatDate(d) {
	return d.toLocaleDateString();
}

function highlight(str) {
	return str.replaceAll('%%%$', '<mark>').replaceAll('$@@@', '</mark>');
}

async function fetchReviews(productId, afterId, limit, variantFilters, questionFilters, searchQuery) {
	const url = new URL(`https://reviews-api.earthfoam.com/product/${productId}/reviews`);
	if(afterId) url.searchParams.set('after_id', afterId);
	if(limit) url.searchParams.set('limit', limit);
	for(const id in questionFilters) {
		url.searchParams.set(`answers[${id}]`, questionFilters[id]);
	}

	if(Object.keys(variantFilters).length) {
		const variantIDs = [];
		for(const variantID in window.VARIANTS) {
			const variant = window.VARIANTS[variantID];
			let add = true;
			for(const option of variant.selectedOptions) {
				if(option.name in variantFilters && option.value != variantFilters[option.name]) {
					add = false;
					break;
				}
			}

			if(add) variantIDs.push(variantID);
		}
		url.searchParams.set('variants', variantIDs.join(','));
	}
	const search = searchQuery.trim();
	if(searchQuery && searchQuery.length > 0) {
		url.searchParams.set('search', search);
	}

	const res = await fetch(url.toString());
	return await res.json();
}

async function loadPage(afterId, scroll, clearExisting) {
	try {
		content.classList.remove('hidden');
		errorMessage.classList.add('hidden');
		paginator.classList.remove('hidden');
		content.classList.add('reviews__content--disabled');
		paginateButton.innerText = 'Loading...';
		paginateButton.disabled = true;

		const limit = 4;
		const data = await fetchReviews(content.dataset.productId, afterId, limit, variantFilters, questionFilters, searchInput.value);
		if(data.reviews.length == 0 && lastId == null) {
			errorMessage.innerText = 'Our apologies, we cannot find what you are looking for.';
			errorMessage.classList.remove('hidden');
		}

		if(data.reviews.length < limit) {
			paginator.classList.add('hidden');
		} else {
			lastId = data.reviews[data.reviews.length-1].id;
		}

		if(clearExisting) {
			while(content.lastChild) content.lastChild.remove();
		}

		if(!questionFilterMenuBuilt) buildFilterMenu(Object.values(data.questions));
		questionFilterMenuBuilt = true;
		
		for(const review of data.reviews) {
			const node = reviewTemplate.content.cloneNode(true).firstElementChild;
			node.querySelector('.review__date').innerText = formatDate(new Date(review.inserted_at));
			const rating = node.querySelector('.review__rating');
			rating.innerHTML = rating.innerHTML.repeat(review.rating);
			node.querySelector('.review__customerName').innerText = review.customer.name;
			node.querySelector('.review__verified').classList.toggle('hidden', false);

			const title = node.querySelector('.review__title');
			if(review.title_highlighted) {
				title.innerText = review.title_highlighted;
				title.innerHTML = highlight(title.innerHTML);
			} else {
				title.innerText = review.title;
			}

			const body = node.querySelector('.review__body');
			if(review.body_highlighted) {
				body.firstElementChild.innerText = review.body_highlighted;
				body.firstElementChild.innerHTML = highlight(body.firstElementChild.innerHTML);
			} else {
				body.firstElementChild.innerText = review.body;
			}
			setTimeout(adjustDisplaySize.bind(null, body), 0);

			const button = node.querySelector('.review__readToggle');
			button.addEventListener('click', function() {
				button.innerText = body.classList.toggle('review__body--open') ? 'Read less' : 'Read more';
				adjustDisplaySize(body);
			});

			const specs = node.querySelector('.review__specs');
			const variant = data.variants[review.variant_id];
			for(const i in variant.options) {
				if(variant.options[i] == null) continue;
				const optNode = document.createElement('p');
				optNode.innerText = `${data.product.options[i].name}: ${variant.options[i]}`;
				specs.appendChild(optNode);
			}

			for(const answer of review.answers) {
				const question = data.questions[answer.question_id];
				const specNode = document.createElement('p');
				specNode.innerText = `${question.question}: ${answer.composite_value ? answer.values.join(', ') : answer.value}`;
				specs.appendChild(specNode);
			}

			const responsesContainer = node.querySelector('.review__responses');
			for(const response of review.responses) {
				const respNode = responseTemplate.content.cloneNode(true).firstElementChild;
				respNode.querySelector('.review__responseBody').innerText = response.body;

				const user = data.users[response.user_id];
				const avatar = AVATARS[response.user_id];

				const img = respNode.querySelector('.review__responseImage');
				if(avatar) {
					img.setAttribute('src', avatar.path);
					img.setAttribute('width', avatar.width);
					img.setAttribute('height', avatar.height);
				} else {
					img.classList.add('hidden');
				}
				respNode.querySelector('.review__responseName').innerText = user.name;
				respNode.querySelector('.review__responseTitle').innerText = user.title;

				responsesContainer.appendChild(respNode);
			}

			content.appendChild(node);
		}

		paginateButton.innerText = 'Show More';
		paginateButton.disabled = false;
		content.classList.remove('reviews__content--disabled');

		// if(scroll) window.scrollTo(0, content.offsetTop - document.getElementById('anchor-nav').scrollHeight);
	} catch(e) {
		console.error(e);
		errorMessage.innerText = 'There was an error loading the reviews. Please try again later.';
		errorMessage.classList.remove('hidden');
		content.classList.add('hidden');
		paginator.classList.add('hidden');
	}
}

function buildFilterMenu(questions) {
	const menu = document.getElementById('filter-menu');
	menu.querySelectorAll('[data-type=question]').forEach(function(el) {
		el.remove();
	});

	for(const question of questions) {
		if(!question.results_public || !question.enabled) continue;
		if(question.type != 'checkbox' && question.type != 'radio' && question.type != 'dropdown') continue;

		const node = filterTemplate.content.cloneNode(true).firstElementChild;
		node.setAttribute('data-id', question.id);
		const unique_id = 'filter_question_' + question.id;
		const label = node.querySelector('label');
		label.setAttribute('for', unique_id);
		label.innerText = question.question;
		const select = node.querySelector('select');
		select.setAttribute('id', unique_id);
		select.setAttribute('data-id', question.id);
		for(const option of question.options) {
			const optNode = document.createElement('option');
			optNode.innerText = option;
			optNode.setAttribute('value', option);
			select.appendChild(optNode);
		}
		menu.insertBefore(node, menu.lastElementChild);
	}
}

window.updateReviewFilters = function(event) {
	if(event.target.dataset.type == 'variant') {
		if(event.target.value == '' || !event.target.value) {
			delete variantFilters[event.target.dataset.id];
		} else {
			variantFilters[event.target.dataset.id] = event.target.value;
		}
	} else if(event.target.dataset.type == 'question') {
		if(event.target.value == '' || !event.target.value) {
			delete questionFilters[event.target.dataset.id];
		} else {
			questionFilters[event.target.dataset.id] = event.target.value;
		}
	}
	
	lastId = null;
	loadPage(lastId, false, true);
};

window.addEventListener('pjax:success', function() {
	section = document.getElementById('reviews');
	content = document.getElementById('reviews-content');
	paginator = document.getElementById('reviews-paginator');
	paginateButton = paginator.querySelector('button');
	errorMessage = document.getElementById('reviews-error');
	reviewTemplate = document.getElementById('tmpl-review');
	responseTemplate = document.getElementById('tmpl-review-response');
	filterTemplate = document.getElementById('tmpl-filter');
	searchInput = document.getElementById('reviews-search');
	searchTrigger = document.getElementById('reviews-search-trigger');
	observer = new IntersectionObserver((elements, observer) => {
		for(const el of elements) {
			if(el.isIntersecting) {
				loadPage(lastId, false, true);
				observer.disconnect();
				return;
			}
		}
	}, {rootMargin: '200px', threshold: 0});
	observer.observe(section);

	paginateButton.addEventListener('click', function() {
		loadPage(lastId, true, false);
	});


	let curSearchTerm = '';

	function submitSearch() {
		curSearchTerm = searchInput.value;
		if(searchInput.value.length > 0) {
			searchTrigger.firstElementChild.setAttribute('src', '/graphics/search_clear.svg');
		} else {
			searchTrigger.firstElementChild.setAttribute('src', '/graphics/search_glass.svg');
		}

		lastId = null;
		loadPage(lastId, false, true);
	}

	searchInput.addEventListener('keydown', function(event) {
		if(event.key === 'Enter') submitSearch();
	});

	searchTrigger.addEventListener('click', function(event) {
		if(curSearchTerm.length > 0) {
			searchInput.value = '';			
		}
		submitSearch();
	});
}, {once: true});

					})();
				</script>

				




